      <lg xml:id="hp1-1">
	<l>ādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājasaudham āroḍhum icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumatidhvānte rajayogam ajānatam/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ tu matsyendragorakṣādyā vijānate/</l> 
	<l>svātmārāmo mahāyogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendrasāgarānandabhairavāḥ/</l> 
	<l>kuraṅgīmīnagorakṣavipākṣabileśayāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī siddhabuddhaś ca kanthaḍiḥ/</l> 
	<l>koraṃtakaḥ sarānandaḥ siddhapādaś ca carpaṭiḥ//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kaṇirī sarvapādaś ca nityanātho nirañjanaḥ/</l> 
	<l>kapālī bindunāthaś ca kākacaṇḍīśvarāhayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>ahlamaprabhudevaś ca ghoḍāvolī ca ciṃviṇī /</l> 
	<l>vāsukir nāgabodhaś ca khaṇḍaḥ kāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍaṃ vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānāṃ samāśraya māṭho haṭhaḥ/</l> 
	<l>aśeṣayogayuktānāmādhāraḥkamaṭho haṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyāṃ yogināṃ siddhim icchatām/</l> 
	<l>bhaved vīryavatī guptā nirvīryā va prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānta maṭhikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragarttapiṭakaṃ nāḍayuccanīcāyataṃ/</l> 
	<l>sāṃyaṃgomayasāndraliptavimalaṃ niḥśeṣabādhojjhitam/</l> 
	<l>bāhye maṇḍapavedikoparacitaṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogahaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evavidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa mana ātmavaśaṃ nayeta//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāra prayāsaś ca prajalpo niyamagrahaḥ/</l> 
	<l>janasaṅkara laulyaṃ ca ṣaḍbhir yogaḥ praṇaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>ucchāhān niścayādvayāttattvajñānāc ca darśanāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>   </l> 
	<l>   </l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l> </l> 
	<l>  </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsana  pūrvam ucyate/</l> 
	<l>tatkuryād āsanaṃ sthairyam ārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhi motsyaṃdrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānubhyāṃmaṃtare samyak kṛtvā pādāvubhau ṛju/</l> 
	<l>samakāyaḥ samāsīnaḥ svastikaṃ capracakṣate//</l> 
      </lg> 
