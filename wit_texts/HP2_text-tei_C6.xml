<body>

<lg xml:id="hp02_001">
 <l> <s type="pada">athāsane dṛḍhe yogī</s> <s type="pada">vaśī hitamitāśanaḥ/</s></l>
<l> <s type="pada">gurūpadeśamārgeṇa</s> <s type="pada">prāṇāyāmān samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_002">
 <l> <s type="pada">cale vāte cale cittaṃ</s> <s type="pada">niścale dṛḍhabaṃdhanaṃ/</s></l>
<l> <s type="pada">yogī sthānatvam āpnoti</s> <s type="pada">tato vāyuṃnirodhayet//</s></l> 
</lg>
 
<lg xml:id="hp02_003">
 <l> <s type="pada">yāvavāyu sthito dehe</s> <s type="pada">tāvajīvanamm ucyate/</s></l>
<l> <s type="pada">maraṇaṃ tasya niṣkrānti</s><s type="pada">s tato vāyuṃ nibandhayet//</s></l> 
</lg>
 
<lg xml:id="hp02_004">
 <l> <s type="pada">malākulāsu nāḍīṣu</s> <s type="pada">māruto naiva madhyagaḥ/</s></l>
<l> <s type="pada">kathaṃ syād unmanībhāvaḥ</s> <s type="pada">kāyasiddhiḥ kathaṃ bhavet//</s></l> 
</lg>
 
<lg xml:id="hp02_005">
 <l> <s type="pada">śuddham eti yadā sarvaṃ</s> <s type="pada">nāḍīcakra malākulam/</s></l>
<l> <s type="pada">tadaiva jāyate yogī</s> <s type="pada">prāṇasaṃgrahaṇe kṣamaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_006">
 <l> <s type="pada">prāṇābhyāsaṃ tataḥ kuryān</s> <s type="pada">nityaṃ sāttvikayā dhiyā/</s></l>
<l> <s type="pada">yathā suṣumṇāpārśvasthā</s> <s type="pada">malā śoṣaṃ prayānti ca//</s></l> 
</lg>
 
<lg xml:id="hp02_007">
 <l> <s type="pada">baddhapadmāsano yogī</s> <s type="pada">prāṇaṃ candreṇa recayet/</s></l>
<l> <s type="pada">dhārayitvā yathāśaktiḥ</s> <s type="pada">punaḥ sūryeṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_008">
 <l> <s type="pada">prāṇaṃ sūryeṇa cākṛṣya</s> <s type="pada">pūrayed udaraṃ śanaiḥ/</s></l>
<l> <s type="pada">vidhidṛkt kumbhakaṃ kṛtvā</s> <s type="pada">punaś candreṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_009">
 <l> <s type="pada">yena tyajet tena pītvā</s> <s type="pada">dhārayed aanirodhataḥ/</s></l>
<l> <s type="pada">recayec ca tato’nyena</s> <s type="pada">śanair eva na vegataḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_010">
 <l> <s type="pada">prāṇaṃ ced iḍiyā piben niyamitaṃ bhūyo’nyayā recayet</s></l>
<l> <s type="pada">pītvā piṅgalayā samīraṇam atho badhvāsanaḥ sarvadā/</s></l>
<l> <s type="pada"> bhyāsaṃ sadātanvatāṃ</s></l>
<l> <s type="pada">śuddhā nāḍīgaṇā bhavanti yamināṃ māsatrayād ūrdhvataḥ//</s><anchor xml:id="II10"/></l> 
</lg>
 
<lg xml:id="hp02_011">
 <l> <s type="pada">prātaḥ sāyaṃ ca madhyāhne</s><s type="pada">niśīthe caiva kumbhakān/</s></l>
<l> <s type="pada">śanair aśītiparyantaṃ</s> <s type="pada">caturvāraṃ samabhyaset//</s>
</l> 
</lg>
 
<lg xml:id="hp02_012">
 <l> <s type="pada">kanīyasi bhavet svedaḥ</s> <s type="pada">kampo bhavati madhyame/</s></l>
<l> <s type="pada">uttānaṃcottame prāṇa</s><s type="pada">rodhe padmāsane muhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_013">
 <l> <s type="pada">jalena śramajātena</s> <s type="pada">gātramardanam ācaret/</s></l>
<l> <s type="pada">dṛḍhatā laghutā caiva</s> <s type="pada">tena gātrasya jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_014">
 <l> <s type="pada">abhyāsakāle prathamaṃ</s> <s type="pada">śastaṃ kṣīrājyabhojanam/</s></l>
<l> <s type="pada">tato’bhyāse dṛḍhībhūte</s> <s type="pada">na tathāniyamagrahaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_015">
 <l>found between 2.9 and 2.10<s type="pada">yathā siṃho gajo vyāghro</s> <s type="pada">bhaved vaśyaṃ śanaiḥ śanaiḥ/</s></l>
<l> <s type="pada">tathaiva sevito vāyur</s> <s type="pada">anyathā hanti sādhakam//</s></l> 
</lg>
 
<lg xml:id="hp02_016">
 <l> <s type="pada">prāṇāyāmena yuktena</s> <s type="pada">sarvarogakṣayo bhavet/</s></l>
<l> <s type="pada">ayuktābhyāsayogena</s> <s type="pada">sarvarogasamudbhavaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_017">
 <l> <s type="pada">hikkā &lt;&lt;svāsasa&gt;&gt; kāsaś ca</s> <s type="pada">śiraḥkarṇākṣivedanā/</s></l>
<l> <s type="pada">bhavanti vividhā doṣā</s> <s type="pada">pavanasya vyatikramāt//</s></l> 
</lg>
 
<lg xml:id="hp02_018">
 <l> transposed with the next verse<s type="pada">yuktaṃ yuktaṃ tyajed vāyuṃ</s> <s type="pada">yuktaṃ yuktaṃ ca pūrayet/</s></l>
<l> <s type="pada">yuktaṃ yuktaṃ ca badhnīyād</s> <s type="pada">evaṃ siddhim avāpnuyāt//</s></l> 
</lg>
 
<lg xml:id="hp02_019">
 <l> <s type="pada">yadā tu nāḍī śuddhā syāt</s> <s type="pada">tadā cihnāni bāhyataḥ/</s></l>
<l> <s type="pada">kāyasya kṛśatā kānti</s><s type="pada">s tathā jāyeta niścitam//</s></l> 
</lg>
 
<lg xml:id="hp02_020">
 <l> <s type="pada">yatheṣṭaṃ dhāraṇaṃ vāyor</s> <s type="pada">analasya pradīpanam/</s></l>
<l> <s type="pada">nādābhivyaktir ārogyaṃ</s> <s type="pada">jāyate nāḍiśodhanāt</s> 
</l> 
</lg>
 
<lg xml:id="hp02_021">
 <l> <s type="pada">medaḥśleṣmādhikaḥ pūrvaṃ</s> <s type="pada">ṣaṭ karmāṇi samācaret/</s></l>
<l> <s type="pada">anyas tu nācaret tāni</s> <s type="pada">doṣāṇāṃ samabhāgataḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_022">
 <l> <s type="pada">dhautir bastis tathā neti</s><s type="pada">s trāṭakaṃ naulikā tathā/</s></l>
<l> <s type="pada">kapālabhātī caitāni</s> <s type="pada">ṣaṭ karmāṇi samācaret//</s></l> 
</lg>
 
<lg xml:id="hp02_023">
 <l> <s type="pada">ṣaṭkakarmam idaṃ gopyaṃ</s> <s type="pada">ghaṭaśodhanakārakam/</s></l>
<l> <s type="pada">vicitraguṇasaṃdhāya</s> <s type="pada">pūjyate yogipuṅgavaiḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp02_024">
 <l> <s type="pada">caturaṅgulavistāraṃ</s>
 <s type="pada">siktaṃ vastraṃ śanair graset/</s></l>
<l> <s type="pada">tataḥ pratyāharec caita</s><s type="pada">prakṣālyaṃ dhautikarma tat//</s></l> 
</lg>
 
<lg xml:id="hp02_025">
 <l> <s type="pada">kāsaśvāsaplīhakuṣṭha</s> <s type="pada">kapharogāś ca viṃśatiḥ/</s></l>
<l> <s type="pada">dhautikarmaprasādena</s> <s type="pada">prayānty eva na saṃśayaḥ//</s><anchor xml:id="VuII25"/></l> 
</lg>
 
 
<lg xml:id="hp02_026">
 <l> <s type="pada">nābhidaghna jale pāyuṃ</s><s type="pada">nyastanālotkaṭāsanaḥ/</s></l>
<l> <s type="pada">ādhārakuñcanaṃ kuryāt</s> <s type="pada">prakṣāled bastikarma tat//</s></l> 
</lg>
 
<lg xml:id="hp02_027">
 <l> <s type="pada">gulmaplīhodaraṃ cāpi</s> <s type="pada">vātapittakaphodbhavāḥ/</s></l>
<l> <s type="pada">bastikarmaprabhāvena</s> <s type="pada">vāryante sakalāmayāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_028">
 <l> <s type="pada">dhātvindriyāntaḥkaraṇaprasādaṃ</s></l>
<l> <s type="pada">dadyāc ca kāntiṃ dahanapradīptim/</s></l>
<l> <s type="pada">aśeṣadoṣopacayaṃ nihanyā</s>-</l>
<l> <s type="pada">d abhyasyamānaṃ jalabastikarma//</s></l> 
</lg>
 
<lg xml:id="hp02_029">
 <l><s type="pada">udaragatapadārthaudvahanti</s></l>
<l> <s type="pada">pavanam apānam udīrya kaṇṭhanāle/</s></l>
<l> <s type="pada">kramaparicayavaśyanāḍīmārgā-</s></l>
<l> <s type="pada">gajakariṇīti nigadyate haṭhajñaiḥ//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_030">
 <l> <s type="pada">sūtraṃ vitastisusnigdhaṃ</s> <s type="pada">nāsānāle praveśayet/</s></l>
<l> <s type="pada">mukhe nirgamayec caiṣā</s> <s type="pada">neti siddhair nigadyate//</s></l> 
</lg>
 
<lg xml:id="hp02_031">
 <l> <s type="pada">kapālaśodhinī caiva</s> <s type="pada">divyadṛṣṭipradāyinī/</s></l>
<l> <s type="pada">jatrūrdhvajātarogaughaṃ</s> <s type="pada">jayaty āśu sunetikā//</s></l> 
</lg>
 
 
<lg xml:id="hp02_032">
 <l> <s type="pada">nirīkṣen niścaladṛśā</s> <s type="pada">sūkṣmalakṣaṃ samāhitaḥ/</s></l>
<l> <s type="pada">aśrusaṃpātaparyanta</s><s type="pada">m ācāryaitrāṭakaṃ smṛtam//</s></l> 
</lg>
 
<lg xml:id="hp02_033">
 <l> <s type="pada">trāṭakaṃ netrarogāṇāṃ</s> <s type="pada">tandrādīnāṃ kapāṭakam/</s></l>
<l> <s type="pada">yatnata</s><s type="pada">s trāṭakaṃ gopyaṃ yathā hāṭakapeṭakam//</s></l> 
</lg>
 
 
<lg xml:id="hp02_034">
 <l> <s type="pada">amandāvartavegena</s> <s type="pada">tudaṃ savyāpasavyataḥ/</s></l>
<l> <s type="pada">natāṃśur bhrāmayed eṣā</s> <s type="pada">naulī gaulaiḥ praśasyate//</s></l> 
</lg>
 
<lg xml:id="hp02_035">
 <l> <s type="pada">tuṃḍāgnisaṃdīpanapācanādi</s>-</l>
<l><s type="pada">sandhāyikānandakarī sadaiva/</s></l>
<l> <s type="pada">aśeṣadoṣāmayaśoṣaṇī ca</s></l>
<l> <s type="pada">haṭhakriyāmaulir iyaṃ ca naulī//</s></l> 
</lg>
 
 
<lg xml:id="hp02_036">
 <l> <s type="pada">bhastreva lohakārasya</s> <s type="pada">recapūrau sasaṃbhramau/</s></l>
<l> <s type="pada">kapālabhātī vikhyātā</s> <s type="pada">kaphadoṣaviśodhinī//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_037">
 <l> <s type="pada">ṣaṭkarmabhir gatasthaulya</s><s type="pada">kaphamedomalādikaḥ/</s></l>
<l> <s type="pada">prāṇāyāmaṃ tataḥ kuryād</s> <s type="pada">anāyāsena sidhyati//</s></l> 
</lg>
 
<lg xml:id="hp02_038">
 <l> <s type="pada">prāṇāyāmair eva sarve</s> <s type="pada">praśuṣyanti malā iti/</s></l>
<l> <s type="pada">ācāryāṇāṃ tu keṣāṃci</s><s type="pada">d anyat karma na saṃmatam//</s></l> 
</lg>
 
<lg xml:id="hp02_039">
 <l> <s type="pada">brahmādayo’pi tridaśāḥ</s> <s type="pada">pavanābhyāsatatparāḥ/</s> 

</l>
<l> <s type="pada">abhūvann antakabhayāt</s> <s type="pada">tasmāt pavanam abhyaset//</s> 

<anchor xml:id="III39"/></l> 
</lg>
 
<lg xml:id="hp02_040">
 <l> <s type="pada">yāvad baddho marud dehe</s> <s type="pada">yāvac cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">yāvaīkṣet bhruvor madhye</s> <s type="pada">tāvat kālabhayaṃ kutaḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp02_041">
 <l> <s type="pada">vidhivat prāṇasaṃyāmai</s><s type="pada">nārīcakre viśodhite/</s></l>
<l> <s type="pada">suṣumṇāvadanaṃ bhittvā</s> <s type="pada">sukhād viśati mārutaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_042">
 <l> <s type="pada">māruto madhyasaṃcāre</s> <s type="pada">manaḥsthairyaṃ prajāyate/</s></l>
<l> <s type="pada">yo manaḥsthirībhāva</s> <s type="pada">saiṣāvasthā manonmanī//</s></l> 
</lg>
 
<lg xml:id="hp02_043">
 <l> <s type="pada">tatsādhana vidhijñās tu</s><s type="pada"> citrākurvanti kumbhakān/</s></l>
<l> <s type="pada">vicitrakumbhakābhyāsā</s><s type="pada">d vicitrāṃ siddhim āpnuyāt//</s></l> 
</lg>
 
 
<lg xml:id="hp02_044">
 <l> <s type="pada">sūryabhedanam ujjāyī</s> <s type="pada">tathā śītkāraśītalī/</s></l>
<l><s type="pada">bhastrikā bhramarī mūrchā</s> <s type="pada">pratvanīty aṣṭa kumbhakāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_045">
 <l> <s type="pada">pūrakānte tu kartavyo</s> <s type="pada">bandho jālandharābhidhaḥ/</s></l>
<l> <s type="pada">kumbhakānte recakādau</s> <s type="pada">kartavyatuḍiyānakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_046">
 <l> <s type="pada">adhastākuṃcanenāsuṃ</s> <s type="pada">kaṇṭhasaṃkocane kṛte/</s></l>
<l> <s type="pada">madhye paścimatānena</s> <s type="pada">syāt prāṇo brahmanāḍikām//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp02_047">
 <l> <s type="pada">apānam ūrdhvam utthāpya</s> <s type="pada">prāṇaṃ kaṇṭhād adho nayet/</s></l>
<l> <s type="pada">yogī jarāvimuktaḥ san</s> <s type="pada">ṣoḍaśo vayasā
 bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp02_048">
 <l> <s type="pada">āsane sukhade yogī</s> <s type="pada">baddhvā vajrāsanaṃ tataḥ/</s></l>
<l> <s type="pada">dakṣanāḍyā samākṛṣya</s> <s type="pada">bahiḥsthaṃ pavanaṃ śanaiḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_049">
 <l> <s type="pada">ā keśād ā nakhāgrāc ca</s> <s type="pada">nirodhāvadhi kumbhayet/</s></l>
<l> <s type="pada">tataḥ śanaiḥ savyanāḍyā</s> <s type="pada">recayet pavanaṃ sudhīḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_050">
 <l> <s type="pada">kapālaśodhanaṃ vāta</s><s type="pada">doṣaghnaṃ kṛmidoṣahṛt/</s></l>
<l> <s type="pada">punaḥ punar idaṃ kāryaṃ</s> <s type="pada">sūryabhedam udāhṛtaṃ// </s></l> 
</lg>
 
 
<lg xml:id="hp02_051">
 <l> <s type="pada">mukhaṃ saṃyamya nāḍībhyām</s> <s type="pada">ākṛṣya pavanaṃ śanaiḥ/</s></l>
<l> <s type="pada">yathā lagatu kaṇṭhāt tu</s> <s type="pada">hṛtpadmāvadhi niḥsvanam//</s></l> 
</lg>
 
<lg xml:id="hp02_052">
 <l> <s type="pada">pūrvatu kumbhayet prāṇaṃ</s> <s type="pada">recayed iḍayā tataḥ/</s></l>
<l> <s type="pada">śleṣādoṣaharaṃ kaṇṭhe</s> <s type="pada">dehānalavivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_053">
 <l> <s type="pada">nāḍījalodara dhātu</s><s type="pada">gatadoṣavināśanam/</s></l>
<l> <s type="pada">gacchatas tiṣṭhataḥ kāryaṃ</s> <s type="pada">ujjāyyākhyaṃ tu kumbhakam</s>//</l> 
</lg>
 
 
<lg xml:id="hp02_054">
 <l> <s type="pada">śītkāṃ kuryāttathā vaktre</s> <s type="pada">ghrāṇe caiva vijṛmbhikām/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">kāmadevo dvitīyakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_055">
 <l> <s type="pada">yoginīcakrasevyas tu</s> <s type="pada">sṛṣṭisaṃhārakārakaḥ/</s></l>
<l> <s type="pada">na kṣudhā na tṛṣā nidrā</s> <s type="pada">naivālasyaṃ prajāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_056">
 <l> <s type="pada">bhavet svacchandadehaś ca</s> <s type="pada">sarvopadravavarjitaḥ/</s></l>
<l> <s type="pada">anena vidhinā satyaṃ</s> <s type="pada">yogīndro bhuvimaṇḍale//</s></l> 
</lg>
 
 
<lg xml:id="hp02_057">
 <l> <s type="pada">rasanātāluyogena</s> <s type="pada">yaḥ prāṇaṃ satataṃ pibet/</s></l>
<l> <s type="pada">abdārdhena bhavet tasya</s> <s type="pada">sarvarogaparikṣayaḥ//</s><anchor xml:id="II57"/> 
</l> 
</lg>
 
 
<lg xml:id="hp02_058">
 <l> <s type="pada">jihvayā vāyum ākṛṣya</s> <s type="pada">pūrvavat kumbhakād anu/</s></l>
<l> <s type="pada">śanais tu ghrāṇarandhrābhyāṃ</s> <s type="pada">recayed anilaṃ sudhīḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_059">
 <l> <s type="pada">gulmaplīhādikān doṣān</s> <s type="pada">jvaraṃ pittaṃ kṣudhāṃ tṛṣāṃ/</s></l>
<l> <s type="pada">nāśinī śītalī nāma</s> <s type="pada">kumbhako’yaṃ nihanti ca//</s></l> 
</lg>
 
 
<lg xml:id="hp02_060">
 <l> <s type="pada">ūrvor upari saṃsthāpya</s> <s type="pada">ubhe pādatale tathā/</s></l>
<l> <s type="pada">padmāsanaṃ bhaveetat</s> <s type="pada">sarvapāpapraṇāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_061">
 <l> <s type="pada">samyak padmāsanaṃ baddhvā</s> <s type="pada">samagrīvodaraḥ sudhīḥ/</s></l>
<l> <s type="pada">mukhaṃ saṃyamya yatnena</s> <s type="pada">prāṇaṃ ghrāṇena recayet//</s>
</l> 
</lg>
 
<lg xml:id="hp02_062">
 <l> <s type="pada">yathā lagati hṛtkaṇṭha</s> <s type="pada">kapālā° °vadhi niḥsvanaṃ/</s></l>
<l> <s type="pada">vegena pūrayet kiṃcit</s> <s type="pada">hṛtpadmāvadhi mārutam//</s></l> 
</lg>
 
<lg xml:id="hp02_063">
 <l> <s type="pada">punar virecayet tadva</s><s type="pada">t pūrayec ca punaḥ punaḥ/</s></l>
<l> <s type="pada">yathaiva lohakārāṇāṃ</s> <s type="pada">bhastrā vegena cālyate//</s></l> 
</lg>
 
<lg xml:id="hp02_064">
 <l> <s type="pada">tathaiva svaśarīrasthaṃ</s> <s type="pada">cālayet pavanaṃ dhiyā/</s><anchor xml:id="II64"/></l>
<l> <s type="pada">yadā śramo bhaved dehe</s> <s type="pada">tadā sūryeṇa pūrayet//</s></l> 
</lg>

<lg xml:id="hp02_065">
 <l> <s type="pada">yathodaraṃ bhavet pūrṇaṃ</s> <s type="pada">pavanena tathā laghu/</s></l>
<l> <s type="pada">dhārayenāsikā madhye</s><s type="pada">tarjanībhyāṃ vinā dṛḍham//</s></l> 
</lg>
 
<lg xml:id="hp02_066">
 <l> <s type="pada">kumbhakaṃ pūrvavat kṛtvā</s> <s type="pada">recayed iḍayānilam/</s></l>
<l> <s type="pada">vātapittaśleṣmaharaṃ</s> <s type="pada">śarīrāgnivivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_067">
 <l> <s type="pada">kuṇḍalībodhanaṃ karttur</s> <s type="pada">bhavaghnaṃ sukhadaṃ śubham/</s></l>
<l> <s type="pada">brahmanāḍīmukhe saṃsthaṃ</s><s type="pada">kaphaughagalanāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_068">
 <l> <s type="pada">samyaantaḥsamudbhūta</s><s type="pada">granthitrayavibhedanaṃ//</s></l>
<l> <s type="pada">viśeṣeṇaiva kartavyaṃ</s> <s type="pada">bhastrākhyaṃ kumbhakaṃ tv idam//</s> 
 </l> 
</lg>
 
 
<lg xml:id="hp02_069">
 <l> <s type="pada">vegodghoṣaṃ pūrakaṃ bhṛṅganādaṃ</s></l>
<l> <s type="pada">bhṛṅgīnādaṃ recakaṃ mandamandam/</s></l>
<l> <s type="pada">yogīndrāṇām evam abhyāsayogā-</s></l>
<l> <s type="pada">c citte jātā kācid ānandalīlā//</s></l>
</lg>
 
 
<lg xml:id="hp02_070">
 <l> <s type="pada">pūrakānte ghaṭataraṃ</s> <s type="pada">baddhvā jālandharaṃ śanaiḥ/</s></l>
<l> <s type="pada">recayen mūrchanākhyeyaṃ</s> <s type="pada">manomūrchāsukhapradā//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_071">
 <l> <s type="pada">antaḥpravartitodgāra</s><s type="pada">mārutāpūritodaraḥ/</s></l>
<l> <s type="pada">payasy agādhe’pi sukhāt</s> <s type="pada">plavate padmapatravat</s>// 
</l> 
</lg>
 
 
 
<lg xml:id="hp02_072">
 <l> <s type="pada">prāṇāyāmas tridhā prokto</s> <s type="pada">recapūrakakumbhakaiḥ/</s></l>
<l> <s type="pada">sahitaḥ kevalaś caiva</s> <s type="pada">kumbhako dvividho mataḥ/</s> 
</l> 
</lg>
 
<lg xml:id="hp02_073">
 <l> <s type="pada">virecya pūrakaḥ kāryaḥ</s> <s type="pada">śanaiḥ sahitakumbhakaḥ/</s> 
</l>
<l> <s type="pada">yāvat kevalasiddhiḥ syāt</s> <s type="pada">tāvat sahitam abhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_074">
 <l> <s type="pada">recakaṃ kuṃbhakaṃ muktvā</s> <s type="pada">sukhaṃ yad vāyudhāraṇam/</s></l>
<l> <s type="pada">prāṇāyāmo’yam ity uktaḥ</s> <s type="pada">sa vai kevalakumbhakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_075">
 <l> <s type="pada">kevale kumbhake siddhe</s> <s type="pada">recapūrakavarjite/</s></l>
<l> <s type="pada">na tasya durlabhaṃ kiṃcit</s> <s type="pada">triṣu lokeṣu vidyate//</s></l> 
</lg>
 
<lg xml:id="hp02_076">
 <l> <s type="pada">śaktaḥ kevalakumbhena</s> <s type="pada">yatheṣṭaṃ vāyudhāraṇam/</s></l>
<l> <s type="pada">rājayogapadaṃ caiva</s> <s type="pada">labhyate nātra saṃśayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_077">
 <l> <s type="pada">haṭhaṃ vinā rājayogo</s> <s type="pada">rājayogaṃ vinā haṭhaḥ/</s></l>
<l> <s type="pada">na sidhyati tato yugma</s><s type="pada">m ā niṣpatteḥ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_078">
 <l> <s type="pada">tad etatprāṇarecānte</s> <s type="pada">kuryāc cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">rājayogapadaṃ vrajet//</s> 
</l> 
</lg>
 

<lg xml:id="hp02_079">
 <l><s type="pada">kumbhakāt kuṇḍalībodhaḥ</s> <s type="pada">kuṇḍalībodhato bhavet/</s></l>
<l> <s type="pada">anargalā suṣumṇā ca</s> <s type="pada"> haṭhasiddhiś ca jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_080">
 <l> <s type="pada">vapuḥkṛśatvaṃ vadane prasannatā</s></l>
<l> <s type="pada">nādasphuṭatvaṃ nayane sunirmale/</s></l>
<l> <s type="pada">arogyatā bindujayo’gnidīpanaṃ</s> </l>
<l> <s type="pada">nāḍīviśuddhir haṭhasiddhilakṣaṇam//</s></l> 
</lg>
 <div type="colophon" xml:id="hp02_col"><p> iti  haṭhapradīpikāyāṃ upadeśaḥ// </p></div> 
