<body>
<div type="altrec">
</div> <div type="altrec">
<lg xml:id="hp04_000*1">
 <l> <s type="pada">namaḥ śivāya gurave</s> <s type="pada">nādabindulayātmane/</s></l>
<l> <s type="pada">nirañjanapadaṃ yāti</s> <s type="pada">nityaṃ yatraparāyaṇaḥ//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*2">
 <l> <s type="pada">athedānīṃ pravakṣyāmi</s> <s type="pada">samādhikramam uttamam/</s></l>
<l> <s type="pada">mṛtyughnaṃ ca sukhopāyaṃ</s> <s type="pada">brahmānandakaraṃ param//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*3">
 <l><s type="pada">rājayogaḥ samādhiḥ syād</s> <s type="pada">unmanī ca manonmanī/</s></l>
<l><s type="pada">amaraugho layes tattvaṃ</s> <s type="pada">śūnyāśūnyaṃ paraṃ padaṃ//</s><anchor xml:id="synonym3"/> 
 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*4">
 <l><s type="pada">amanaskaṃ tathādvaitaṃ</s> <s type="pada">nirālambaṃ nirañjanam/</s></l>
<l><s type="pada">jīvanmuktiś ca </s> <s type="pada">turyaṃ cittaikavācakam//</s><anchor xml:id="synonym4"/> 
 

</l> 
</lg>
</div>  <div type="altrec">
<lg xml:id="hp04_000*5">
 <l> <s type="pada">salile saindhavaṃ yadvat</s> <s type="pada">sāmyaṃ bhavati yogataḥ/</s></l>
<l> <s type="pada">tathātmamanasor aikyaṃ</s> <s type="pada">samādhiḥ so’bhidhīyate//</s><anchor xml:id="salile"/></l> 
</lg>
</div> 
<div type="altrec">
<lg xml:id="hp04_000*6">
 <l><s type="pada">yat samatvaṃ dvayor eva</s> <s type="pada">jīvātmaparamātmanoḥ/</s></l>
<l><s type="pada">samastanaṣṭasaṃkalpaḥ</s> <s type="pada">samādhiḥ so’bhidhīyate//</s> 
<anchor xml:id="yatsamatvam"/>
</l> 
</lg>
</div>  <div type="altrec">
<lg xml:id="hp04_000*7">
 <l> <s type="pada">rājayogasya mahā</s> <s type="pada">ko vā jānāti tattvataḥ/</s></l>
<l> <s type="pada">crux jñānamuktis tato siddhicrux r</s> <s type="pada">guruvākyena labhyate//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*8">
 <l> <s type="pada">durlabho viṣayatyāgo</s> <s type="pada">durlabhaṃ tattvadarśanam/</s></l>
<l> <s type="pada">durlabhā sahajāvasthā</s> <s type="pada">sadguroḥ karuṇāṃ vinā//</s></l> 
</lg>
</div> 
 <div type="altrec">
<lg xml:id="hp04_000*9">
 <l> <s type="pada">vividhaiāsanaḥ kumbhai</s><s type="pada">r vicitrakaraṇair atha/</s></l>
<l> <s type="pada">prabuddhāyāidaṃśaktau</s> <s type="pada">prāṇaḥ śūnye pralīyate//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*10">
 <l> <s type="pada">utpannaśaktibodhaś ca</s> <s type="pada">tyaktaniḥśeṣakarmaṇaḥ/</s> 
</l>
<l> <s type="pada">yoginaḥ sahajāvasthā</s> <s type="pada">svayaeva prakāśate//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*11">
 <l> <s type="pada">suṣumṇāvāhini prāṇe</s> <s type="pada">śūnyaṃ viśati mārute/</s></l>
<l> <s type="pada">tadā samastakarmāṇi</s> <s type="pada">nimūlayati karmavit//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*12">
 <l> <s type="pada">amaraugha namas tubhyaṃ</s> <s type="pada">so’pi kālas tvayā hataḥ/</s></l>
<l> <s type="pada">patitaṃ vadane yasya</s> <s type="pada">jagad etac carācaram//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*13">
 <l> <s type="pada">citte śamatvamm āpanne</s> <s type="pada">vāyo vrajati madhyame/</s></l>
<l> <s type="pada">tadāmaroḷivajrolis</s> <s type="pada">tadāśājīvite’pi ca//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*14">
 <l> <s type="pada">jñānaṃ kuto manasi jīvati durvikalpe</s></l>
<l> <s type="pada">prāṇe’pi jīvati mano miyata na yāvat/</s></l>
<l> <s type="pada">prāṇo mano dvayam idaṃ na vilī° °yate tra</s></l>
<l> <s type="pada">mokṣaṃ na gacchati naro na kathaṃcid anyaḥ//</s></l> 
</lg>
</div> 
 <div type="altrec">
<lg xml:id="hp04_000*15">
 <l> <s type="pada">rasaś ca manasaś caiva</s> <s type="pada">cañcalatvaṃ svabhāvataḥ/</s></l>
<l> <s type="pada">rasa baṃdhe mano baṃdhe</s> <s type="pada">kiṃ na sidhyati bhūtale//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_000*16">
 <l> <s type="pada">mūrcchito harate vyādhiṃ</s> <s type="pada">mṛto jīvayate svayaṃ/</s></l>
<l> <s type="pada">baddhaḥ khecaratāṃ dhatte</s> <s type="pada">raso vāyuś ca bhairavī//</s></l> 
</lg>
</div> 
 
 
<lg xml:id="hp04_001">
 <l> <s type="pada">indriyāṇāṃ mano nātho</s> <s type="pada">manonāthaś ca mārutaḥ/</s></l>
<l> <s type="pada">mārutasya layo nātha</s><s type="pada">s taṃ nāthaṃ layam āśrayet//</s></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_001*1">
 <l> <s type="pada">so’yam evāstu mokṣākhyo</s> <s type="pada">māstu vāpi matāntare/</s></l>
<l> <s type="pada">manaḥprāṇalayānando</s> <s type="pada">mayi kaścipravartate//</s> 
</l> 
</lg>
</div> 
<lg xml:id="hp04_002">
 <l> <s type="pada">praṇaṣṭocchvāsaniśvāsaḥ</s> <s type="pada">pradhvastaviṣayajvaraḥ/</s></l>
<l> <s type="pada">niśceṣṭā nirvikāraś ca</s> <s type="pada">layo jayati yoginām//</s></l> 
</lg>
 
<lg xml:id="hp04_003">
 <l> <s type="pada">ucchinnaḥsarvasaṃkalpo</s> <s type="pada">niḥśeṣāśeṣavarjitaḥ/</s></l>
<l> <s type="pada">svānugamyo layaḥ ko’pi</s> <s type="pada">jāyatāṃ vāggagocaraḥ//</s></l> 
</lg>
 
<lg xml:id="hp04_004">
 <l> <s type="pada">yatra dṛṣṭir layas tatra</s> <s type="pada">bhūtendriyasanātanaḥ/</s></l>
<l> <s type="pada">sā śaktir bhāvabhūtānāṃ</s> <s type="pada">dṛṣṭelakṣaṃ layaṃ gatau//</s><anchor xml:id="yatradrsti"/></l> 
</lg>
 
 
<lg xml:id="hp04_005">
 <l> <s type="pada">vedaśāstrapurāṇāni</s> <s type="pada">sāmānyagaṇikā iva/</s></l>
<l> <s type="pada">ekaiva śāṃbhavī māyā</s> <s type="pada">sarvatantreṣu gopitā//</s><anchor xml:id="vedasastra"/> 
</l> 
</lg>
 
<lg xml:id="hp04_006">
 <l> <s type="pada">anta r dṛṣṭi</s><s type="pada">varjitā/</s></l>
<l> <s type="pada"> śāṃbhavī mudrā</s> <s type="pada"> gopitā//</s><anchor xml:id="gopita"/> 
 
</l> 
</lg>
 
<lg xml:id="hp04_007">
 <l> <s type="pada">antalakṣavilīnacittapavano yogī yadā vartate</s></l>
<l> <s type="pada">dṛṣṭyā niścalatārayā bahir adhaḥ paśyann apaśyann api/</s></l>
<l> <s type="pada">mudre khalu śāṃbhavī bhavati sā yuṣmatprasādād guro</s></l>
<l> <s type="pada">śūnyāśūnyavivarjitaṃ sphurati yat tattvaṃ padaṃ śāṃbhavam//</s><anchor xml:id="antarlaksya"/></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_007_1">
 <l> <s type="pada">ardhodghāṭitalocanaḥ sthiramanā nāsāgradattekṣaṇaḥ</s></l>
<l> <s type="pada">candrārkāv api līnatām upanayen niṣpandabāṣpaṃ tataḥ/</s></l>
<l> <s type="pada">jyotīrūpaviśeṣabāhyarahitaṃ dedīpyamānaṃ paraṃ</s></l>
<l> <s type="pada">tattvaṃ taparam asti vastu paramaṃ vācyaṃ kim atrādhikam//</s><anchor xml:id="ardhogha"/> 
</l>
<l>
</l> 
</lg>
</div> 
<lg xml:id="hp04_008">
 <l> <s type="pada">śrīśāṃbha</s> <s type="pada">/</s> 
</l>
<l> <hi rend="grey"><s type="pada">bhavec cittalayānandaḥ</s> <s type="pada">śūnye citsukharūpiṇi//</s> 
</hi></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_008_1">
 <l> <s type="pada">tāre jyotiṣi saṃyojya</s> <s type="pada">kiṃciunnamayed bhruvau/</s> 
</l>
<l> <s type="pada">pūrvayogasya mārgo’ya</s><s type="pada">m unmanīkaraṇaṃ kṣaṇāt//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_2">
 <l> <s type="pada">kecid āgamajālena</s> <s type="pada">kecinimasaṃkule/</s></l>
<l> <s type="pada">kecit tarkeṇa muhyanti</s> <s type="pada">naiva jānanti tārakam//</s> 
<anchor xml:id="kecid"/></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_3">
 <l> <s type="pada">  merumūle </s></l>
<l> <s type="pada">tattvaṃ caitat pravadati  nimnagānām/</s></l>
<l> <s type="pada">candrā  s tena mṛtyur narāṇāṃ</s></l>
<l> <s type="pada"> nānyathā //</s> 
 
<anchor xml:id="patala"/></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_4">
 <l> <s type="pada">yat kiṃcit sravate candrād</s> <s type="pada">amṛtaṃ divyarūpiṇaḥ/</s></l>
<l> <s type="pada">tat sarvaṃ grasate sūryas</s> <s type="pada">tena piṇḍaṃ jarāyutaṃ//</s> 
 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_5">
 <l> <s type="pada">tatrāsti karaṇaṃ divyaṃ</s> <s type="pada">sūryasya paribandhanaṃ/</s></l>
<l> <s type="pada">gurūpadeśato jñeyaṃ</s> <s type="pada">na tu śāstrārthakoṭibhiḥ//</s> 
 
</l> 
</lg>
</div> 
 <div type="altrec">
<lg xml:id="hp04_008_6">
 <l> <s type="pada">divā na pūjayel liṅgaṃ</s> <s type="pada">rātrau liṃgaṃ na pūjayet/</s></l>
<l> <s type="pada">satataṃ pūjayel liṅgaṃ</s> <s type="pada">divārātrau na pūjayet//</s></l> 
</lg>
</div> <div type="altrec">
</div> <div type="altrec">
<lg xml:id="hp04_008_7">
 <l> <s type="pada">dṛṅmukhaṃ jñānajaṃnakaṃ</s> <s type="pada">pañcasrotaḥsamanvitam/</s></l>
<l> <s type="pada">tiṣṭhate khecarī mudrā</s> <s type="pada">tasmāc chūnye nirañjane//</s> 
 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_8">
 <l> <s type="pada">savyadakṣiṇanāḍīstho</s> <s type="pada">madhyacaritamāruta/</s></l>
<l> <s type="pada">tiṣṭhate khecarī mudrā</s> <s type="pada">tasmin sthāne na saṃśayaḥ//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_9">
 <l> <s type="pada">cittaṃ carati khe yasmāj</s> <s type="pada">jihvā carati vegataḥ/</s></l>
<l> <s type="pada">tenaiṣā khecarī mudrā</s> <s type="pada">satyaṃ siddhainigadyate//</s> 
 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_10">
 <l> <s type="pada">iḍāpiṅgalayo</s> <s type="pada">  /</s></l>
<l> <s type="pada"> khecarī mudrā</s> <s type="pada">//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_11">
 <l> <s type="pada">candrasūryadvayorr madhye</s> <s type="pada">nirālambe tale punaḥ/</s></l>
<l> <s type="pada">saṃsthitā vyomacakre yā</s> <s type="pada">sā mudrā nāma khecarī//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_12">
 <l> <s type="pada">sā mayodve .itā vāmā</s> <s type="pada">sākṣāc ca śivavallabhā/</s></l>
<l> <s type="pada">pūrayen mārutaṃ divyaṃ</s> <s type="pada">suṣumṇā paścime mukhe//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_13">
 <l> <s type="pada">purastāc caiva pūryeta</s> <s type="pada">niścitā khecarī bhavet/</s></l>
<l> <s type="pada"></s><s type="pada"> //</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_14">
 <l> <s type="pada">abhyasatkhecarī mudrāṃ</s><s type="pada">tāvatt syād yoganidritaḥ/</s></l>
<l> <s type="pada">saṃprāptayoganidrasya</s> <s type="pada">kālo nāsti kadācana//</s>
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_15">
 <l> <s type="pada">bhruvor madhye śivasthānaṃ</s> <s type="pada">manas tatra vilīyate/</s></l>
<l> <s type="pada">jñātavyaṃ tat padaṃ turyaṃ</s> <s type="pada">yatra kālo na vidyate//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_16">
 <l> <s type="pada">candrasūryadvayor madhye</s> <s type="pada">mudrāṃ dadyāc ca khecarīm/</s></l>
<l> <s type="pada">nirālambaṃ mahāśūnyaṃ</s> <s type="pada">vyomacakraṃ vyavasthitaṃ//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_17">
 <l> <s type="pada">nirālambaṃ manaḥ kṛtvā</s> <s type="pada">na kiṃcid api cintayet/</s></l>
<l> <s type="pada">sabāhyābhyantare vyomni</s> <s type="pada">ghaṭavat tiṣṭhate dhruvam//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_18">
 <l> <s type="pada">bāhyavāyur yadā līnaḥ</s> <s type="pada">khamadhye ca na saṃśayaḥ/</s></l>
<l> <s type="pada">svasthānaṃ gacchati prāṇaḥ</s> <s type="pada">crux sūryāṅge manasā tathācrux //</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_19">
 <l> <s type="pada">evam abhyasyamānasya</s> <s type="pada">vāyor mārge sadānilaṃ/</s></l>
<l> <s type="pada">abhyāsāl līyate vāyur</s> <s type="pada">manas tatra vilīyate//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_20">
 <l> <s type="pada">amṛte plāvayed dehamm</s> <s type="pada">ā pādatalamastakam/</s></l>
<l> <s type="pada">siddhyaty evaṃ tadā kāyo</s> <s type="pada">mahābalaparākramaḥ//</s></l> 
</lg>
</div> 
 <div type="altrec">
</div> <div type="altrec">
<lg xml:id="hp04_008_21">
 <l> <s type="pada">śaktimadhye manaḥ kṛtvā</s> <s type="pada">śaktiṃ ca svāṃtamadhyagāṃ/</s></l>
<l> <s type="pada">manasā mana ālokya</s> <s type="pada">tad dhyāyet paramaṃ padam//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_22">
 <l> <s type="pada">khamadhye kuru cātmānam</s> <s type="pada">ātmamadhye ca khaṃ kuru/</s></l>
<l> <s type="pada">sarvaṃ ca khamayaṃ kṛtvā</s> <s type="pada">na kiṃcid api cintayet//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_23">
 <l> <s type="pada">antaḥśūnyo bahiḥśūnyaḥ</s> <s type="pada">kumbha ivāmbare/</s></l>
<l> <s type="pada">antaḥpūrṇo bahiḥpūrṇaḥ</s> <s type="pada">kumbha //</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_24">
 <l> <s type="pada">bāhyacintā na kartavyā</s> <s type="pada">tathaivāntara/</s></l>
<l> <s type="pada"/> <s type="pada">na kiṃcid api cintayet//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_25">
 <l> <s type="pada">saṃkalpamātrakalanaiva jagat samagraṃ</s> 
</l>
<l> <s type="pada">saṃkalpamātrakalanā hi manovalīnā/</s> 
</l>
<l> <s type="pada">saṃkalpamātramatam utsṛja nirvikalpaṃ</s> 
</l>
<l> <s type="pada">āśrita niścitam avāpnuhi rāga śāntim//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_26">
 <l> <s type="pada">karpūram anale yadvat</s> <s type="pada">saindhavaṃ salile yathā/</s></l>
<l> <s type="pada">tathā saṃdīpamānaṃ ca</s> <s type="pada">manas tattve valīyate//</s><anchor xml:id="karpura"/> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_27">
 <l> <s type="pada">jñeyaṃ sarvapratītaṃ ca</s> <s type="pada">tajjñānaṃ mana ucyate/</s></l>
<l> <s type="pada">jñānaṃ jñeyaṃ samaṃ naṣṭaṃ</s> <s type="pada">nānyaḥ paṃtha dvitīyakaḥ//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_28">
 <l> <s type="pada">manodṛśyam idaṃ sarvaṃ</s> <s type="pada">yat kiṃcit sacarācaraṃ/</s></l>
<l> <s type="pada">manaso’py unmanībhāve</s> <s type="pada">dvaitābhāvaṃ pracakṣate//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_29">
 <l> <s type="pada">jñeyavastuparityāgād</s> <s type="pada">vilayaṃ yāti mānasam/</s></l>
<l> <s type="pada">mānase vilayaṃ yāte</s> <s type="pada">kaivalyam avaśiṣyate//</s></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_30">
 <l> <s type="pada">layo laya iti prāhuḥ</s> <s type="pada">īdṛśaṃ layalakṣaṇam/</s></l>
<l> <s type="pada">apunarvāsanotthānā</s><s type="pada"> layo viṣayavismṛtiḥ//</s><anchor xml:id="layo"/>
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_31">
 <l> <s type="pada">evaṃ nānāvidhopāyāḥ</s> <s type="pada">samyasvānubhavātmikāḥ/</s></l>
<l> <s type="pada">samādhimārgāḥ kathitāḥ</s> <s type="pada">pūrvācāryair mahātmabhiḥ//</s></l> 
</lg>
</div> <div type="altrec">
</div> <div type="altrec">
<lg xml:id="hp04_008_32">
 <l> <s type="pada">suṣumṇāyai kuṇḍalinyai</s> <s type="pada">sudhāyai candramaṇḍalāt/</s></l>
<l> <s type="pada">manonmanyai namas tubhyaṃ</s> <s type="pada">mahāśakticidātmane//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_008_33">
 <l> <s type="pada">aśakyatattvabodhānāṃ</s> <s type="pada">mūḍhānāapi saṃtataṃ/</s> 
</l>
<l> <s type="pada">proktaṃ gorakṣanāthena</s> <s type="pada">nādopāsanam ucyate//</s></l> 
</lg>
</div> 
<lg xml:id="hp04_009">
<l> <s type="pada">śrīādināthena sapādakoṭi</s>-</l>
<l> <s type="pada">layaprakārāḥ kathitā jayanti/</s></l>
<l> <s type="pada">nādānusaṃdhānakaeva mānyaṃ</s></l>
<l> <s type="pada">manyāmahe mānyatamaṃ layānām//</s><anchor xml:id="sapadakoti"/></l> 
</lg>
 
 
<lg xml:id="hp04_010">
<l> <s type="pada">sthito yogī</s> <s type="pada">mudrāṃ saṃdhāya śāṃbhavīm/</s> 
</l>
<l> <s type="pada">śṛṇuyād dakṣiṇe karṇe</s> <s type="pada">nāda//</s><anchor xml:id="muktasana2"/> 
 
</l> 
</lg>
 
 
<lg xml:id="hp04_011">
<l> <s type="pada">kāṣṭhe pravartate vahniḥ</s> <s type="pada">kāṣṭhena sa līyate/</s></l>
<l> <s type="pada">nāde pravartite cittaṃ</s> <s type="pada">nādena saha līyate//</s><anchor xml:id="kasthe"/></l> 
</lg>
 
<lg xml:id="hp04_012">
<l> <s type="pada">vismṛtya sakalaṃ bāhyaṃ</s> <s type="pada">nāde dugdhāmbuvan manaḥ/</s></l>
<l> <s type="pada">ekībhūyātha sahasā</s> <s type="pada">cidākāśe vilīyate//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_013">
<l> <s type="pada">audāsinyaparo bhūtvā</s> <s type="pada">sadābhyāsena saṃyamī/</s></l>
<l> <s type="pada">unmanīkārakaṃ sadyo</s> <s type="pada">nādaeva sadābhyaset//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp04_014">
<l> <s type="pada">śīti kāle paṭī vā</s></l>
<l> <s type="pada">pathyāhāro gopayo vā payo vā/</s></l>
<l> <s type="pada">bhojyaṃ bhikṣāvṛndam āraṇyakandaṃ</s></l>
<l> <s type="pada">pāṇi droṇī kāpi vā bhojyapātraṃ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_015">
<l> <s type="pada">sarvacintā samutsṛjya</s> <s type="pada">sarvaceṣṭāṃ ca sarvadā/</s></l>
<l> <s type="pada">nādam evānusaṃdadhyān</s>n <s type="pada">nāde cittaṃ vilīyate//</s><anchor xml:id="sarvacinta"/> 
</l> 
</lg>
 
<lg xml:id="hp04_016">
<l> <s type="pada">ārambhaś ca ghaṭaś caiva</s> <s type="pada">tathā paricas tathā/</s></l>
<l> <s type="pada">niṣpattiḥ sarvayogeṣu</s> <s type="pada">syād avasthācatuṣṭayaṃ//</s></l> 
</lg>
 
 
<lg xml:id="hp04_017">
<l> <s type="pada">brahmagranthirr bhavebhinnād</s><s type="pada"> ānandaḥ śūnyasaṃbhavaḥ/</s></l>
<l> <s type="pada">vicitrakvaṇiko dehe</s><s type="pada">’nāhataḥ śrūyate dhvaniḥ//</s></l> 
</lg>
 
<lg xml:id="hp04_018">
<l> <s type="pada">tejasvī divyagandhaś ca</s> <s type="pada">divyadeho py arogavān/</s> 
</l>
<l> <s type="pada">saṃpūrṇehṛdaye śūnye</s><s type="pada">tv ārambhe yogavān bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp04_019">
<l> <s type="pada">dvitīyāyāṃ ghaṃṭikṛtvā</s> <s type="pada">vāyur bhavati madhyagaḥ/</s></l>
<l> <s type="pada">dṛḍhāsano bhaved yogī</s> <s type="pada">jñānī devasamatathā//</s></l> 
</lg>
 
<lg xml:id="hp04_020">
<l> <s type="pada">viṣṇugranthir yadā bhinnā</s> <s type="pada">paramānandasūcakā/</s></l>
<l> <s type="pada">atiśūnya vibhedaś ca</s> <s type="pada">bherīśabdas tadā bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp04_021">
<l> <s type="pada">tṛtīyāyāṃ tato bhittvā</s> <s type="pada">vihāyamṛḍuladhvaniḥ/</s></l>
<l> <s type="pada">mahāśūnya tayā yāti</s> <s type="pada">sarvasiddhisamāśrayam//</s><anchor xml:id="cittananda"/> 
</l> 
</lg>
 
<lg xml:id="hp04_022">
<l> <s type="pada">cidānanda(ṃ) tato jitvā</s> <s type="pada">sahajānandasaṃbhavaḥ/</s></l>
<l> <s type="pada">doṣaduḥkhajarāmṛtyu</s><s type="pada">kṣudhānidrāvivarjitaḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp04_023">
<l> <s type="pada">rudragranthiṃ tato bhittvā</s> <s type="pada">sarvapīṭhagato’nilaḥ/</s></l>
<l> <s type="pada">niṣpannau vaiṇavaḥ śabdaḥ</s> <s type="pada">kvaṇadvīṇākvaṇobhavet//</s><anchor xml:id="rudra"/></l> 
</lg>
 
<lg xml:id="hp04_024">
<l> <s type="pada">ekībhūtaṃ  cittaṃ</s> <s type="pada">rājayogā/</s></l>
<l> <s type="pada">sṛṣṭisaṃhārakartāsau</s> <s type="pada">yogīśvarasamo bhavet//</s> 
 <anchor xml:id="ekibhutam"/> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_024_1">
<l> <s type="pada">rājayogapadaṃ prāpti</s> <s type="pada">sukhopāyo’lpacetasām/</s></l>
<l> <s type="pada">sadyaḥ pratyayasaṃdhāyi</s> <s type="pada">jāyate nātra saṃśayaḥ//</s> 
 
</l> 
</lg>
</div> 
 
<lg xml:id="hp04_025">
<l> <s type="pada">astu vā mastu vā muktis</s><s type="pada">tatraivākhaṇḍitaṃ mahat/</s></l>
<l> <s type="pada">layāmṛtamayaṃ saukhyaṃ</s> <s type="pada">rājayogād avāpyate//</s><anchor xml:id="astuva"/></l> 
</lg>
 
<lg xml:id="hp04_026">
<l> <s type="pada">haṭhaṃ vinā rājayogo</s> <s type="pada">rājayogaṃ vinā haṭhaḥ/</s></l>
<l> <s type="pada">na sidhyati tato yugmam</s> <s type="pada">ā niṣpatteḥ samabhyaset//</s>
<anchor xml:id="hathamvina"/> 
 
</l> 
</lg>
 
<lg xml:id="hp04_027">
 <l> <s type="pada">rājayogam ajānantaḥ</s> <s type="pada">kevalaṃ haṭhakarmaṭhāḥ/</s></l>
<l> <s type="pada">ye tu tān karkaśān manye</s> <s type="pada">prayāsaphalavarjitān//</s> 
<anchor xml:id="ajananta"/> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_027_1">
<l><texteng>[Alt] </texteng><s type="pada"> </s> <s type="pada">rājayogaṃ vinā /</s></l>
<l> <s type="pada">ye   tā</s> <s type="pada">prayāsavarjitān//</s> 

</l> 
</lg>
</div> 
<lg xml:id="hp04_028">
<l> <s type="pada">tattvaṃbījaṃ haṭha kṣetra</s><s type="pada">audāsinyaṃ jalaṃ tribhiḥ/</s></l>
<l> <s type="pada">unmanīkalpalatikā</s> <s type="pada">sadya evodbhaviṣyati//</s></l> 
</lg>
 
<lg xml:id="hp04_029">
<l> <s type="pada"> samādhi</s> <s type="pada">unmanī ca manonmanī/</s></l>
<l> <s type="pada"/> <s type="pada"> nirañjanam//</s><anchor xml:id="A1"/> 
 
</l> 
</lg>
 
<lg xml:id="hp04_030">
<l> <s type="pada"> </s> <s type="pada"> /</s></l>
<l> <s type="pada"> sahajaṃ</s> <s type="pada"> //</s><anchor xml:id="A2"/> 
 
</l> 
</lg>
 
<lg xml:id="hp04_031">
<l> <s type="pada"> śīghraṃ</s> <s type="pada"> /</s> 
</l>
<l> <s type="pada">tattvaṃ parama vā</s> <s type="pada">nādopāsanam eva //</s> 
</l> 
</lg>
 
<lg xml:id="hp04_032">
<l> <s type="pada">cittānāṃ</s> <s type="pada">mūḍhānām api saṃmatam/</s> 
</l>
<l> <s type="pada"/> <s type="pada">jāyate  layaḥ//</s> 
<anchor xml:id="saukhya"/></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_032_1">
<l> <s type="pada">ekaṃ sṛṣṭimayaṃ bījaṃ</s> <s type="pada">ekā mudrā tu khecarī/</s></l>
<l> <s type="pada">eko devo nirālamba</s> <s type="pada">ekāvasthā manonmanī//</s> 
 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_032_2">
<l> <s type="pada">śaṅkhadundubhinādaṃ ca</s> <s type="pada">na śṛṇoti kadācana/</s></l>
<l> <s type="pada">kāṣṭhavaj jāyate dehe</s> <s type="pada">unmanyāvasthayā dhruvam//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_032_3">
<l> <s type="pada">sarvāvasthāvinirmuktaḥ</s> <s type="pada">sarvacintāvivarjitaḥ/</s></l>
<l> <s type="pada">mṛtavat tiṣṭhate yogī</s> <s type="pada">sa mukto nātra saṃśayaḥ//</s> 
</l> 
</lg>
</div> 
 <div type="altrec">
<lg xml:id="hp04_032_4">
<l> <s type="pada">na vijānāti śītoṣṇaṃ</s> <s type="pada">na duḥkhaṃ na sukhaṃ tathā/</s></l>
<l> <s type="pada">na mānaṃ nāpamānaṃ ca</s> <s type="pada">yogī muktaḥ samādhinā//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_032_5">
<l> <s type="pada">avadhyaḥ sarvaśastrāṇā</s><s type="pada">m avadhyaḥ sarvadehinām/</s></l>
<l> <s type="pada">agrāhyo mantratantrāṇāṃ</s> <s type="pada">yogī muktaḥ samādhinā//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_032_6">
<l> <s type="pada">na gandhaṃ na rasaṃ rūpaṃ</s> <s type="pada">/</s></l>
<l> <s type="pada">nātmānaṃ </s> <s type="pada">yogī //</s> 
</l> 
</lg>
</div> 
 <div type="altrec">
<lg xml:id="hp04_032_7">
<l> <s type="pada">cittaṃ na suptaṃ no jāgrat</s> <s type="pada">smṛtivarṇaṃ ca nānyathā/</s></l>
<l> <s type="pada">nāstam eti na codeti</s> <s type="pada">yasyāsau mukta eva saḥ//</s> 
<anchor xml:id="nasuptam"/></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_032_8">
<l> <s type="pada">svecchā jāgradavasthāyāṃ</s> <s type="pada">suptaḥ sadyo’vatiṣṭhate/</s></l>
<l> <s type="pada">niḥsvāsocchvāsahīnaś ca</s> <s type="pada">niścitaṃ mukta eva saḥ//</s> 
<anchor xml:id="svastho"/></l> 
</lg>
</div> 
<lg xml:id="hp04_033">
<l> <s type="pada">nādānusaṃdhānasamādhibhājāṃ</s></l>
<l> <s type="pada">yogīśvarāṇāṃ hṛdaye prarūḍham/</s></l>
<l> <s type="pada">ānandam ekaṃ vacasām avācyaṃ</s></l>
<l> <s type="pada">jānāti taṃ śrīgurunātha eva//</s> <anchor xml:id="nadanu"/></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_033_1">
<l> <s type="pada">muktāsanasthito yogī</s> <s type="pada">mudrāṃ saṃdhāya śāṃbhavīm/</s></l>
<l> <s type="pada">śṛṇuyād dakṣiṇe karṇe</s> <s type="pada">nādam antargataṃ sadā//</s><anchor xml:id="muktasana"/> 
 
</l> 
</lg>
</div> 
<lg xml:id="hp04_034">
<l> <s type="pada">sarvacintāṃ parityajya</s> <s type="pada">sāvadhānena cetasā/</s></l>
<l> <s type="pada">nāda evānusaṃdheyo</s> <s type="pada">yogasāmrājyam icchatā//</s>
 <anchor xml:id="sarvacinta2"/> 
</l> 
</lg>
 
<lg xml:id="hp04_035">
<l> <s type="pada">karṇau pidhāya śū _ na</s> <s type="pada">yaṃ śṛṇoti dhvaniṃ muniḥ/</s></l>
<l> <s type="pada">tatra cittaṃ sthiraṃ kuryād</s> <s type="pada">yāvat sthirapadaṃ bhavet//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_036">
<l> <s type="pada">abhyasyamāno nādo’yaṃ</s> <s type="pada">bāhyam āvartayed dhvanim/</s></l>
<l> <s type="pada">pakṣāvipakṣam akhilaṃ</s> <s type="pada">jitvā yogī sukhī bhavet//</s></l> 
</lg>
 
<lg xml:id="hp04_037">
<l> <s type="pada">śrūyate prathamābhyāse</s> <s type="pada">nādo nānāvidho mahān/</s></l>
<l> <s type="pada">tato’bhyāse vardhamāne</s> <s type="pada">śrūyate sūkṣmasūkṣmakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp04_038">
<l> <s type="pada">ādau jaladhijīmūta</s><s type="pada">bherīnirjharasaṃbhavaḥ/</s></l>
<l> <s type="pada">madhye mardalaśaṃkhotthā</s> <s type="pada">ghaṇṭākāhalakāss tathā//</s></l> 
</lg>
 
<lg xml:id="hp04_039">
<l> <s type="pada">ante tu kiṅkiṇīvaṃśa</s><s type="pada">nādābhramaraniḥsvanāḥ/</s></l>
<l> <s type="pada">iti nānāvidhā nādā</s> <s type="pada">śrūyante tatramadhyataḥ//</s></l> 
</lg>
 
<lg xml:id="hp04_040">
<l> <s type="pada">mahatī śrūyamāṇe’pi</s> <s type="pada">meghabheādike svane/</s></l>
<l> <s type="pada">tatra sūkṣmāt sūkṣmataraṃ</s> <s type="pada">nādam eva parāmṛśet//</s></l> 
</lg>
 
<lg xml:id="hp04_041">
<l> <s type="pada">ghanam utsṛjya vā sūkṣme</s> <s type="pada">sūkṣmam utsṛjya vā ghane/</s></l>
<l> <s type="pada">ramamāṇam api kṣipraṃ</s> <s type="pada">mano nātra pra° cālayet//</s></l> 
</lg>
 
<lg xml:id="hp04_042">
<l> <s type="pada">yatra kutrāpi vā nāde</s> <s type="pada">lagati prathamaṃ manaḥ/</s></l>
<l> <s type="pada">tatraiva tat sthirībhūtvā</s> <s type="pada">tena sārdhaṃ vilīyate//</s><anchor xml:id="yatrakutrapi"/></l> 
</lg>
 
 
<lg xml:id="hp04_043">
<l> <s type="pada">makarandaṃ piban bhṛṅgo</s> <s type="pada">gandhaṃ nāpekṣate yathā/</s></l>
<l> <s type="pada">nādāsaktaṃ tathā cittaṃ</s> <s type="pada">viṣayānaiva kāṅkṣati//</s> <anchor xml:id="makaranda1"/></l> 
</lg>
 
 
<lg xml:id="hp04_044">
<l> <s type="pada">baddhaṃ viyuktaṃcāñcalyaṃ</s> <s type="pada">nādagandhakajāraṇāt/</s> 
</l>
<l> <s type="pada">manaḥpārada āpnoti</s> <s type="pada">nirālambākhyakhoṭakaṃ//</s></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_044_1">
<l> <s type="pada">baddhaḥsuṃdhanādena</s> <s type="pada">sadyaḥ saṃtyaktacāpalaḥ/</s></l>
<l> <s type="pada">prayāti sūtacittendraḥ</s> <s type="pada">pakṣachinna ivāprabhuḥ//</s> 
</l> 
</lg>
</div> 
<lg xml:id="hp04_045">
<l> <s type="pada">nādaśravaṇataś citta</s><s type="pada">aṃtaraṃgaṃbhujaṅgamaḥ/</s></l>
<l> <s type="pada">vismṛtya viśvamevāgraḥ</s> <s type="pada">kutracin na hi dhāvati//</s></l> 
</lg>
 
<lg xml:id="hp04_046">
<l> <s type="pada">manomattagajendrasya</s> <s type="pada">viṣayodyānacāriṇaḥ/</s></l>
<l> <s type="pada">niyāmanesamartho’yaṃ</s> <s type="pada">nināda niśitāṅkuśaḥ//</s></l> 
</lg>
 
<lg xml:id="hp04_047">
<l> <s type="pada">antaraṅgaturaṅgasya</s> <s type="pada">vājinaḥ paridhāvataḥ/</s></l>
<l> <s type="pada">nādopāstir ato nitya</s><s type="pada">avadhāryā hi yogināṃ//</s>
 
<anchor xml:id="IV95Vu"/></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_047_1">
<l> <s type="pada">nādo’ntaraṅgasāraṅga</s><s type="pada">bandhane vāgurāyate/</s></l>
<l> <s type="pada">antaraṅgakuraṅgasya</s> <s type="pada">nādo vyādhāyate’pi ca//</s>
 <anchor xml:id="makaranda6"/>
</l> 
</lg>
</div> 
<lg xml:id="hp04_048">
<l> <s type="pada">/</s> 
</l>
<l> <s type="pada">praharaṇa  pravīṇaś cet//</s> 

</l> 
</lg>
 
<lg xml:id="hp04_049">
<l><texteng>[Alt1]</texteng> <s type="pada">anāhatadhvaner antar</s> <s type="pada">jñeyaṃ yat sūkṣmasūkṣmakam/</s></l>
<l> <s type="pada">manas tatra layaṃ yāti</s> <s type="pada">tad viṣṇoḥ paramaṃ padam//</s> <anchor xml:id="anahata2"/>
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_049_1">
<l><texteng>[Alt2]</texteng> <s type="pada"/> <s type="pada"> /</s></l>
<l> <s type="pada">r antargataṃ </s> <s type="pada">rgataṃ manaḥ/</s></l>
<l> <s type="pada"> </s> <s type="pada">tad viṣṇoḥ paramaṃ padam//</s> 
<anchor xml:id="anahata"/></l> 
</lg>
</div> 
<lg xml:id="hp04_050">
<l> <s type="pada">tāvad ākāśasaṃkalpo</s> <s type="pada">yāvac chabdaḥ pravartate/</s></l>
<l> <s type="pada">niḥśabdaṃ tat paraṃ brahma</s> <s type="pada">paramātmā °numīyate//</s></l> 
</lg>
 
<lg xml:id="hp04_051">
<l> <s type="pada">t kiṃcirūpeṇa</s> <s type="pada">śrūyate śaktir eva sā/</s></l>
<l> <s type="pada"> nirākāraḥ</s> <s type="pada">sa eva parameśvaraḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_052">
<l> <s type="pada">śravaṇamukhanayananāsānirodhanaṃ naiva kartavyaṃ/</s></l>
<l> <s type="pada">śuddhasuṣumṇāśaraṇe vimalaḥ saṃśrūyate nādaḥ//</s><anchor xml:id="sravanaputa"/></l>
<l> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_052_1">
<l> <s type="pada">nādaḥ śaktir iti khyāto</s> <s type="pada">nādajñānaṃ sadāśivaḥ/</s></l>
<l> <s type="pada">nādajñāne vinaṣṭe ca tad</s><s type="pada"> unmaeva śiṣyate//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_052_2">
<l> <s type="pada">nādo yāvan manas tāva</s><s type="pada">nādānte ca manonmanī/</s></l>
<l> <s type="pada">saśabdaṃ kathitaṃ vyoma</s> <s type="pada">niḥśabdaṃ brahma kathyate//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_052_3">
<l> <s type="pada">sadā nādānusaṃdhānāt</s> <s type="pada">saṃkṣīṇe vāsanākṣaṇe/</s></l>
<l> <s type="pada">nirañjane ca līyete</s> <s type="pada">niścitaṃ cittamārutau//</s> 
<anchor xml:id="sadanada"/></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_052_4">
<l> <s type="pada">nādakoṭisahasrāṇi</s> <s type="pada">bindukoṭiśatāni ca/</s></l>
<l> <s type="pada">sarve tatra layaṃ yānti</s> <s type="pada">yatra devo nirañjanaḥ//</s> <anchor xml:id="nadakoti"/> 
</l>
<l> 
</l> 
</lg>
</div> 
 
 <div type="altrec">
<lg xml:id="hp04_052_5">
<l> <s type="pada">sarve </s> <s type="pada">rājayoga/</s></l>
<l> <s type="pada">rājayogapadaṃ prāpya</s> <s type="pada">jāyate nirañjanaḥ//</s> 
 
</l> 
</lg>
</div> 
 
<lg xml:id="hp04_053">
<l> <s type="pada"/> <s type="pada">/</s></l>
<l> <s type="pada">purā matsyendra</s><s type="pada"> vacaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_054">
<l> <s type="pada">yāvan naiva praviśati caran māruto mādhyamārgaṃ</s></l>
<l> <s type="pada">yāvabandhor na bhavati dṛḍhaḥ prāṇavātaḥprabandhaḥ/</s></l>
<l> <s type="pada">yāvad vyomnā sahajasadṛśaṃ jāyate naiva cittaṃ</s></l>
<l> <s type="pada">tāvat sarvaṃ vadati yad idaṃ dambhamithyāpralāpaḥ//</s> 
<anchor xml:id="yavan"/></l> 
</lg>
 
 
<lg xml:id="hp04_055">
<l> <s type="pada">suṣu° °mnāṃtagataṃ mārgaṃ</s> <s type="pada">vāyuṃ kṛtvā ca madhyagam/</s></l>
<l> <s type="pada">samāvasthā sthito yogī</s> <s type="pada">prāṇarandhraṃ nirodhayet//</s><anchor xml:id="jnatva"/></l> 
</lg>
 
 
<lg xml:id="hp04_056">
<l> <s type="pada">iḍāyāṃ </s> <s type="pada">carataś candrabhāskarau/</s></l>
<l> <s type="pada">candras tāmasa ity uktaḥ</s> <s type="pada">sūryo  ucyate//</s>
 
</l> 
</lg>
 
<lg xml:id="hp04_057">
<l> <s type="pada">sūryācandramasau dhattaḥ</s> <s type="pada">kālaṃ rātridivātmakam/</s></l>
<l> <s type="pada">bhoktrī suṣumṇā kālasya</s> <s type="pada">guhyam etad udāhṛtam//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp04_058">
<l> <s type="pada">ṣaṭcakraṃ ṣoḍaśādhāraṃ</s> <s type="pada"> guṇatrayam/</s></l>
<l> <s type="pada"> </s> <s type="pada"> paramaṃ padam//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_059">
<l> <s type="pada">kuṇḍalī kuṭilākārā</s> <s type="pada">sarpavat parikīrtitā/</s></l>
<l> <s type="pada">sā śaktiḥ  yena</s> <s type="pada">sa  nātra saṃśayaḥ//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp04_060">
<l> <s type="pada">yadā kūṭaṃ trikūṭasthaṃ</s> <s type="pada">cittaṃ  /</s></l>
<l> <s type="pada">kuṇḍalyās tu </s> <s type="pada">sa mukto nātra saṃśayaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_061">
<l> <s type="pada">dvisaptatisahasrāṇi</s> <s type="pada">nāḍīdvārāṇipañjare/</s></l>
<l> <s type="pada">suṣumṇā śāṃbhavī śaktiḥ</s> <s type="pada">śeṣāś caiva nirarthakāḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp04_062">
<l> <s type="pada">vāyuḥ paricito yatnā</s><s type="pada">d agninā saha kuṇḍalī/</s></l>
<l> <s type="pada">bodhayitvā suṣumṇāyāṃ</s> <s type="pada">praviśeanirodhataḥ//</s><anchor xml:id="bodhayitva"/> 
</l> 
</lg>
 
<lg xml:id="hp04_063">
<l> <s type="pada">suṣumṇāvāhinī prāṇe</s> <s type="pada">sidhyaty eva manonmanī/</s> 
</l>
<l> <s type="pada">anyathā tv itarebhyāsa</s> <s type="pada">prayāsā eva yoginām//</s></l> 
</lg>
 
<lg xml:id="hp04_064">
<l> <s type="pada">pavano badhyate yena</s> <s type="pada">manas tenaiva badhyate/</s></l>
<l> <s type="pada">manaś ca badhyate yena</s> <s type="pada">pavanas tena badhyate//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_065">
<l> <s type="pada">hetudvayasya cittasya</s> <s type="pada">vāsanā ca samīraṇaḥ/</s></l>
<l> <s type="pada">tayor vinaṣṭa ekasmi</s><s type="pada">tau dvāv api vinaśyataḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp04_066">
<l> <s type="pada">mano yatra vilīyeta</s> <s type="pada">mārutass tatra līyate/</s></l>
<l> <s type="pada"></s> <s type="pada">mana//</s>
 
</l> 
</lg>
 
<lg xml:id="hp04_067">
<l> <s type="pada">dugdhāmbuvat saṃmilitau sadaiva</s></l>
<l> <s type="pada">tulyakriyau mānasamārutau hi/</s></l>
<l> <s type="pada">yāvan manas tatra marutpravṛtti-</s></l>
<l> <s type="pada"> //</s><anchor xml:id="dugdha"/></l> 
</lg>
 
<lg xml:id="hp04_068">
<l> <s type="pada">atraikanāśād aparasya nāśaḥ</s></l>
<l> <s type="pada">ekapravṛttāv aparapravṛttiḥ/</s>
</l>
<l> <s type="pada">adhvastayorindriyavargavṛttiḥ-</s></l>
<l> <s type="pada">r vidhvastayor mokṣapadasya siddhiḥ//</s><anchor xml:id="tatraika"/></l> 
</lg>
 
<lg xml:id="hp04_069">
<l> <s type="pada">vāyurmārge py asaṃcāre</s> <s type="pada">sakalaṃ labhatemahaḥ/</s></l>
<l> <s type="pada">tato’ṣṭaguṇam aiśvaryaṃ</s> <s type="pada">satyaṃ ity āha śaṃkaraḥ//</s> 
<anchor xml:id="vayumargena"/> 
</l> 
</lg>
 
 
<lg xml:id="hp04_070">
<l> <s type="pada">yadā  prāṇo</s> <s type="pada">mānasaṃ /</s></l>
<l> <s type="pada">tadā samarasatvaṃ </s><s type="pada">//</s><anchor xml:id="visvarupa"/> 
 
</l> 
</lg>
 
<lg xml:id="hp04_071">
<l> <s type="pada">manasthairyaḥ sthito vāyus</s> <s type="pada">tato binduḥ sthiro bhavet/</s></l>
<l> <s type="pada">bindusthairye dayāsatyaṃ</s> <s type="pada">piṇḍasthairyaṃ prajāyate//</s> 
<anchor xml:id="manahsthairye"/> 
</l> 
</lg>
 
<lg xml:id="hp04_072">
<l> <s type="pada">dṛṣṭiḥ sthirā yasya vinaiva dṛśyā-</s></l>
<l> <s type="pada">d vāyuḥ sthiro yasya vinā prayatnāt/</s></l>
<l> <s type="pada">cittaṃ sthiraṃ yasya vināvalambāt</s></l>
<l> <s type="pada">sa eva yogī sa guruḥ sa sevyaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_073">
<l> <s type="pada">praveśe nirgame cāpi</s> <s type="pada">dakṣiṇe cordhvamadhyataḥ/</s></l>
<l> <s type="pada">na yasya vāyur vahati</s> <s type="pada">sa mukto nātra saṃśayaḥ//</s> 
<anchor xml:id="pravese"/> 
</l> 
</lg>
 
<lg xml:id="hp04_074">
<l> <s type="pada">sarve haṭhalayopāyā</s> <s type="pada">rājayogāya kevalaṃ/</s></l>
<l> <s type="pada">rājayogasamārūḍhaḥ</s> <s type="pada">puruṣaḥ kālavañcakaḥ//</s><anchor xml:id="kalavancaka"/> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_074_1">
<l> <s type="pada">iḍā bhagavatī gaṅgā</s> <s type="pada">piṅgalā  nadī/</s></l>
<l> <s type="pada"> taddvayor madhye</s> <s type="pada">suṣumṇā  sarasvatī//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_074_2">
<l> <s type="pada">triveṇīsaṃgamo yatra</s> <s type="pada">tīrtharājaḥ sa ucyate/</s></l>
<l> <s type="pada"/> <s type="pada">sarvapāpaiḥ pramucyate//</s> 
</l> 
</lg>
</div> 
