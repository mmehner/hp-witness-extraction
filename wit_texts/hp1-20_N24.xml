      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>vibhrājate pronnatarājayogam armādhi icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumatadhvānte rajayogam ajānatām/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l> 
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendraśāradānantabhairavaḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūyākṣacileśayāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī siddhar cuddhaś ca kanthaḍiḥ/</l> 
	<l>kauraṇṭakaḥ śurānaṃdaḥ siddhipādaś ca carpaṭi//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kānerī pūjyapādaś ca nityanātho nirañjanaḥ/</l> 
	<l>kapālī bindunāthaś ca kākacaṃḍiśvarāhayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>allāmaḥ prabhudevaś ca ghoḍācolī ca ṭiṇṭiṇī /</l> 
	<l>bhālukir nā .. .. .. ś ca khaṇḍaḥ kāpālīkas tathāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānāṃ samāśraya nago haṭhaḥ/</l> 
	<l>aśeṣayogajātānāmādhārakamaṭho haṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yoginā siddhim icchatā/</l> 
	<l>bhaved vīryavati guptā nirvīryā tu prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājya dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānte maṭhikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragarttaviṭharaṃ nātyuccanīcāyataṃ/</l> 
	<l>samyag gomayasāndraliptavimalaṃ niḥśeṣajaṃtajjhitaṃ/</l> 
	<l>bāhye maṇḍapavedikūparucitaṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam evaṃ samabhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāraḥ prayāsaś ca prajalpo niyamagrahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogo vinaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhāt sāhasāddhairyāttattvajñānāc ca niścayāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyatiḥ//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>ahiṃsā satyam asteyaṃ brahmacaryaṃ kṣamā dhṛtiḥ/</l> 
	<l>dayārjavaṃitāhāraḥ śaucaṃ caiva yamā daśāḥ//</l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l>tapaḥ santoṣa āstikyaṃ dānam iśvarapūjanaṃ/</l> 
	<l>siddhāṃtavākyaśravaṇaṃ caiva hrīmatiś ca japo hṛtam//</l> 
	<l>niyamādaśāptaṃ proktādyogasāsravi śāradaiḥ//</l> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>tatkuryād āsanaṃ sthairyam ārogya cāṅgalāghavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāniḥ vakṣyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānur voraṃtare samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇetu tathā savyaṃ gomukhaṃ gomukhā kṛti//</l> 
      </lg> 
