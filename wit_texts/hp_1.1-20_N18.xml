  <text>
    <body>
      <lg xml:id="hp1-1">
	<l> namo tasmai  haṭhayogavidyā</l>
	<l> pronnatamicchoradhi</l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrī   </l>
	<l>  haṭha</l>
      </lg>
      <lg xml:id="hp1-3">
	<l>  rāja </l>
	<l>haṭha   </l>
      </lg>
      <lg xml:id="hp1-4">
	<l>haṭha  </l>
	<l>  </l>
      </lg>
      <lg xml:id="hp1-5">
	<l>matsyendrananda</l>
	<l>mīna</l>
      </lg>
      <lg xml:id="hp1-6">
	<l>bhairavo   </l>
	<l>  pādaśca </l>
      </lg>
      <lg xml:id="hp1-7">
	<l> pādaśca  </l>
	<l>bindu </l>
      </lg>
      <lg xml:id="hp1-8">
	<l>    </l>
	<l>  stathā</l>
      </lg>
      <lg xml:id="hp1-9">
	<l> mahā </l>
	<l>    te</l>
      </lg>
      <lg xml:id="hp1-10">
	<l>   </l>
	<l> </l>
      </lg>
      <lg xml:id="hp1-11">
	<l>haṭhavidyā paraṃ   </l>
	<l>bhave guptā   prakāśitā</l>
      </lg>
      <lg xml:id="hp1-12">
	<l>  subhikṣe nirupadrave</l>
	<l> madhye sthātavyaṃ haṭha</l>
      </lg>
      <lg xml:id="hp1-13">
	<l>marandhra </l>
	<l> </l>
	<l>  prākāra</l>
	<l>proktaṃ yoga  siddhairhaṭhābhyāsibhiḥ</l>
      </lg>
      <lg xml:id="hp1-14">
	<l>°vidher maṭhe sthitvā sarvacintāvivarjitaḥ</l>
	<l>gurūpadiṣṭamārgeṇa yoga evaṃ sadābhyaset</l>
      </lg>
      <lg xml:id="hp1-15">
	<l>atyāhāra prayāsaśca prajalpo niyamagrahaḥ</l>
	<l>janasaṃgaṃ ca laulyaṃ ca ṣaḍbhiryogaḥ vinaśyati</l>
      </lg>
      <lg xml:id="hp1-16">
	<l>utsahoniścayādvairyyāttatvajñānācca darśanāt</l>
	<l>janasaṅgaparityāgāt ṣaḍbhiryogastu sidhyati</l>
      </lg>
      <lg xml:id="hp1-17">
	<l>haṭhasya prathamāṅgatvādāsanaṃ pūrvamucyate</l>
	<l>tatkuryāmāsana sthairyamārogyaṃ cāṅgapāṭavaṃ</l>
      </lg>
      <lg xml:id="hp1-18">
	<l>vasiṣṭhādyaiśca munibhirmatsyendrādyaiśca yogibhiḥ</l>
	<l>aṅgīkṛtā nyāsanāni kathyate kānicinmayā</l>
      </lg>
      <lg xml:id="hp1-19">
	<l>jānūdyoraṃtare samyakkṛtvā pādatale ubhe</l>
	<l>ṛjukāyaḥsamāsīnaḥ svastikaṃ tatpracakṣate</l>
      </lg>
      <lg xml:id="hp1-20">
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet</l>
	<l>dakṣiṇetu tathā savyaṃ gomukhaṃ gomukhaṃ yathā</l>
      </lg>
