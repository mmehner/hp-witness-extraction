<body>

<lg xml:id="hp02_001">
 <l> <s type="pada">athāsane dahe yogī</s> <s type="pada">vajrī bhūtamitāśanaḥ/</s></l>
<l> <s type="pada">gurūpadiṣṭamārgeṇa</s> <s type="pada">prāṇāyāmān samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_002">
 <l> <s type="pada">cale vāte calet sarvaṃ</s> <s type="pada">niścale dṛḍhabaṃdhanaṃ/</s></l>
<l> <s type="pada">yogī sthānatvam āpnoti</s> <s type="pada">tato vāyunibandhanāt//</s></l> 
</lg>
 
<lg xml:id="hp02_003">
 <l> <s type="pada">yāvad vāyuḥ sthito dehe</s> <s type="pada">tāvaj jīvitam ucyate/</s></l>
<l> <s type="pada">maraṇaṃ tasya niṣkrānti</s><s type="pada">s tato vāyuṃ nibandhayet//</s></l> 
</lg>
 
<lg xml:id="hp02_004">
 <l> <s type="pada">malākulāsu nāḍīṣu</s> <s type="pada">māruto naiva madhyagaḥ/</s></l>
<l> <s type="pada">kathaṃ syād unmanībhāvaḥ</s> <s type="pada">kāryasiddhiḥ kathaṃ bhavet//</s></l> 
</lg>
 
<lg xml:id="hp02_005">
 <l> <s type="pada">śuddhim eti yadā sarvaṃ</s> <s type="pada">nāḍīcakra manākulaṃ/</s></l>
<l> <s type="pada">tadaiva jāyate yogī</s> <s type="pada">prāṇasaṃgrahaṇe kṣamaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_006">
 <l> <s type="pada">prāṇābhyāsaṃ tataḥ kuryān</s> <s type="pada">nityaṃ sāttvikayā dhiyā/</s></l>
<l> <s type="pada">yathā suṣumnāḥ snigdhā</s> <s type="pada">malāḥ śoṣaṃ prayānti ca//</s></l> 
</lg>
 
<lg xml:id="hp02_007">
 <l> <s type="pada">baddhapadmāsano yogī</s> <s type="pada">prāṇaṃ candreṇa pūrayet/</s></l>
<l> <s type="pada">dhārayitvā yathāśaktyā</s> <s type="pada">bhūyaḥ sūryeṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_008">
 <l> <s type="pada">prāṇaṃ sūryeṇa cākṛṣya</s> <s type="pada">pūrayed udaraṃ śanaiḥ/</s></l>
<l> <s type="pada">vidhivat kumbhakaṃ kṛtvā</s> <s type="pada">punaś candreṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_009">
 <l> <s type="pada">yena tyajetena pūrya</s> <s type="pada">dhārayed aanirodhitaḥ/</s></l>
<l> <s type="pada">recayeta tato’nyena</s> <s type="pada">śanair eva na vegataḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_010">
 <l> <s type="pada">prāṇaṃ ced iḍayā piben niyamitaṃ bhūyo’nyayā recayet</s></l>
<l> <s type="pada">pītvā piṅgalayā samīraṇam atho baddhvā tyajed vāmayā/</s></l>
<l> <s type="pada">sūryācandramasor anena vidhinā bhyāsaṃ samātanvatāṃ</s></l>
<l> <s type="pada">śuddhā nāḍiguṇā bhavanti yamināṃ māsatrayād ūrdhvataḥ//</s><anchor xml:id="II10"/></l> 
</lg>
 
<lg xml:id="hp02_011">
 <l> <s type="pada">prātar madhyandine sāyaṃ madhya</s><s type="pada">rātrau ca kumbhakān/</s></l>
<l> <s type="pada">śanair aśītiparyantaṃ</s> <s type="pada">caturvāraṃ samabhyaset//</s>
</l> 
</lg>
 
<lg xml:id="hp02_012">
 <l> <s type="pada">kanīyase bhavet svedaḥ</s> <s type="pada">kampo bhavati madhyame/</s></l>
<l> <s type="pada">uttiṣṭhaty uttame prāṇa</s><s type="pada">rodhe padmāsanaṃ muhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_013">
 <l> <s type="pada">jalena śramajātena</s> <s type="pada">gātramardanam ācaret/</s></l>
<l> <s type="pada">dṛḍhatā laghutā cāpi</s> <s type="pada">tena gātrasya jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_014">
 <l> <s type="pada">abhyāsakāle prathame</s> <s type="pada">śastaṃ kṣīrājyabhojanam/</s></l>
<l> <s type="pada">tatobhyāsaiḥ sthirībhūte</s> <s type="pada">na tādṛṅniyamagrahaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_015">
 <l><s type="pada">yathā siṃho gajo vyāghro</s> <s type="pada">bhaved vaśyaṃ śanaiḥ śanaiḥ/</s></l>
<l> <s type="pada">tathaiva sevito vāyur</s> <s type="pada">anyathā hanti sādhakam//</s></l> 
</lg>
 
<lg xml:id="hp02_016">
 <l> <s type="pada">prāṇāyāmena yuktena</s> <s type="pada">sarvarogakṣayo bhavet/</s></l>
<l> <s type="pada">ayuktābhyāsayogena</s> <s type="pada">sarvarogasamudbhavaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_017">
 <l> <s type="pada">hikkā śvāsaś ca kāsaś ca</s> <s type="pada">jvaraḥ karṇākṣivedanāḥ/</s></l>
<l> <s type="pada">bhavanti vividhā doṣāḥ</s> <s type="pada">pavanasya vyatikramāt//</s></l> 
</lg>
 
<lg xml:id="hp02_018">
 <l> <s type="pada">yuktaṃ yuktaṃ tyajed vāyuṃ</s> <s type="pada">yuktaṃ yuktaṃ ca pūrayet/</s></l>
<l> <s type="pada">yuktaṃ yuktaṃ ca badhnīyād</s> <s type="pada">evaṃ śuddhim avāpnuyāt//</s></l> 
</lg>
 
<lg xml:id="hp02_019">
 <l> <s type="pada">yadā tu nāḍīśuddhiḥ syāt</s> <s type="pada">tadā cihnāni bāhyataḥ/</s></l>
<l> <s type="pada">kāyasya kṛśatā kānti</s><s type="pada">s tathā jāyeta niścitam//</s></l> 
</lg>
 
<lg xml:id="hp02_020">
 <l> <s type="pada">yatheṣṭaṃ dhāraṇaṃ vāyor</s> <s type="pada">analasya pradīpanam/</s></l>
<l> <s type="pada">nādābhivyaktir ārogyaṃ</s> <s type="pada">jāyate nāḍiśodhanāt</s> 
</l> 
</lg>
 
<lg xml:id="hp02_021">
 <l> <s type="pada">medaḥ</s> <s type="pada">ṣaṭ karmāṇi samācaret/</s></l>
<l> <s type="pada"> nācaret tāni</s> <s type="pada">doṣāṇāṃ //</s> 
</l> 
</lg>
 
<lg xml:id="hp02_022">
 <l> <s type="pada">dhautibastyanyatī ceti</s><s type="pada">trāṭanaṃ nakulī tathā/</s></l>
<l> <s type="pada">kapālabhāti caitāni</s> <s type="pada">ṣaṭ karmāṇi pracakṣate//</s></l> 
</lg>
 
<lg xml:id="hp02_023">
 <l> <s type="pada">karmaṣaṭkam idaṃ gopyaṃ</s> <s type="pada">ghaṭaśodhanakārakam/</s></l>
<l> <s type="pada">vicitraguṇasandhāyi</s> <s type="pada">pūjyate yogapuṅgavaiḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp02_024">
 <l> <s type="pada">caturaṅgulavistāraṃ</s>
 <s type="pada">śaktaṃ vastraṃ śanair graset/</s></l>
<l> <s type="pada">tataḥ pratyāharec caita</s><s type="pada">uṣālaṃ dhautikarma °kṛt//</s></l> 
</lg>
 
<lg xml:id="hp02_025">
 <l> <s type="pada">kāsaśvāsaplīhakuṣṭha</s> <s type="pada">śleṣmārogāś ca viṃśatiḥ/</s></l>
<l> <s type="pada">dhautikarmaprabhāvena</s> <s type="pada">dhāvanty eva na saṃśayaḥ//</s><anchor xml:id="VuII25"/></l> 
</lg>
 
 
<lg xml:id="hp02_026">
 <l> <s type="pada">nābhidaghna jale pāyur</s><s type="pada">nyastanālotkaṭāsanaḥ/</s></l>
<l> <s type="pada">ādhārakuñcanaṃ kuryāt</s> <s type="pada">pāṣalaṃ bastikarma tat//</s></l> 
</lg>
 
<lg xml:id="hp02_027">
 <l> <s type="pada">gulmaplīhodaraṃ cāpi</s> <s type="pada">vātapittakaphodbhavāḥ/</s></l>
<l> <s type="pada">bastikarmaprabhāvena</s> <s type="pada">dhāryante sakalāmayāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_028">
 <l> <s type="pada">dhātvindriyāntaḥkaraṇaprasādaṃ</s></l>
<l> <s type="pada">dadyāc ca kāntiṃ dahanapradīptaṃ/</s></l>
<l> <s type="pada">aśeṣadoṣopacayaṃ nihanyā</s>-</l>
<l> <s type="pada">d abhyasyamānaṃ jalabastikarma//</s></l> 
</lg>
 
<lg xml:id="hp02_029">
 <l>found after <ptr target="#VuII25"/><s type="pada">udaragatapadārthaudvamante</s></l>
<l> <s type="pada">pavanam apānam udīrya kaṇṭhanāle/</s></l>
<l> <s type="pada">kramaparijitavaśyavāyuḥ|go-</s></l>
<l> <s type="pada">gajakaṇīti nigadyate haṭhajñaiḥ//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_030">
 <l> <s type="pada">sūtraṃ vitastisusnigdhaṃ</s> <s type="pada">nāsānāle praveśayet/</s></l>
<l> <s type="pada">mukhā nirgamayec caiṣā</s> <s type="pada">niti siddherr nigadyate//</s></l> 
</lg>
 
<lg xml:id="hp02_031">
 <l> <s type="pada">kapālaśodhanī kaṃṭhyā</s> <s type="pada">divyadṛṣṭipradāyinī/</s></l>
<l> <s type="pada">jatrūrdhvajātarogaghnaṃ</s> <s type="pada">jayaty āsuṃ nitī satī//</s></l> 
</lg>
 
 
<lg xml:id="hp02_032">
 <l> <s type="pada">nirīkṣye niścaladṛśā</s> <s type="pada">sūkṣmalakṣmaṃ samāhitaḥ/</s></l>
<l> <s type="pada">aśrusaṃpātaparyanta</s><s type="pada">m ācāryaitroṭakaṃ smṛtaṃ//</s></l> 
</lg>
 
<lg xml:id="hp02_033">
 <l> <s type="pada">mocakaṃ netrarogāṇāṃ</s> <s type="pada">tandrādīnāṃ ca pāṭavaṃ/</s></l>
<l> <s type="pada">yatnata</s><s type="pada">tuṭakaṃ gopyaṃ yathā hāṭakapeṭakam//</s></l> 
</lg>
 
 
<lg xml:id="hp02_034">
 <l> <s type="pada">amandāvattavegena</s> <s type="pada">tuṃḍaṃ savyāpasavyataḥ/</s></l>
<l> <s type="pada">natāṃso bhramayed eṣā</s> <s type="pada">naulī gaulīḥ praśasyate//</s></l> 
</lg>
 
<lg xml:id="hp02_035">
 <l> <s type="pada">tuṃḍāgnisaṃdīpanapācanāni</s>-</l>
<l><s type="pada">saṃdāyikānandakarī sadaiva/</s></l>
<l> <s type="pada">aśeṣadoṣāmayaśoṣaṇī ca</s></l>
<l> <s type="pada">haṭhakriyāmūlam iyaṃ hi nauliḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp02_036">
 <l> <s type="pada">l lohakārasya</s> <s type="pada">recapūrau /</s></l>
<l> <s type="pada">kapāla vikhyātā</s> <s type="pada">//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_037">
 <l> <s type="pada">ṣaṭkarmabhir gatasthaulya</s><s type="pada">kaphamedomalādikaḥ/</s></l>
<l> <s type="pada">prāṇāyāmaṃ tataḥ kuryād</s> <s type="pada">anāyāsena sidhyati//</s></l> 
</lg>
 
<lg xml:id="hp02_038">
 <l> <s type="pada">prāṇāyāmena vai sarve</s> <s type="pada">praśuṣyanti malā api/</s></l>
<l> <s type="pada">ācāryāṇāṃ tu keṣāṃci</s><s type="pada">d anyat karma na saṃmatam//</s></l> 
</lg>
 
<lg xml:id="hp02_039">
 <l> <s type="pada">brahmādayo’pi tridaśāḥ</s> <s type="pada">pavanābhyāsatatparāḥ/</s> 

</l>
<l> <s type="pada">abhūvann antakabhayāt</s> <s type="pada">tasmāt pavanam abhyaset//</s> 

<anchor xml:id="III39"/></l> 
</lg>
 
<lg xml:id="hp02_040">
 <l> <s type="pada">yāvad baddho marud dehe</s> <s type="pada">yāvac cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">yātpaśyed bhruvor madhye</s> <s type="pada">tāvat kālabhayaṃ kutaḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp02_041">
 <l> <s type="pada">vidhivat prāṇasaṃyāmai</s><s type="pada">r nāḍīcakraṃ viśodhite/</s></l>
<l> <s type="pada">suṣumṇāvadanaṃ bhittvā</s> <s type="pada">sukhād viśati mārutaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_042">
 <l> <s type="pada">mārute madhyasaṃcāre</s> <s type="pada">manaḥsthairyaṃ prajāyate/</s></l>
<l> <s type="pada">yo manaḥsusthirībhāvaḥ</s> <s type="pada">saivāvasthā manonmanī//</s></l> 
</lg>
 
<lg xml:id="hp02_043">
 <l> <s type="pada">tatsiddhayo vidhānajñāś</s><s type="pada"> citrākurvanti kumbhakān/</s></l>
<l> <s type="pada">vicitrakumbhakābhyāsā</s><s type="pada">d vicitrāṃ siddhim āpnuyāt//</s></l> 
</lg>
 
 
<lg xml:id="hp02_044">
 <l> <s type="pada">sūryabhedanam ujjāyī</s> <s type="pada">tathā śītkāraśītalī/</s></l>
<l><s type="pada">bhastrikā bhramarī mūrchā</s> <s type="pada">plāvanīty aṣṭa kumbhakāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_045">
 <l> <s type="pada">pūrakānte tu kartavyo</s> <s type="pada">bandho jālandharābhidhaḥ/</s></l>
<l> <s type="pada">kumbhakānte recakādau</s> <s type="pada">kartavyas tūḍḍiyāṇakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_046">
 <l> <s type="pada">adhasthātkuṃjakenāśu</s> <s type="pada">kaṇṭhasaṃkocane kṛte/</s></l>
<l> <s type="pada">madhye paścimatāṇa</s> <s type="pada">sthātt prāṇo brahmanāḍigataḥ//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp02_047">
 <l> <s type="pada">apānam ūrdhvam utthāpya</s> <s type="pada">prāṇaṃ kaṇṭhād adho nayan/</s></l>
<l> <s type="pada">yogī jarāvimuktaḥ sa</s> <s type="pada">ṣoḍaśo vayasā
 bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp02_048">
 <l> <s type="pada">āsane sukhade yogī</s> <s type="pada">baddhvā vīsanaṃ sudhī/</s></l>
<l> <s type="pada">dakṣanāḍyāṃ samākṛṣya</s> <s type="pada">bahiḥsthaṃ pavanaṃ śanaiḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_049">
 <l> <s type="pada">ā keśāgranakhāgraṃ ca</s> <s type="pada">nirovadhi kumbhayet/</s></l>
<l> <s type="pada">tataḥ śanaiḥ savyanāḍyā</s> <s type="pada">recayet pavanaṃ sudhīḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_050">
 <l> <s type="pada">kapālaśodhanaṃ vāta</s><s type="pada">śoṣaghnaṃ kṛmidoṣaham/</s></l>
<l> <s type="pada">punaḥ punar idaṃ kāryaṃ</s> <s type="pada">sūryabhedanam udāhṛtaṃ// </s></l> 
</lg>
 
 
<lg xml:id="hp02_051">
 <l> <s type="pada">mukhaṃ saṃyamya nāsābhyāmm</s> <s type="pada">ākṛṣya pavanaṃ śanaiḥ/</s></l>
<l> <s type="pada">yathā lagati kaṇṭhāt tu</s> <s type="pada">hṛdayāvadhi sasvanam//</s></l> 
</lg>
 
<lg xml:id="hp02_052">
 <l> <s type="pada">pūrvavat kumbhayeprāṇān</s> <s type="pada">recayed iḍayā tataḥ/</s></l>
<l> <s type="pada">śleṣmadoṣaharaṃ dehām</s> <s type="pada">analaṃ dīpavardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_053">
 <l> <s type="pada">nāḍījalodarā dhātu</s><s type="pada">gatarogavināśanam/</s></l>
<l> <s type="pada">gacchatas tiṣṭhataḥ kāya</s> <s type="pada">ujjāyyākhyaṃ tu kumbhakam</s>//</l> 
</lg>
 
 
<lg xml:id="hp02_054">
 <l> <s type="pada">satkāṃ dadyāt sadā vaktre</s> <s type="pada">ghrāṇe cātha vijaṃbhakāṃ/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">kāmadevo dvitīyakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_055">
 <l> <s type="pada">yoginīcakrasāmānya</s> <s type="pada">sṛṣṭisaṃhārakārakaḥ/</s></l>
<l> <s type="pada">na kṣudhā na tṛṣā nidrā</s> <s type="pada">naivālasyaṃ tu jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_056">
 <l> <s type="pada">bhavet svacchandadehaś ca</s> <s type="pada">sarvopadravavarjitaḥ/</s></l>
<l> <s type="pada">anena vidhinā nityaṃ</s> <s type="pada">yogeṃdro bhūmimaṇḍale//</s></l> 
</lg>
 
 
<lg xml:id="hp02_057">
 <l> <s type="pada">rasanātālumūlena</s> <s type="pada">yaḥ prāṇaṃ satataṃ pibet/</s></l>
<l> <s type="pada">abdārdhena bhavet tasya</s> <s type="pada">sarvarogaparikṣayaḥ//</s><anchor xml:id="II57"/> 
</l> 
</lg>
 
 
<lg xml:id="hp02_058">
 <l> <s type="pada">jihvayā vāyum ākṛṣya</s> <s type="pada">pūrvavat kumbhakād anu/</s></l>
<l> <s type="pada">śanais tu ghrāṇarandhrābhyāṃ</s> <s type="pada">recayed anilaṃ śanaiḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_059">
 <l> <s type="pada">gulmaplīhodarānrogān</s> <s type="pada">jvaraṃ pittaṃ kṣayaṃ tṛṣāṃ/</s></l>
<l> <s type="pada">viṣāṇi śītalī nāma</s> <s type="pada">kumbhako’yaṃ nihanti hi//</s></l> 
</lg>
 
 
<lg xml:id="hp02_060">
 <l> <s type="pada">ūrvor upari ced dhatte</s> <s type="pada">ubhe pādatale tathā/</s></l>
<l> <s type="pada">padmāsanaṃ bhavet samyak</s> <s type="pada">sarvapāpapraṇāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_061">
 <l> <s type="pada">samyak padmāsanaṃ baddhvā</s> <s type="pada">samagrīvodaraḥ sudhīḥ/</s></l>
<l> <s type="pada">mukhaṃ saṃyamya yatnena</s> <s type="pada">prāṇaṃ ghrāṇena recayet//</s>
</l> 
</lg>
 
<lg xml:id="hp02_062">
 <l> <s type="pada">yathā lagati hṛtkaṇṭha</s> <s type="pada">kapāle sasvanaṃ tataḥ/</s></l>
<l> <s type="pada">vegena pūrayet kiṃcit</s> <s type="pada">hṛtpadmāvadhi mārutam//</s></l> 
</lg>
 
<lg xml:id="hp02_063">
 <l> <s type="pada">punar virecayet tadva</s><s type="pada">pūrayed vā punaḥ punaḥ/</s></l>
<l> <s type="pada">yathaiva lohakārāṇāṃ</s> <s type="pada">bhastrā vegena cālyate//</s></l> 
</lg>
 
<lg xml:id="hp02_064">
 <l> <s type="pada">tathaiva svaśarīrasthaṃ</s> <s type="pada">cālayet pavanaṃ dhiyā/</s><anchor xml:id="II64"/></l>
<l> <s type="pada">tathā kramo bhaved dehe</s> <s type="pada">tadā sūryeṇa pūrayet//</s></l> 
</lg>

<lg xml:id="hp02_065">
 <l> <s type="pada">athodaraṃ yadāt pūrṇaṃ</s> <s type="pada">pavanena tadā laghu/</s></l>
<l> <s type="pada">dhāvayennāsikā madhyāṃ</s><s type="pada">tarjanībhyāṃ vinā dṛḍham//</s></l> 
</lg>
 
<lg xml:id="hp02_066">
 <l> <s type="pada">kumbhakaṃ pūrvavat kṛtvā</s> <s type="pada">recayeekayānilam/</s></l>
<l> <s type="pada">vātapittaśleṣmaharaṃ</s> <s type="pada">śarīrāgnivivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_067">
 <l> <s type="pada">kuṇḍalībodhakaṃ vipra</s> <s type="pada">bhāvaghnaṃ sukhadaṃ śubham/</s></l>
<l> <s type="pada">brahmanāḍīmukhe saṃsthaṃ</s><s type="pada">kaphādyargalanāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_068">
 <l> <s type="pada">samyaggātrasamudbhūta</s><s type="pada">granthitrayavibhedakam//</s></l>
<l> <s type="pada">viśeṣeṇaiva kartavyaṃ</s> <s type="pada">bhastrākhyaṃ kumbhakaṃ svayaṃ//</s> 
 </l> 
</lg>
 
 
<lg xml:id="hp02_069">
 <l> <s type="pada">vegodveṣaṃ pūrakaṃ bhṛṅganādaṃ</s></l>
<l> <s type="pada">bhṛṅgīnādaṃ recakaṃ mandamandam/</s></l>
<l> <s type="pada">yogeṃdrāṇām evam abhyāsayogā-</s></l>
<l> <s type="pada">c citte jātā kvacidd ānandamūrchā//</s></l>
</lg>
 
 
<lg xml:id="hp02_070">
 <l> <s type="pada">pūrakānte </s> <s type="pada">baddhvā jālandharaṃ śanaiḥ/</s></l>
<l> <s type="pada">recayen mūrchanā</s> <s type="pada">manomūrchāsukha//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_071">
 <l> <s type="pada">annapravartitodgāra</s><s type="pada">mārutāpūritodaraḥ/</s></l>
<l> <s type="pada">payasy agādhe’pi sukhāt</s> <s type="pada">plavate padmapatravat</s>// 
</l> 
</lg>
 
 
 
<lg xml:id="hp02_072">
 <l> <s type="pada">prāṇāyāmas tridhā prokto</s> <s type="pada">recapūrakakumbhakaiḥ/</s></l>
<l> <s type="pada">sahitaḥ kevalaś ceti</s> <s type="pada">kumbhako dvividho mataḥ/</s> 
</l> 
</lg>
 
<lg xml:id="hp02_073">
 <l> <s type="pada"></s> <s type="pada"> /</s> 
</l>
<l> <s type="pada">yāvat kevalasiddhiḥ syāt</s> <s type="pada">sahitaṃ tāvadm abhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_074">
 <l> <s type="pada">recakaṃ pūrakaṃ muktvā</s> <s type="pada">sukhaṃ saṃdhāya dhāraṇāṃ/</s></l>
<l> <s type="pada">prāṇāyāmo’yam ity uktaḥ</s> <s type="pada">sarvaiḥ kevalakumbhakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_075">
 <l> <s type="pada">kevale kumbhake siddhe</s> <s type="pada">recapūrevivarjayet/</s></l>
<l> <s type="pada">na tasya durlabhaṃ kiṃcit</s> <s type="pada">triṣu lokeṣu vidyate//</s></l> 
</lg>
 
<lg xml:id="hp02_076">
 <l> <s type="pada">saktaṃ kevalakumbhena</s> <s type="pada">yatheṣṭa vāyudhāraṇāt/</s></l>
<l> <s type="pada">rājayogaphalaṃ caiva</s> <s type="pada">labhyate nātra saṃśayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_077">
 <l> <s type="pada">haṭhaṃ vinā rājayogo</s> <s type="pada">rājayogaṃ vinā haṭhaḥ/</s></l>
<l> <s type="pada">na sidhyati tato yugma</s><s type="pada">m ā niṣpatteḥ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_078">
 <l> <s type="pada">kumbhitaprāṇarecānte</s> <s type="pada">kuryāc cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">rājayogapadaṃ labhet//</s> 
</l> 
</lg>
 

<lg xml:id="hp02_079">
 <l><s type="pada">kumbhakāt kuṇḍalībodhaḥ</s> <s type="pada">kuṇḍalībodhato bhavet/</s></l>
<l> <s type="pada">anargala sukhāmnā ca</s> <s type="pada"> haṭhasiddhiprajāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_080">
 <l> <s type="pada">vapuḥkṛśatvaṃ vadane prasannatā</s></l>
<l> <s type="pada">nādasphuṭatvaṃ nayane ca nirmale/</s></l>
<l> <s type="pada">arogatā bindujayo’gnidīpanaṃ</s> </l>
<l> <s type="pada">nāḍīṣu śuddhir haṭhasiddhilakṣaṇam//</s></l> 
</lg>
 <div type="colophon" xml:id="hp02_col"><p> iti svātmārāmayogendraviracitāyāṃ haṭhapradīpikāyāṃ dvitīya upadeśaḥ// </p></div> 
