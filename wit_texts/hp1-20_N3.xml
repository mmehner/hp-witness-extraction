      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājasaudham āroḍhum icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāṃtā bahumatadhvānte rājamārgamajānatām/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyo hi matsyendragorakṣādyā virājate/</l> 
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendraśābarānandabhairavaḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣaḥ savālmikaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī siddhabuddhiś ca kanthalī/</l> 
	<l>goraṃṭakasurānandasiddhapādaś ca carpaṭi//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kanerī pūjyapādaś ca nityanātho nirañjanaḥ/</l> 
	<l>kapālī bindunāthaś ca kākacaṃdeśvarogayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>alamaprabhudevaś ca ghoḍāculī ca ṭiṇṭiṇiḥ /</l> 
	<l>bhāluki nami auḍḍīśa siddhaḥ kāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāradaṃḍaṃ brahmāṃḍeṣu ṣu caraṃti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānāṃ samaśra prathamo haṭhaḥ/</l> 
	<l>{}{}{}{} {}//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yogināṃ siddhim icchatām/</l> 
	<l>bhaved vīryavatī guptā nirvīryā ca prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānta maṭikā madhye sthātavyaṃhaṭha yogināṃ// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragarttapiṭhakaṃ nātyuccanīkāyataṃ/</l> 
	<l>saṃgomayasāpraliptavimalaṃ nidoṣijpaṃtpūpsitaṃ/</l> 
	<l>bāhye maṇḍapavedikūparuciraṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamahasya lakṣaṇam idaṃ siddhaihaṭhābhyāsabhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam eva sadābhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>alpāhāro prayāsaś ca prajalpo niyamagrahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogo vinaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhān niścayād dhairyāt tattvajñānāc ca darśanāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>   </l> 
	<l>   </l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l> </l> 
	<l>  </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>tatkuryādāsana sthairyam ārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūr vorantare samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇe'pi tathā savyaṃ gomukhaṃ gomukhaṃ yathā//</l> 
      </lg> 
