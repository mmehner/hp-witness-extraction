<l> <s type="pada">candras tāmasa ity uktaḥ</s> <s type="pada">sūryo rājasa ucyate//</s>
 
</l> 
</lg>
 
<lg xml:id="hp04_057">
<l> <s type="pada"/> <s type="pada"> /</s></l>
<l> <s type="pada"> suṣumṇā kālasya</s> <s type="pada">guhyam etad udāhṛtam//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp04_058">
<l> <s type="pada">ṣaṭcakraṃ ṣoḍaśādhāraṃ</s> <s type="pada"> guṇatrayam/</s></l>
<l> <s type="pada">śeṣaṃ tu granthavistāraṃ</s> <s type="pada"> paramaṃ padam//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_059">
<l> <s type="pada">kuṇḍalī kuṭilākārā</s> <s type="pada">sarpavat parikīrtitā/</s></l>
<l> <s type="pada">sā śaktiḥ cālitā yena</s> <s type="pada">sa yogī nātra saṃśayaḥ//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp04_060">
<l> <s type="pada">yadā kūṭaṃ trikūṭasthaṃ</s> <s type="pada">cittaṃ tatra /</s></l>
<l> <s type="pada">kuṇḍalyās tu </s> <s type="pada">sa mukto nātra saṃśayaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_061">
<l> <s type="pada">dvāsaptatisahasrāṇi</s> <s type="pada">nāḍīdvārāṇipañjare/</s></l>
<l> <s type="pada">suṣumṇā śāṃbhavī śaktiḥ</s> <s type="pada">śeṣās tv eva nirarthakāḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp04_062">
<l> <s type="pada">vāyuḥ  </s><s type="pada">d agninā saha kuṇḍalī/</s></l>
<l> <s type="pada">bodhayitvā suṣumṇāyāṃ</s> <s type="pada">anirodhataḥ//</s><anchor xml:id="bodhayitva"/> 
</l> 
</lg>
 
<lg xml:id="hp04_063">
<l> <s type="pada">suṣumṇā prāṇe</s> <s type="pada">sidhyaty eva manonmanī/</s> 
</l>
<l> <s type="pada">anyathā vividhā</s> <s type="pada">prayāsāyaiva //</s></l> 
</lg>
 
<lg xml:id="hp04_064">
<l> <s type="pada">pavano badhyate yena</s> <s type="pada">manas tenaiva badhyate/</s></l>
<l> <s type="pada"> badhyate yena</s> <s type="pada"> badhyate//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_065">
<l> <s type="pada">hetu cittasya</s> <s type="pada">vāsanā ca samīraṇaḥ/</s></l>
<l> <s type="pada">tayor vinaṣṭa ekasmi</s><s type="pada">//</s>
</l> 
</lg>
 
<lg xml:id="hp04_066">
<l> <s type="pada">mano yatra </s> <s type="pada">pavanas tatra līyate/</s></l>
<l> <s type="pada"/> <s type="pada">manas tatraiva līyate//</s>
 
</l> 
</lg>
 
<lg xml:id="hp04_067">
<l> <s type="pada">dugdhāmbuvat saṃmilitau sadaiva</s></l>
<l> <s type="pada">tulyakriyau  /</s></l>
<l> <s type="pada">yāvan manas tatra marutpravṛtti-</s></l>
<l> <s type="pada">r yāva manaḥpravṛttiḥ//</s><anchor xml:id="dugdha"/></l> 
</lg>
 
<lg xml:id="hp04_068">
<l> <s type="pada">tatraikanāśād aparasya </s></l>
<l> <s type="pada">ekapravṛtter aparapravṛttiḥ/</s>
</l>
<l> <s type="pada">ś cendriyavarga-</s></l>
<l> <s type="pada">r vidhvastayor mokṣapadasya siddhiḥ//</s><anchor xml:id="tatraika"/></l> 
</lg>
 
<lg xml:id="hp04_069">
<l> <s type="pada">vāyumārgeṇa saṃcāre</s> <s type="pada"> /</s></l>
<l> <s type="pada">guṇam aiśvaryaṃ</s> <s type="pada">satyaṃ satyaṃ varānane//</s> 
<anchor xml:id="vayumargena"/> 
</l> 
</lg>
 
 
<lg xml:id="hp04_070">
<l> <s type="pada">yadā  prāṇo</s> <s type="pada">mānasaṃ /</s></l>
<l> <s type="pada">tadā samarasatvaṃ </s><s type="pada">//</s><anchor xml:id="visvarupa"/> 
 
</l> 
</lg>
 
<lg xml:id="hp04_071">
<l> <s type="pada"> sthiro vāyus</s> <s type="pada">tato  sthiro bhavet/</s></l>
<l> <s type="pada">bindu</s> <s type="pada">piṇḍasthairyaṃ prajāyate//</s> 
<anchor xml:id="manahsthairye"/> 
</l> 
</lg>
 
<lg xml:id="hp04_072">
<l> <s type="pada">dṛṣṭiḥ sthirā yasya vinaiva dṛśyā-</s></l>
<l> <s type="pada">d vāyuḥ sthiro yasya vinā prayatnāt/</s></l>
<l> <s type="pada">cittaṃ sthiraṃ yasya </s></l>
<l> <s type="pada">sa eva yogī sa guruḥ sa sevyaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_073">
<l> <s type="pada">praveśe nirgame </s> <s type="pada">dakṣiṇe /</s></l>
<l> <s type="pada"> </s> <s type="pada">sa mukto nātra saṃśayaḥ//</s> 
<anchor xml:id="pravese"/> 
</l> 
</lg>
 
<lg xml:id="hp04_074">
<l> <s type="pada">sarve haṭhalayopāyā</s> <s type="pada">/</s></l>
<l> <s type="pada">rājayogasamā</s> <s type="pada">puruṣaḥ kālavañcakaḥ//</s><anchor xml:id="kalavancaka"/> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_074_1">
<l> <s type="pada">iḍā bhagavatī gaṅgā</s> <s type="pada">piṅgalā  nadī/</s></l>
<l> <s type="pada"> taddvayor madhye</s> <s type="pada">suṣumṇā  sarasvatī//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_074_2">
<l> <s type="pada">triveṇīsaṃgamo yatra</s> <s type="pada">tīrtharājaḥ sa ucyate/</s></l>
<l> <s type="pada"/> <s type="pada">sarvapāpaiḥ pramucyate//</s> 
</l> 
</lg>
</div> 
<lg xml:id="hp04_075">
<l> <s type="pada">iti tu sakalayogaśāstra</s></l>
<l> <s type="pada">sārabhūtam/</s></l>
<l> <s type="pada"> haṭhāmṛtaṃ </s></l>
<l> <s type="pada">yadi bhavatā//</s> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_075_1">
<l><s type="pada">vidyātīrthe  vibudhāḥ sādhavaḥ satyatīrthe</s></l>
<l><s type="pada">gaṅgātīrthe malinamanaso yogino jñānatīrthe/</s></l>
<l><s type="pada">dhārātīrthe dharaṇipatayo dānatīrthe dhanāḍhyāḥ</s></l>
<l><s type="pada">lajjātīrthe kulayuvatayaḥ pātakaṃ kṣālayanti//</s> 
</l> 
</lg>
</div> <div type="colophon" xml:id="hp04_col"><p> iti viracitāyāṃ haṭhapradīpikāyāṃ caturthopadeśaḥ//
 </p></div> 
