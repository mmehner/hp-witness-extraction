      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājayogam āroḍhum icchor adhiroha eva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntvā vaṃhumatadhvānte rajayogam ajānatām/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāma prakāśyate//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l> 
	<l>svātmārāmo 'thavā yogī jānante tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendrasāgarānandabhairavā/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayā//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī siddhabuddhiś ca kanthaḍīṃ/</l> 
	<l>pauraṇṭakaḥ surānandasiddhapādaś ca carppaṭiḥ//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kānerī pūjyapādaś ca nityanātho nirañjanaṃ/</l> 
	<l>kapālī bindunāthaś ca kākacaṇḍīśvarādayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>allāmaḥ prabhudevaś ca ghoḍācolī ca ciṃciṇī /</l> 
	<l>vāsukir nāgabodhaś ca khaṇḍakāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprasādataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe tu caranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsārāśramataptānām āśrayo yaṃ haṭho mataḥ/</l> 
	<l>aśeṣayogayuktānāmādhāraḥkamaṭho haṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyaṃ yogināṃ siddhim icchatām/</l> 
	<l>bhaved vīryavatī guptā nirvīryā tu prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānte maṭhikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragarttaviṭapaṃ nātyuccanoccāyataṃ/</l> 
	<l>samyag gomayasāndraliptavimalaṃ niḥśeṣabādhojhitaṃ/</l> 
	<l>bāhye maṇḍapavedikūparuciraṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam ārgaṃ samabhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>ātmāhāraḥ prayāsaś ca prajalpo niyamagrahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogo vinaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhaniścayād dhairyāt tattvajñānā ca darśanāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>   </l> 
	<l>   </l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l> </l> 
	<l>  </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>tatkuryādāsana skairyamārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhir mmatsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūrvvorantare samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjuḥ kāyasamāsīnaṃ svastikaṃ tat pracakṣate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇe'pi tathā savyaṃ gomukhaṃ gomukhaṃ tathā//</l> 
      </lg> 
