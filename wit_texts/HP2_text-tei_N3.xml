<body>

<lg xml:id="hp02_001">
 <l> <s type="pada">athāsane dṛḍhe yogī</s> <s type="pada">vaśī hitamitāśanaḥ/</s></l>
<l> <s type="pada">gurūpadiṣṭamārgeṇa</s> <s type="pada">prāṇāyāmaṃ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_002">
 <l> <s type="pada">cale vāte cale sarvaṃ</s> <s type="pada">niścale dṛḍhabaṃdhanaṃ/</s></l>
<l> <s type="pada">yogī sthāṇutvam āpnoti</s> <s type="pada">tato vāyuṃnibandhanāt//</s></l> 
</lg>
 
<lg xml:id="hp02_003">
 <l> <s type="pada">yāvavāyu sthito dehe</s> <s type="pada">tāvajītavimm ucyate/</s></l>
<l> <s type="pada">maraṇaṃ tasya niḥkrāṃtaṃ</s><s type="pada"> tato vāyuṃ nibaṃdhanāt//</s></l> 
</lg>
 
<lg xml:id="hp02_004">
 <l> <s type="pada">malākulāsu nāḍīṣu</s> <s type="pada">māruto naiva madhyagaḥ/</s></l>
<l> <s type="pada">kathaṃ syād unmanībhāvaḥ</s> <s type="pada">kāyasiddhiḥ kathaṃ bhavet//</s></l> 
</lg>
 
<lg xml:id="hp02_005">
 <l> <s type="pada">śuddhim eti yadā sarvaṃ</s> <s type="pada">nāḍīcakraṃ malākulam/</s></l>
<l> <s type="pada">tadeva jāyate yogī</s> <s type="pada">prāṇasaṃgrahaṇe kṣamaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_006">
 <l> <s type="pada">prāṇābhyāsaṃ tataḥ kuryān</s> <s type="pada">nityaṃ sāttvikayā dhiyā/</s></l>
<l> <s type="pada">yāsthā suśumnā susvasthā</s> <s type="pada">malā śoṣaṃ prayānti ca//</s></l> 
</lg>
 
<lg xml:id="hp02_007">
 <l> <s type="pada">baddhapadmāsano yogī</s> <s type="pada">prāṇaṃ candreṇa pūrayet/</s></l>
<l> <s type="pada">dhārayitvā yathāśaktyā</s> <s type="pada">punaḥ sūryeṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_008">
 <l> <s type="pada">prāṇaṃ sūryeṇa cākṛṣya</s> <s type="pada">pūrayed udaraṃ śanaiḥ/</s></l>
<l> <s type="pada">vidhivat kumbhakaṃ kṛtvā</s> <s type="pada">punaś candreṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_009">
 <l> <s type="pada">yena tyajetena pūrya</s> <s type="pada">dhārayed aanirodhataḥ/</s></l>
<l> <s type="pada">recayec ca tato’nyena</s> <s type="pada">śanair eva na vegataḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_010">
 <l> <s type="pada">prāṇaṃ ceḍiyā piben niyamitaṃ bhūyo’nyayā recayet</s></l>
<l> <s type="pada">pītvā piṅgalayā samīraṇaalaṃ baddhvā tyajed vāmayā/</s></l>
<l> <s type="pada">sūryācandramasor anena vidhinā bimbadvayaṃ dhyāyatāṃ</s></l>
<l> <s type="pada">śuddhā nāḍigaṇā bhavanti yamināṃ māsatrayād ūrdhvataḥ//</s><anchor xml:id="II10"/></l> 
</lg>
 
<lg xml:id="hp02_011">
 <l> <s type="pada">prātar madhyandine sāyam ardha</s><s type="pada">rātre ca kumbhakān/</s></l>
<l> <s type="pada">śanair aśītiparyante</s> <s type="pada">caturvāraṃ samabhyaset//</s>
</l> 
</lg>
 
<lg xml:id="hp02_012">
 <l> <s type="pada">kanīyasī bhavetsvadaḥ</s> <s type="pada">kampo bhavati madhyame/</s></l>
<l> <s type="pada">uttiṣṭhaty uttame prāṇa</s><s type="pada">rodhe padmāsanaṃ muhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_013">
 <l> <s type="pada">jalena śramajātena</s> <s type="pada">gātramardanam ācaret/</s></l>
<l> <s type="pada">dṛḍhatā laghutā yāti</s> <s type="pada">tena gātrasya jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_014">
 <l> <s type="pada">abhyāsakāle prathame</s> <s type="pada">śastaṃ kṣīrānnabhojanam/</s></l>
<l> <s type="pada">tato’bhyāse dṛḍhībhūte</s> <s type="pada">na tādṛṅniyamagrahaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_015">
 <l><s type="pada">yathā siṃho gajo vyāghro</s> <s type="pada">bhaved vaśyaḥ śanaiḥ śanaiḥ/</s></l>
<l> <s type="pada">tathaiva sevito vāyur</s> <s type="pada">anyathā hanti sādhakam//</s></l> 
</lg>
 
<lg xml:id="hp02_016">
 <l> <s type="pada">prāṇāyāmena yuktena</s> <s type="pada">sarvarogakṣayo bhavet/</s></l>
<l> <s type="pada">ayuktābhyāsayogena</s> <s type="pada">sarvarogasamudbhavaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_017">
 <l> <s type="pada">hikkā śvāsaś ca kāsaś ca</s> <s type="pada">śiraḥkarṇākṣivedanaḥ/</s></l>
<l> <s type="pada">bhavanti vividhā doṣāḥ</s> <s type="pada">pavanasya vyatikramāt//</s></l> 
</lg>
 
<lg xml:id="hp02_018">
 <l> <s type="pada">yuktaṃ yuktaṃ tyajed vāyuṃ</s> <s type="pada">yuktaṃ yuktaṃ ca pūrayet/</s></l>
<l> <s type="pada">yuktaṃ yuktaṃ ca badhnīyād</s> <s type="pada">evaṃ śuddhim avāpnuyāt//</s></l> 
</lg>
 
<lg xml:id="hp02_019">
 <l> <s type="pada">yadā tu nāḍīśuddhiḥ syāt</s> <s type="pada">tadā cihnāni bāhyataḥ/</s></l>
<l> <s type="pada">kāyasya kṛtā kānti</s><s type="pada">s tathā jāyeta niścitā//</s></l> 
</lg>
 
<lg xml:id="hp02_020">
 <l> <s type="pada">yatheṣṭa dhāraṇaṃ vāyor</s> <s type="pada">analasya pradīpanam/</s></l>
<l> <s type="pada">nādābhivyaktir ārogyaṃ</s> <s type="pada">jāyate nāḍiśodhanāt</s> 
</l> 
</lg>
 
<lg xml:id="hp02_021">
 <l> <s type="pada">medaśleṣmādhikaḥ pūrvaṃ</s> <s type="pada">ṣaṭ karmāṇi samācaret/</s></l>
<l> <s type="pada">anyas tu nācaret tāni</s> <s type="pada">doṣāṇāṃ samabhāvataḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_022">
 <l> <s type="pada">dhautīvastirnīti caiva</s><s type="pada"> trāṭakaṃ laulikaṃ tathā/</s></l>
<l> <s type="pada">kapālabhāti caitāni</s> <s type="pada">ṣaṭ karmāṇi pracakṣate//</s></l> 
</lg>
 
<lg xml:id="hp02_023">
 <l> <s type="pada">karmaṣaṭkam idaṃ gopyaṃ</s> <s type="pada">ghaṭaśodhanakāraṇaṃ/</s></l>
<l> <s type="pada">vicitraguṇasandhāyī</s> <s type="pada">pūjyate yogipuṅgavaiḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp02_024">
 <l> <s type="pada">+ + + gulavistāraṃ</s>
 <s type="pada">siktaṃ vastraṃ śanair graset/</s></l>
<l> <s type="pada">tataḥ pratyāhareetad</s><s type="pada">husvāla dhautikarma °kṛt//</s></l> 
</lg>
 
<lg xml:id="hp02_025">
 <l> <s type="pada">kāsaśvāsaplīhakuṣṭhaṃ</s> <s type="pada">kapharogāś ca viṃśatiḥ/</s></l>
<l> <s type="pada">dhautīkarmaprabhāvena</s> <s type="pada">bhavanty eva na saṃśayaḥ//</s><anchor xml:id="VuII25"/></l> 
</lg>
 
 
<lg xml:id="hp02_026">
 <l> <s type="pada">nābhidagdha jale pāyu</s><s type="pada">nyastanālotkaṭāsanaḥ/</s></l>
<l> <s type="pada">ādhārākuñcanaṃ kuryāt</s> <s type="pada">pākhālaṃ bastikarma tat//</s></l> 
</lg>
 
<lg xml:id="hp02_027">
 <l> <s type="pada">gulmaplīhodaraṃ cāpi</s> <s type="pada">vātapittakaphobhavaḥ/</s></l>
<l> <s type="pada">bastikarmaprabhāvena</s> <s type="pada">vāryante sakalāmayāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_028">
 <l> <s type="pada">dhātvindriyāntaḥkaraṇaprasādaṃ</s></l>
<l> <s type="pada">dadyāc ca kāntiṃ dahanapradīptim/</s></l>
<l> <s type="pada">aśeṣadoṣopacayaṃ nihanyā</s>-</l>
<l> <s type="pada">d abhyasyamānaṃ jalabastikarma//</s></l> 
</lg>
 
<lg xml:id="hp02_029">
 <l><s type="pada">udaragatapadārtham udvamantī</s></l>
<l> <s type="pada">pavanam apānam udīrya kaṇṭhanāle/</s></l>
<l> <s type="pada">kramaparicayavaśyavāyumārgā-</s></l>
<l> <s type="pada">gajakarṇiti nigadyate haṭhajñaiḥ//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_030">
 <l> <s type="pada">sūtraṃ vitastisustabdhaṃ</s> <s type="pada">nāsānāle praveśayet/</s></l>
<l> <s type="pada">mukhān nirgamayec caiṣā</s> <s type="pada">nīti siddhair nigadyate//</s></l> 
</lg>
 
<lg xml:id="hp02_031">
 <l> <s type="pada">kapālaśodhanī vaṭyā</s> <s type="pada">divyadṛṣṭipradāyinī/</s></l>
<l> <s type="pada">hanūrdhvajātarogaughaṃ</s> <s type="pada">jayety āśu satī niti//</s></l> 
</lg>
 
 
<lg xml:id="hp02_032">
 <l> <s type="pada">nirīkṣen niścaladṛśā</s> <s type="pada">sūkṣmalakṣa samāhitaḥ/</s></l>
<l> <s type="pada">aśrusaṃpātaparyanta</s><s type="pada">m ācāryais trāṭakaṃ mataṃ//</s></l> 
</lg>
 
<lg xml:id="hp02_033">
 <l> <s type="pada">modakaṃ netrarogāṇāṃ</s> <s type="pada">tandrādīnāṃ kavāṭaka/</s></l>
<l> <s type="pada">yatnata</s><s type="pada">s trāṭakaṃ gopyaṃ yathā hāṭakapeṭakam//</s></l> 
</lg>
 
 
<lg xml:id="hp02_034">
 <l> <s type="pada">amandāvartavegena</s> <s type="pada">tudaṃ savyāpasavyataḥ/</s></l>
<l> <s type="pada">natāso bhramayed eṣā</s> <s type="pada">laulī gaulaiḥ praśasyate//</s></l> 
</lg>
 
<lg xml:id="hp02_035">
 <l> <s type="pada">tuṃdāṣṭisaṃdīpanapācanādi</s>-</l>
<l><s type="pada">sandhāyakānandakarī sadaiva/</s></l>
<l> <s type="pada">aśeṣadoṣāmayaśoṣaṇī ca</s></l>
<l> <s type="pada">haṭhakriyāmaulir iyaṃ ca laulī//</s></l> 
</lg>
 
 
<lg xml:id="hp02_036">
 <l> <s type="pada">bhastrāval lohakārasya</s> <s type="pada">recapūro susaṃbhramau/</s></l>
<l> <s type="pada">kapālabhāti vikhyātā</s> <s type="pada">kaphadoṣaviśoṣiṇī//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_037">
 <l> <s type="pada">ṣaṭkarmabhir gatasthaulya</s><s type="pada">kaphamedomalādikaḥ/</s></l>
<l> <s type="pada">prāṇāyāmaṃ tataḥ kuryād</s> <s type="pada">anāyāsena śudhyati//</s></l> 
</lg>
 
<lg xml:id="hp02_038">
 <l> <s type="pada">prāṇāyāmair eva sarve</s> <s type="pada">praśuṣyanti malā iti/</s></l>
<l> <s type="pada">ācāryāṇāṃ tu keṣāṃci</s><s type="pada">anyakarma na saṃmatam//</s></l> 
</lg>
 
<lg xml:id="hp02_039">
 <l> <s type="pada">brahmādayo’pi tridaśāḥ</s> <s type="pada">pavanābhyāsatatparāḥ/</s> 

</l>
<l> <s type="pada">abhūvann antakabhayāt</s> <s type="pada">tasmāt pavanam abhyaset//</s> 

<anchor xml:id="III39"/></l> 
</lg>
 
<lg xml:id="hp02_040">
 <l> <s type="pada">yāvad baddho marud dehe</s> <s type="pada">yāvac cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">yāvavīkṣed bhruvomadhyaṃ</s> <s type="pada">tāvat kālabhayaṃ kutaḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp02_041">
 <l> <s type="pada">vidhivat prāṇasaṃyāmai</s><s type="pada">nāḍicakre viśodhite/</s></l>
<l> <s type="pada">suṣumṇāvadanaṃ bhittvā</s> <s type="pada">sukhād viśati mārutaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_042">
 <l> <s type="pada">mārute madhyasaṃcāre</s> <s type="pada">manaḥsthairyaṃ prajāyate/</s></l>
<l> <s type="pada">yo manaḥsusthirībhāvaḥ</s> <s type="pada">saivāvasthā manonmanī//</s></l> 
</lg>
 
<lg xml:id="hp02_043">
 <l> <s type="pada">tatsiddhaye vidhānajña</s><s type="pada">ś citrāavita kumbhakān/</s></l>
<l> <s type="pada">vicitrakumbhakābhyāsā</s><s type="pada">d vicitrāṃ siddhim āpnuyāt//</s></l> 
</lg>
 
 
<lg xml:id="hp02_044">
 <l> <s type="pada">sūryabhedanam ujjāyī</s> <s type="pada">tathā śītkā ca śītalī/</s></l>
<l><s type="pada">bhastrikā bhramarī mūrchā</s> <s type="pada">kevalaścāṣṭa kumbhakāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_045">
 <l> <s type="pada">pūrakānte tu kartavyo</s> <s type="pada">bandho jālandharābhidhaḥ/</s></l>
<l> <s type="pada">kumbhakānte recakādau</s> <s type="pada">kartavyatuḍiyāṇakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_046">
 <l> <s type="pada">adhastā kuñcanenāśu</s> <s type="pada">kaṇṭhasaṃkocane kṛte/</s></l>
<l> <s type="pada">madhye paścimatāṇena</s> <s type="pada">syāt prāṇo brahmanāḍigaḥ//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp02_047">
 <l> <s type="pada">apānam ūrdhvam utthāpya</s> <s type="pada">prāṇaṃ kaṇṭhād adho nayan/</s></l>
<l> <s type="pada">yogī jarāvimuktaḥ san</s> <s type="pada">ṣoḍaśo vayasā
 bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp02_048">
 <l> <s type="pada">āsane sukhade yogī</s> <s type="pada">baddhvā vajrāsanaṃ tataḥ/</s></l>
<l> <s type="pada">dakṣanāḍyā samākṛṣya</s> <s type="pada">bahiḥsthaṃ pavanaṃ śanaiḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_049">
 <l> <s type="pada">ā keśāgrānakhāgrāś ca</s> <s type="pada">nirodhāvadhi kuṃbhayan/</s></l>
<l> <s type="pada">tataḥ śanaiḥ savyanāḍyā</s> <s type="pada">recayet pavanaṃ sudhī//</s></l> 
</lg>
 
<lg xml:id="hp02_050">
 <l> <s type="pada">kapālaśodhanaṃ vāta</s><s type="pada">doṣaghnaṃ kṛmidoṣajaṃ/</s></l>
<l> <s type="pada">punaḥ punar idaṃ kāryaṃ</s> <s type="pada">sūryabhedam udāhṛtaṃ// </s></l> 
</lg>
 
 
<lg xml:id="hp02_051">
 <l> <s type="pada">mukhaṃ saṃyamya nāḍībhyām</s> <s type="pada">ākṛṣya pavanaṃ śanaiḥ/</s></l>
<l> <s type="pada">yathā lagati kaṇṭhāt tu</s> <s type="pada">hṛdayāvadhi sasvanam//</s></l> 
</lg>
 
<lg xml:id="hp02_052">
 <l> <s type="pada">pūrvavat kumbhayet prāṇaṃ</s> <s type="pada">recayed iḍayā tataḥ/</s></l>
<l> <s type="pada">śleṣmadoṣaharaṃ kaṇṭhe</s> <s type="pada">dehānale vivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_053">
 <l> <s type="pada">nāḍījalodaro dhātu</s><s type="pada">gatadoṣavināśanam/</s></l>
<l> <s type="pada">gacchatas tiṣṭhataḥ kāryām</s> <s type="pada">ujjāyyākhyaṃ tu kumbhakam</s>//</l> 
</lg>
 
 
<lg xml:id="hp02_054">
 <l> <s type="pada">śītkāṃ dadyāt sadā vaktre</s> <s type="pada">ghrāṇe caiva vijṛmbhikām/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">kāmadevo dvitīyakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_055">
 <l> <s type="pada">yoginīcakrasāmānyaḥ</s> <s type="pada">sṛṣṭisaṃhārakārakaḥ/</s></l>
<l> <s type="pada">na kṣudhā na tṛṣā nidrā</s> <s type="pada">naivālasyaṃ prajāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_056">
 <l> <s type="pada">bhavet svacchandadehaś ca</s> <s type="pada">sarvopadravavarjitaḥ/</s></l>
<l> <s type="pada">anena vidhinā </s> <s type="pada">yogīndro bhūmimaṇḍale//</s></l> 
</lg>
 
 
<lg xml:id="hp02_057">
 <l> <s type="pada">rasanātālumūlena</s> <s type="pada">yaḥ prāṇaṃ satataṃ pibet/</s></l>
<l> <s type="pada">abdārdhena bhavet tasya</s> <s type="pada">sarvarogaparikṣayaḥ//</s><anchor xml:id="II57"/> 
</l> 
</lg>
 
 
<lg xml:id="hp02_058">
 <l> <s type="pada">jihvayā vāyum ākṛṣya</s> <s type="pada">pūrvavakuṃbhanād anu/</s></l>
<l> <s type="pada">śanais tu ghrāṇarandhrābhyāṃ</s> <s type="pada">recayed anilaṃ sudhīḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_059">
 <l> <s type="pada">gulmaplīhādikān doṣān</s> <s type="pada">jvalaṃ pittaṃ kṣudhā tṛṣāṃ/</s></l>
<l> <s type="pada">viṣāṇi śītalī nāma</s> <s type="pada">kumbhako nihanti ca//</s></l> 
</lg>
 
 
<lg xml:id="hp02_060">
 <l> <s type="pada">ūrvor upari ced dhatte</s> <s type="pada">ubhe pādatale yadā/</s></l>
<l> <s type="pada">padmāsanaṃ bhavet samyak</s> <s type="pada">sarvapāpapraṇāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_061">
 <l> <s type="pada">samyak padmāsanaṃ baddhvā</s> <s type="pada">samagrīvo°odaraṃ sudhī/</s></l>
<l> <s type="pada">mukhaṃ saṃyamya yatnena</s> <s type="pada">prāṇaṃ ghrāṇena recayet//</s>
</l> 
</lg>
 
<lg xml:id="hp02_062">
 <l> <s type="pada">yathā lagati hṛtkaṇṭha</s> <s type="pada">kapāle śvasanaṃ tataḥ/</s></l>
<l> <s type="pada">vegena pūrayet kiṃcit</s> <s type="pada">hṛtpadmāvadhi mārutam//</s></l> 
</lg>
 
<lg xml:id="hp02_063">
 <l> <s type="pada">punar virecayet tadva</s><s type="pada">t pūrayec ca punaḥ punaḥ/</s></l>
<l> <s type="pada">yathaiva lohakārāṇāṃ</s> <s type="pada">bhastrā vegena cālyate//</s></l> 
</lg>
 
<lg xml:id="hp02_064">
 <l> <s type="pada">tathaiva svaśarīrasthaṃ</s> <s type="pada">cālayet pavanaṃ dhiyā/</s><anchor xml:id="II64"/></l>
<l> <s type="pada">yadā śramo bhaved dehe</s> <s type="pada">tadā sūryeṇa pūrayet//</s></l> 
</lg>

<lg xml:id="hp02_065">
 <l> <s type="pada">yathodaraṃ labhett pūrṇaṃ</s> <s type="pada">pavanena tathā laghu/</s></l>
<l> <s type="pada">dhārayenāsikā madhyaṃ</s><s type="pada">tarjanībhyāṃ vinā dṛḍham//</s></l> 
</lg>
 
<lg xml:id="hp02_066">
 <l> <s type="pada">kumbhakaṃ pūrakaṃt kṛtvā</s> <s type="pada">recayed iḍayānilam/</s></l>
<l> <s type="pada">vātapittaśleṣmaharaṃ</s> <s type="pada">śarīrāgnivivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_067">
 <l> <s type="pada">kuṇḍalībodhakaṃ cakraṃ</s> <s type="pada">bhāvaghnaṃ sukhadaṃ śubham/</s></l>
<l> <s type="pada">brahmanāḍīmukhe saṃsthaṃ</s><s type="pada">kaphādyargalanāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_068">
 <l> <s type="pada">samyaggātrasamudbhūtaṃ</s><s type="pada">granthitrayavibhedakam//</s></l>
<l> <s type="pada">viśeṣeṇaiva kartavyaṃ</s> <s type="pada">bhastrākhyaṃ kumbhakaṃ tv idam//</s> 
 </l> 
</lg>
 
 
<lg xml:id="hp02_069">
 <l> <s type="pada">vegoghoṣaṃ pūrakaṃ bhṛṅganādaṃ</s></l>
<l> <s type="pada">bhṛṅgīnādaṃ recakaṃ mandamandam/</s></l>
<l> <s type="pada">yogeṃdrāṇām evam abhyāsayogā-</s></l>
<l> <s type="pada">c citte jātā kācid ānandamūrchā//</s></l>
</lg>
 
 
<lg xml:id="hp02_070">
 <l> <s type="pada">pūrakānte vāṃḍhataraṃ</s> <s type="pada">baddhvā jālandharaṃ śanaiḥ/</s></l>
<l> <s type="pada">recayen mūrchanākhyeyaṃ</s> <s type="pada">manomūrchāsukhapradā//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_071">
 <l> <s type="pada">antaḥpravartitodgāra</s><s type="pada">mārutāpūritodaraḥ/</s></l>
<l> <s type="pada">payasy agādhe’pi sukhāt</s> <s type="pada">plavate padmapatravat</s>// 
</l> 
</lg>
 
 
 
<lg xml:id="hp02_072">
 <l> <s type="pada">prāṇāyāmas tridhā proktā</s> <s type="pada">recapūrakakumbhakaiḥ/</s></l>
<l> <s type="pada">sahitaḥ kevalaś ceti</s> <s type="pada">kumbhako dvividho mataḥ/</s> 
</l> 
</lg>
 
<lg xml:id="hp02_073">
 <l> <s type="pada">recakaḥ pūrvavat kāryaḥ</s> <s type="pada">sa vai sahitakumbhakaḥ/</s> 
</l>
<l> <s type="pada">yāvat kevalasiddhiḥ syāt</s> <s type="pada">sahitaṃ tāvadm abhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_074">
 <l> <s type="pada">recakaṃ pūrakaṃ tyaktvā</s> <s type="pada">sukhaṃ yad vāyudhāraṇam/</s></l>
<l> <s type="pada">prāṇāyāmo’yam ity uktaḥ</s> <s type="pada">sarve kevalakumbhakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_075">
 <l> <s type="pada">kevale kumbhake siddhe</s> <s type="pada">recakapūravarjite/</s></l>
<l> <s type="pada">na tasya durlabhaṃ kiṃcit</s> <s type="pada">triṣu lokeṣu vidyate//</s></l> 
</lg>
 
<lg xml:id="hp02_076">
 <l> <s type="pada">śaktaḥ kevalakumbhena</s> <s type="pada">yatheṣṭaṃ vāyudhāraṇe/</s></l>
<l> <s type="pada">rājayogapadaṃ caiva</s> <s type="pada">labhate nātra saṃśayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_077">
 <l> <s type="pada">haṭhaṃ vinā rājayogo</s> <s type="pada">rājayogaṃ vinā haṭhaḥ/</s></l>
<l> <s type="pada">na sidhyati tato yugma</s><s type="pada">niṣpatteḥ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_078">
 <l> <s type="pada">kumbhitaḥprāṇarecānte</s> <s type="pada">kuryāc cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">rājayogapadaṃ vrajet//</s> 
</l> 
</lg>
 

<lg xml:id="hp02_079">
 <l><s type="pada">kumbhakānt kuṇḍalībodhaḥ</s> <s type="pada">kuṇḍalībodhato bhavet/</s></l>
<l> <s type="pada">anargalā suṣumṇā ca</s> <s type="pada"> haṭhasiddhiś ca jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_080">
 <l> <s type="pada">vapuḥkṛśatvaṃ vadane prasannatā</s></l>
<l> <s type="pada">nādasphuṭatvaṃ nayane ca nirmale/</s></l>
<l> <s type="pada">ārogyatā bindujayo’gnidīpanaṃ</s> </l>
<l> <s type="pada">nāḍīṣu siddhirr haṭhasiddhalakṣaṇam//</s></l> 
</lg>
 <div type="colophon" xml:id="hp02_col"><p> iti śrīsadgurusvātmārāmayogendraviracitāyāṃ haṭhapradīpikāyāṃ dvitīyopadeśaḥ// </p></div> 
