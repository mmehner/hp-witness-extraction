<body>

<lg xml:id="hp02_001">
 <l> <s type="pada">athāsane dṛḍhe yogī</s> <s type="pada">vaśī hitamitāśanaḥ/</s></l>
<l> <s type="pada">gurūpadiṣṭamārgeṇa</s> <s type="pada">yogamārgaṃ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_002">
 <l> <s type="pada">cale vāte calaṃ cittaṃ</s> <s type="pada">niścale niścalaṃ tathā/</s></l>
<l> <s type="pada">yogī sthāṇutvam āpnoti</s> <s type="pada">tato vāyuṃnirundhayet//</s></l> 
</lg>
 
<lg xml:id="hp02_003">
 <l> <s type="pada">yāvavāyu sthito dehe</s> <s type="pada">tāvaj jīvitam ucyate/</s></l>
<l> <s type="pada">maraṇaṃ tasya niṣkrānto</s><s type="pada">tasmād vāyuṃ nirundhayet//</s></l> 
</lg>
 
<lg xml:id="hp02_004">
 <l> <s type="pada">malākulāsu nāḍīṣu</s> <s type="pada">māruto naiva madhyagaḥ/</s></l>
<l> <s type="pada">kathaṃ syād unmanībhāvaḥ</s> <s type="pada">kāryasiddhiḥ kathaṃ bhavet//</s></l> 
</lg>
 
<lg xml:id="hp02_005">
 <l> <s type="pada">śuddhim eti yadā sarvaṃ</s> <s type="pada">nāḍīcakraṃ malākulam/</s></l>
<l> <s type="pada">tadaiva jāyate yogī</s> <s type="pada">prāṇasaṃgrahaṇe kṣamaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_006">
 <l> <s type="pada">prāṇābhyāsaṃ tataḥ kuryān</s> <s type="pada">nityaṃ sāttvikayā dhiyā/</s></l>
<l> <s type="pada">yathā sukham avasthāya</s> <s type="pada">malāḥ śoṣaṃ prayānti ca//</s></l> 
</lg>
 
<lg xml:id="hp02_007">
 <l> <s type="pada">baddhapadmāsano yogī</s> <s type="pada">prāṇaṃ candreṇa pūrayet/</s></l>
<l> <s type="pada">dhārayitvā yathāyuktyā</s> <s type="pada">bhūyaḥ sūryeṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_008">
 <l> <s type="pada">prāṇaṃ sūryeṇa cākṛṣya</s> <s type="pada">pūrayeudare śanaiḥ/</s></l>
<l> <s type="pada">vidhivat kumbhakaṃ kṛtvā</s> <s type="pada">punaś candreṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_009">
 <l> <s type="pada">yena tyajetenāpūrya</s> <s type="pada">dhārayed aanirodhataḥ/</s></l>
<l> <s type="pada">recayec ca tato’nyena</s> <s type="pada">śanair eva na vegataḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_010">
 <l> <s type="pada">prāṇaṃ ced iḍayā piben niyamitaṃ bhūyo’nyayā recayet</s></l>
<l> <s type="pada">pītvā piṅgalayā samīraṇam atho baddhvā tyajed vāmayā/</s></l>
<l> <s type="pada">sūryācandramasor anena vidhinā bimbadvayaṃ dhyāyatāṃ</s></l>
<l> <s type="pada">śuddhā nāḍigaṇā bhavanti yamināṃ māsatrayād ūrdhvataḥ//</s><anchor xml:id="II10"/></l> 
</lg>
 
<lg xml:id="hp02_011">
 <l> <s type="pada">prātar madhyandine sāyam ardha</s><s type="pada">rātre ca kumbhakān/</s></l>
<l> <s type="pada">śanair aśītiparyantaṃ</s> <s type="pada">caturvāraṃ samabhyaset//</s>
</l> 
</lg>
 
<lg xml:id="hp02_012">
 <l> <s type="pada">adhame jāyate svedaḥ</s> <s type="pada">kampo bhavati madhyame/</s></l>
<l> <s type="pada">uttiṣṭhaṃtyy uttame prāṇā</s><s type="pada">baddhe padmāsane muhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_013">
 <l> <s type="pada">jalena śramajātena</s> <s type="pada">gātramardanam ācaret/</s></l>
<l> <s type="pada">dṛḍhatā laghutā cāpi</s> <s type="pada">tena gātrasya jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_014">
 <l> <s type="pada">abhyāsakāle prathame</s> <s type="pada">śastaṃ kṣīrājyabhojanam/</s></l>
<l> <s type="pada">tato’bhyāse sthirībhūte</s> <s type="pada">na tādṛniyamograhaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_015">
 <l><s type="pada">yathā siṃho gajo vyāghro</s> <s type="pada">bhaved vaśyaḥ śanaiḥ śanaiḥ/</s></l>
<l> <s type="pada">tathaiva sevito vāyur</s> <s type="pada">anyathā hanti sādhakam//</s></l> 
</lg>
 
<lg xml:id="hp02_016">
 <l> <s type="pada">prāṇāyāmena yuktena</s> <s type="pada">sarvarogakṣayo bhavet/</s></l>
<l> <s type="pada">ayuktābhyāsayogena</s> <s type="pada">sarvarogasamudbhavaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_017">
 <l> <s type="pada">hikkā śvāsaś ca kāsaś ca</s> <s type="pada">śiraḥkarṇākṣivedanāḥ/</s></l>
<l> <s type="pada">bhavanti vividhā dāṣā</s> <s type="pada">pavanasya vyatikramāt//</s></l> 
</lg>
 
<lg xml:id="hp02_018">
 <l> <s type="pada">yuktaṃ yuktaṃ tyajed vāyuṃ</s> <s type="pada">yuktaṃ yuktaṃ ca sevayet/</s></l>
<l> <s type="pada">yuktaṃ yuktaṃ ca badhnīyād</s> <s type="pada">evaṃ siddhim avāpnuyāt//</s></l> 
</lg>
 
<lg xml:id="hp02_019">
 <l> <s type="pada">yadā tu nāḍīśuddhiḥ syāt</s> <s type="pada">tadā cihnāni bāhyataḥ/</s></l>
<l> <s type="pada">kāyasya kriyate kānti</s><s type="pada">s tathā jāyeta niścitam//</s></l> 
</lg>
 
<lg xml:id="hp02_020">
 <l> <s type="pada">yatheṣṭaṃ dhāraṇaṃ vāyor</s> <s type="pada">aaṇalasya pradīpanam/</s></l>
<l> <s type="pada">nādābhivyaktir ārogyaṃ</s> <s type="pada">jāyate nāḍīśodhane</s> 
</l> 
</lg>
 
<lg xml:id="hp02_021">
 <l> <s type="pada">medaḥśleṣmādināśārthaṃ</s> <s type="pada">ṣaṭ karmāṇi samācaret/</s></l>
<l> <s type="pada">anyathā nācaret tāni</s> <s type="pada">doṣāṇāṃ samabhāvataḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_022">
 <l> <s type="pada">dhautīvastiśca netiś ca</s><s type="pada"> trāṭakaṃ naulikaṃ tathā/</s></l>
<l> <s type="pada">kapālabhāthī caitāni</s> <s type="pada">ṣaṭ karmāṇi pracakṣate//</s></l> 
</lg>
 
<lg xml:id="hp02_023">
 <l> <s type="pada">ṣaṭkarmmam idaṃ gopyaṃ</s> <s type="pada">ghaṭaśodhanakārakam/</s></l>
<l> <s type="pada">vicitraguṇasandhāyī</s> <s type="pada">pūjyate yogipuṅgavaiḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp02_024">
 <l> <s type="pada">caturāṃgulavistāraṃ</s>
 <s type="pada">siktaṃ vastraṃ śanair graset/</s></l>
<l> <s type="pada">tataḥ pratyāharec caita</s><s type="pada">uditaṃ dhautikarma °kṛt//</s></l> 
</lg>
 
<lg xml:id="hp02_025">
 <l> <s type="pada">śvāsaḥ kāśaḥplīhakuṣṭhaṃ</s> <s type="pada">kapharogāś ca viṃśatiḥ/</s></l>
<l> <s type="pada">dhautikarmaprabhāvena</s> <s type="pada">śudhyanty eva na saṃśayaḥ//</s><anchor xml:id="VuII25"/></l> 
</lg>
 
 
<lg xml:id="hp02_026">
 <l> <s type="pada">nābhidaghne jale pāyu</s><s type="pada">nyastanālotkaṭāsanaḥ/</s></l>
<l> <s type="pada">ādhārākuñcanaṃ kuryāt</s> <s type="pada">kṣālanaṃ bastikarma tat//</s></l> 
</lg>
 
<lg xml:id="hp02_027">
 <l> <s type="pada">gulmaplīhodaraṃ cāpi</s> <s type="pada">vātapittakaphobhavaṃ/</s></l>
<l> <s type="pada">bastikarmaprabhāvena</s> <s type="pada">kṣīyante sakalā malāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_028">
 <l> <s type="pada">dhātvindriyāntaḥkaraṇaprasādaṃ</s></l>
<l> <s type="pada">dadyāc ca kāntiṃ dahanapradīptim/</s></l>
<l> <s type="pada">aśeṣadoṣopacayaṃ nihanyā</s>-</l>
<l> <s type="pada">d abhyasyamānaṃ jabastikarma//</s></l> 
</lg>
 
<lg xml:id="hp02_029">
 <l>found after <ptr target="#VuII25"/><s type="pada">udaragatapadārthaudvavantī</s></l>
<l> <s type="pada">pavanam apānam udīrya kaṇṭhanāle/</s></l>
<l> <s type="pada">karibhir iva jalasyavāyuvegāt-</s></l>
<l> <s type="pada">jalakariṇīti nigadyate haṭhajñaiḥ//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_030">
 <l> <s type="pada">sūtraṃ vitastisusnigdhaṃ</s> <s type="pada">nāsānāle praveśayet/</s></l>
<l> <s type="pada">mukhanirgamanādeva</s> <s type="pada">netiḥ siddhair nigadyate//</s></l> 
</lg>
 
<lg xml:id="hp02_031">
 <l> <s type="pada">kapālaśodhanā kāryā</s> <s type="pada">divyadṛṣṭipradāyinī/</s></l>
<l> <s type="pada">yattūrdhvajātarogaughā</s> <s type="pada">netir āśu nihanti ca//</s></l> 
</lg>
 
 
<lg xml:id="hp02_032">
 <l> <s type="pada">nirīkṣya niścaladṛṣṭyā</s> <s type="pada">sūkṣmaṃlakṣyaṃ samāhitaḥ/</s></l>
<l> <s type="pada">aśrusaṃpātaparyanta</s><s type="pada">m ācāryaitrāṭakaṃ smṛtam//</s></l> 
</lg>
 
<lg xml:id="hp02_033">
 <l> <s type="pada">sphoṭanaṃ netrarogāṇāṃ</s> <s type="pada">tandrāṇāṃ ca kapāṭakam/</s></l>
<l> <s type="pada">prayatnāt</s><s type="pada"> trāṭakaṃ gopyaṃ yathā hāṭakapeṭakam//</s></l> 
</lg>
 
 
<lg xml:id="hp02_034">
 <l> <s type="pada">amandāvartavegena</s> <s type="pada">tundat savyāpasavyataḥ/</s></l>
<l> <s type="pada">śataśo bhrāmayed eṣā</s> <s type="pada">naulī gaulaiḥ praśasyate//</s></l> 
</lg>
 
<lg xml:id="hp02_035">
 <l> <s type="pada">mandāgnisaṃdīpanapāvakādi</s>-</l>
<l><s type="pada">sandhāyakānandakarī sadaiva/</s></l>
<l> <s type="pada">aśeṣadoṣāmalaśoṣaṇī va</s></l>
<l> <s type="pada">haṭhakriyāsau jayatīha naulī//</s></l> 
</lg>
 
 
<lg xml:id="hp02_036">
 <l> <s type="pada">lohakārasyabhastrīvat</s> <s type="pada">kuryāt savyā pasavyataḥ/</s></l>
<l> <s type="pada">kapālabhāthī vikhyātā</s> <s type="pada">kaphāmayaviśoṣaṇī//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_037">
 <l> <s type="pada">ṣaṭkarmabhir gatasthaulyaṃ</s><s type="pada">kaphamedobalādhikaḥ/</s></l>
<l> <s type="pada">prāṇāyāmaṃ tataḥ kuryād</s> <s type="pada">anāyāsena sidhyati//</s></l> 
</lg>
 
<lg xml:id="hp02_038">
 <l> <s type="pada">prāṇāyāmaiḥ sukhāt sarve</s> <s type="pada">praśuddhyati malāśayaḥ/</s></l>
<l> <s type="pada">ācāryāṇāṃ tu keṣāṃci</s><s type="pada">d anyat karma na saṃmatam//</s></l> 
</lg>
 
<lg xml:id="hp02_039">
 <l> <s type="pada">brahmādayo’pi tridaśāḥ</s> <s type="pada">pavanābhyāsatatparāḥ/</s> 

</l>
<l> <s type="pada">sumanaskāntakobhavyast</s> <s type="pada">tasmāt pavanam abhyaset//</s> 

<anchor xml:id="III39"/></l> 
</lg>
 
<lg xml:id="hp02_040">
 <l> <s type="pada">yāvad baddho marud dehe</s> <s type="pada">yāvac cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">jāvatpaśyed bhruvomadhyaṃ</s> <s type="pada">tāvat kālabhayaṃ kutaḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp02_041">
 <l> <s type="pada">vidhivat prāṇasaṃyamye</s><s type="pada"> nāḍīcakre viśodhite/</s></l>
<l> <s type="pada">suṣumṇāvadanaṃ bhittvā</s> <s type="pada">sukhād viśati mārutaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_042">
 <l> <s type="pada">mārute madhyasaṃcāre</s> <s type="pada">manaḥsthairyaṃ prajāyate/</s></l>
<l> <s type="pada">yo manaḥsusthirībhāvaḥ</s> <s type="pada">saivāvasthā manonmanī//</s></l> 
</lg>
 
<lg xml:id="hp02_043">
 <l> <s type="pada">tatsiddhaye vidhānajño</s><s type="pada"> citrākurvanti kumbhakān/</s></l>
<l> <s type="pada">vicitrakumbhakābhyāsā</s><s type="pada">d vicitrāṃ siddhim āpnuyāt//</s></l> 
</lg>
 
 
<lg xml:id="hp02_044">
 <l> <s type="pada">sūryabhedanam ujjāyī</s> <s type="pada">tathā śītkāraśītalī/</s></l>
<l><s type="pada">bhastrikā bhramarī mūrchā</s> <s type="pada">kevalaścāṣṭa kumbhakāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_045">
 <l> <s type="pada">pūrakānte tu kartavyo</s> <s type="pada">bandho jālandharābhidhaḥ/</s></l>
<l> <s type="pada">kumbhakānte recakādau</s> <s type="pada">kartavyaṃs tūḍḍiyānakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_046">
 <l> <s type="pada">adhastāt kuñcanenāśu</s> <s type="pada">kaṇṭhasaṃkocane kṛte/</s></l>
<l> <s type="pada">madhya paścimatānena</s> <s type="pada">syāt prāṇo brahmanāḍigaḥ//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp02_047">
 <l> <s type="pada">apānam ūrdhvam utthāpya</s> <s type="pada">prāṇaṃ kaṇṭhād adho nayet/</s></l>
<l> <s type="pada">yogī jarāvimuktaś ca</s> <s type="pada">ṣoḍaśābdavayo
 bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp02_048">
 <l> <s type="pada">athāsane sukhād eva</s> <s type="pada">baddhā mudrāsamaṃ tataḥ/</s></l>
<l> <s type="pada">dakṣanāḍyā samākṛṣya</s> <s type="pada">bahiḥsthaṃ pavanaṃ śanaiḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_049">
 <l> <s type="pada">ā keśāgrān nakhāgrāc ca</s> <s type="pada">nirodhāvadhi kumbhayet/</s></l>
<l> <s type="pada">tataḥ śanaiḥ savyanāḍyā ca</s> <s type="pada">recayet pavanaṃ śanaiḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_050">
 <l> <s type="pada">kapālaśodhanaṃ vāta</s><s type="pada">doṣaghnaṃ kṛmināśanaṃ/</s></l>
<l> <s type="pada">punaḥ punar idaṃ sūrya</s> <s type="pada">bhedanaṃ samudāhṛtaṃ// </s></l> 
</lg>
 
 
<lg xml:id="hp02_051">
 <l> <s type="pada">mukhaṃ saṃyamya nāsābhyāmm</s> <s type="pada">ākṛṣya pavanaṃ śanaiḥ/</s></l>
<l> <s type="pada">yadā lagati kaṇṭhāt tu</s> <s type="pada">hṛtpadmāvadhi śodhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_052">
 <l> <s type="pada">pūrvavat kumbhayeprāṇān</s> <s type="pada">recayed iḍayā tataḥ/</s></l>
<l> <s type="pada">śleṣmādoṣaharaṃ dehā</s> <s type="pada">°naladīptivivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_053">
 <l> <s type="pada">nāḍījalodare dhātu</s><s type="pada">gatadoṣaṃvināśanam/</s></l>
<l> <s type="pada">gacchatā tiṣṭhatā kāryaṃ</s> <s type="pada">kuru vikhyāta kumbhakam</s>//</l> 
</lg>
 
 
<lg xml:id="hp02_054">
 <l> <s type="pada">kumbhaṃ kuryāt sadā vaktrāt</s> <s type="pada">ghrāṇenaiva vijṛmbhitaṃ/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">kāmadevo dvitīyakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_055">
 <l> <s type="pada">yoginīcakram āsādya</s> <s type="pada">sṛṣṭisaṃhārakārakaḥ/</s></l>
<l> <s type="pada">na kṣudhā na tṛṣā nidrā</s> <s type="pada">naivālasyaṃ tu jāyete//</s></l> 
</lg>
 
<lg xml:id="hp02_056">
 <l> <s type="pada">bhavet svacchandadehaś ca</s> <s type="pada">sarvopadravavarjitaḥ/</s></l>
<l> <s type="pada">anena vidhinā satyaṃ</s> <s type="pada">yogīndro bhuvimaṇḍale//</s></l> 
</lg>
 
 
<lg xml:id="hp02_057">
 <l> <s type="pada">rasanātālumūlena</s> <s type="pada">yaḥ prāṇa satataṃ pibet/</s></l>
<l> <s type="pada">abdārdhena bhavet tasya</s> <s type="pada">sarvāṃgasusthirakriyaṃ//</s><anchor xml:id="II57"/> 
</l> 
</lg>
 
 
<lg xml:id="hp02_058">
 <l> <s type="pada">jihvayā vāyum ākṛṣya</s> <s type="pada">pūrvaṃ cakumbhasādhanam/</s></l>
<l> <s type="pada">śanais tu prāṇarandhrābhyāṃ</s> <s type="pada">recayed anilaṃ śanaiḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_059">
 <l> <s type="pada">gulmaśleṣmādayodoṣā</s> <s type="pada">jvara pitta kṣudhā tṛṣā/</s></l>
<l> <s type="pada">etāni śītalī nāma</s> <s type="pada">kumbhako’yaṃ nihanti ca//</s></l> 
</lg>
 
 
<lg xml:id="hp02_060">
 <l> <s type="pada">ūrvor upari vai dhatte</s> <s type="pada">ubhe pādatale tathā/</s></l>
<l> <s type="pada">padmāsanaṃ bhavet samyak</s> <s type="pada">sarvapāpapraṇāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_061">
 <l> <s type="pada">samyak padmāsanaṃ baddhvā</s> <s type="pada">samagrīvodaraḥ sudhīḥ/</s></l>
<l> <s type="pada">mukhaṃ saṃyamya yatnena</s> <s type="pada">prāṇaṃ ghrāṇena recayet//</s>
</l> 
</lg>
 
<lg xml:id="hp02_062">
 <l> <s type="pada">yadā lagati hṛtkaṇṭhe</s> <s type="pada">kapāla syarśanaṃ tataḥ/</s></l>
<l> <s type="pada">vegena pūrayet kiṃcit</s> <s type="pada">hṛtpadmāvadhi mārutam//</s></l> 
</lg>
 
<lg xml:id="hp02_063">
 <l> <s type="pada">punar virecayet tadva</s><s type="pada">t pūrayec ca punaḥ punaḥ/</s></l>
<l> <s type="pada">yathaiva lohakārāṇāṃ</s> <s type="pada">bhastrā vegena cālyate//</s></l> 
</lg>
 
<lg xml:id="hp02_064">
 <l> <s type="pada">tathaiva svaśarīrasthaṃ</s> <s type="pada">cāyett pavanaṃ śanaiḥ/</s><anchor xml:id="II64"/></l>
<l> <s type="pada">yadā śramo bhaved dehe</s> <s type="pada">tadā sūryeṇa pūrayet//</s></l> 
</lg>

<lg xml:id="hp02_065">
 <l> <s type="pada">athodaraṃ bhavet pūrṇaṃ</s> <s type="pada">pavanena tathā laghuḥ/</s></l>
<l> <s type="pada">dhārayenāsikā madhye</s><s type="pada">aṅgulībhyāṃ tathā dṛḍham//</s></l> 
</lg>
 
<lg xml:id="hp02_066">
 <l> <s type="pada">kumbhakaṃ pūrakaṃt kṛtvā</s> <s type="pada">recayed iḍayānilam/</s></l>
<l> <s type="pada">vātapittaśleṣmaharaṃ</s> <s type="pada">śarīrāgnivivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_067">
 <l> <s type="pada">kuṇḍalībodhakaḥ kumbho</s> <s type="pada">rogaghnaḥ sukhadaḥ śubhaḥ/</s></l>
<l> <s type="pada">brahmanāḍīmukhe saṃsthaḥ</s><s type="pada">kaphādyargalanāśanaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_068">
 <l> <s type="pada">samyabhastrāsamudbhūto</s><s type="pada">granthitrayavibhedakaḥ//</s></l>
<l> <s type="pada">viśeṣeṇaiva kartavyaṃ</s> <s type="pada">bhastrākhyaṃ kumbhakaṃ //</s> 
 </l> 
</lg>
 
 
<lg xml:id="hp02_069">
 <l> <s type="pada">vegādghoṣaṃ pūrayet bhṛṅganādaṃ</s></l>
<l> <s type="pada">bhṛṅgīnādaṃ recayet mandamandam/</s></l>
<l> <s type="pada">yogīndrāṇām evam abhyāsayogāś-</s></l>
<l> <s type="pada">c citte jātā kācid ānandamūrchā//</s></l>
</lg>
 
 
<lg xml:id="hp02_070">
 <l> <s type="pada">pūrakānte bahutaraṃ</s> <s type="pada">baddhvā jālandharaṃ śanaiḥ/</s></l>
<l> <s type="pada">recayen mūrchanāstho’yaṃ</s> <s type="pada">manomūrchāsukhapradaḥ//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_071">
 <l> <s type="pada">antaḥpravartitādhāra</s><s type="pada">mārutāpūritodaraḥ/</s></l>
<l> <s type="pada">sākṣāt payasy agādhe pi</s> <s type="pada">plavato padmapatravat</s>// 
</l> 
</lg>
 
 
 
<lg xml:id="hp02_072">
 <l> <s type="pada">prāṇāyāmas tridhā prokto</s> <s type="pada">recakapūrakakumbhakaiḥ/</s></l>
<l> <s type="pada">sahitaḥ kevalaś ceti</s> <s type="pada">kumbhako dvividho mataḥ/</s> 
</l> 
</lg>
 
<lg xml:id="hp02_073">
 <l> <s type="pada">recakaḥ pūrakaḥ kārya</s> <s type="pada">sa&lt;&lt;r&gt;&gt;vvai sahitakumbhakaḥ/</s> 
</l>
<l> <s type="pada">yāvat kevalaśuddhiḥ syāt</s> <s type="pada">tāvat sahitasamm abhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_074">
 <l> <s type="pada">recakaṃ pūrakaṃ muktvā</s> <s type="pada">sukhād vāyunirodhanam/</s></l>
<l> <s type="pada">prāṇāyāmo’yam ity uktaḥ</s> <s type="pada">sa vai kevalakumbhakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_075">
 <l> <s type="pada">kevale kumbhake siddhe</s> <s type="pada">recakapūrakavarjite/</s></l>
<l> <s type="pada">na tasya durlabhaṃ kiṃcit</s> <s type="pada">triṣu kāleṣu vidyate//</s></l> 
</lg>
 
<lg xml:id="hp02_076">
 <l> <s type="pada">śuddha kevalakumbhena</s> <s type="pada">yatheṣṭaṃ vāyudhāraṇam/</s></l>
<l> <s type="pada">rājayogapadaṃ caiva</s> <s type="pada">labhyate nātra saṃśayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_077">
 <l> <s type="pada">haṭhaṃ vinā rājayogo</s> <s type="pada">rājayogaṃ vinā haṭhaḥ/</s></l>
<l> <s type="pada">na sidhyati tato yugma</s><s type="pada">m ā niṣpatteḥ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_078">
 <l> <s type="pada">kumbhakaprāṇa.. cānte</s> <s type="pada">kuryāc cittaṃ nirāmayam/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">rājayogapadaṃ vrajet//</s> 
</l> 
</lg>
 

<lg xml:id="hp02_079">
 <l><s type="pada">kumbhakānt kuṇḍalībodhaḥ</s> <s type="pada">kuṇḍalībodhato bhavet/</s></l>
<l> <s type="pada">anargalā suṣumṇā ca</s> <s type="pada"> haṭhasiddhiś ca jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_080">
 <l> <s type="pada">vapuḥkṛśatvaṃ vadane prasannatā</s></l>
<l> <s type="pada">nādasphuṭatvaṃ nayane ca nirmale/</s></l>
<l> <s type="pada">ārogyatā bindujayo’gnidīpanaṃ</s> </l>
<l> <s type="pada">nāḍīṣu śuddhir haṭhasiddhilakṣaṇam//</s></l> 
</lg>
 <div type="colophon" xml:id="hp02_col"><p> iti ātmārāmayogīndraviracitāyāṃ haṭhapradīpikāyāṃ dvitīyodhyāyaḥ// </p></div> 
