<body>

<lg xml:id="hp01_001">
 <l> <s type="pada">śrīādināthāya namo’stu tasmai</s> <s type="pada">yenopadiṣṭā haṭhayogavidyā/</s></l>
<l> <s type="pada">virājate pronnatarājayogam</s><s type="pada">āroḍhum icchor adhirohiṇīva//</s></l> 
</lg>
 
<lg xml:id="hp01_002">
 <l> <s type="pada">praṇamya śrīguruṃ nāthaṃ</s> <s type="pada">svātmārāmeṇa yoginā/</s></l>
<l> <s type="pada">kevalaṃ rājayogāya</s> <s type="pada">haṭhavidyopadiśyate//</s></l> 
</lg>
 
<lg xml:id="hp01_003">
 <l> <s type="pada">bhrāntā bahumatadhvānte</s> <s type="pada">rājayogaajanataḥ/</s></l>
<l> <s type="pada">haṭhapradīpikāṃ dhatte</s> <s type="pada">svātmārāmaḥ kṛpākaraḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_004">
 <l> <s type="pada">haṭhavidyāṃ hi matsyendra</s><s type="pada">gorakṣādyā vijānate/</s></l>
<l> <s type="pada">svātmārāmo</s><s type="pada">’thavā yogī jānīte tatprasādataḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_005">
 <l> <s type="pada">śrīādināthamatsyendraḥ</s><s type="pada">śāradānandabhairavāḥ/</s></l>
<l> <s type="pada">cauraṅgīmīnagorakṣa</s><s type="pada">virūpākṣabileśayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_006">
 <l> <s type="pada">manthānabhairavo yogī</s> <s type="pada">śuddhabuddhaśu kandalī/</s></l>
<l> <s type="pada">purāṭaṃkaḥ surānandaḥ</s> <s type="pada">śuddhapādaśca carpaṭī//</s></l>
</lg>
 
<lg xml:id="hp01_007">
 <l> <s type="pada">kānerī pūrvapādaśca</s> <s type="pada">dhvaninātho nirañjanaḥ/</s></l>
<l> <s type="pada">kapālī bindunāthaś ca</s> <s type="pada">kākacaṇḍīśvarāādayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_008">
 <l> <s type="pada">allamaḥprabhudevaś ca</s> <s type="pada">ghoḍācolī ca ṭiṃṭiṇīḥ/</s></l>
<l> <s type="pada">bhālukā nāma bodhaśśca</s> <s type="pada">ṣaṃḍakāpālikāsstathā//</s></l> 
</lg>
 
<lg xml:id="hp01_009">
 <l> <s type="pada">ityādayo mahāsiddhā</s> <s type="pada">haṭhayogaprabhāvataḥ/</s></l>
<l> <s type="pada">khaṇḍayitvā kāladaṇḍaṃ</s> <s type="pada">brahmāṇḍe vicaranti te//</s></l> 
</lg>
 
<lg xml:id="hp01_010">
 <l> <s type="pada">saṃsāraśramataptānāṃ</s> <s type="pada">āśrayo yaṃ haṭho mataḥ/</s></l>
<l> <s type="pada">aśeṣayogajagatā</s><s type="pada">ādhāraḥkamaṭho haṭhaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_011">
 <l> <s type="pada">haṭhavidyā paraṃ gopyā yogīnāṃ</s> <s type="pada">siddhiicchatā/</s></l>
<l> <s type="pada">bhaved vīryavatī guptā</s> <s type="pada">nirvīryā tu prakāśitā//</s></l> 
</lg>
 
<lg xml:id="hp01_012">
 <l> <s type="pada">surājye dhārmike deśe</s> <s type="pada">subhikṣe nirupadrave/</s></l>
<l> <s type="pada">ekānta maṭhikāmadhye</s> <s type="pada">sthātavyaṃ haṭhayoginā//</s></l> 
</lg>
 
<lg xml:id="hp01_013">
 <l> <s type="pada">alpadvāram arandhragartapiṭhakaṃ nātyuccanīcāyataṃ</s></l>
<l> <s type="pada">samyaggomaya sāndraliptam amalaṃ nirdoṣabādhojjhitam/</s></l>
<l> <s type="pada">bāhye maṇḍapavedikūparacitaṃ prākārasaṃveṣṭitaṃ</s></l>
<l> <s type="pada">proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_014">
 <l> <s type="pada">evaṃvidhe maṭhe sthitvā</s> <s type="pada">sarvacintāvivarjitaḥ/</s></l>
<l> <s type="pada">gurūpadiṣṭamārgeṇa</s> <s type="pada">yogam evaṃ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp01_015">
 <l> <s type="pada">atyāhāraḥ prayāsaś ca</s> <s type="pada">prajalponiyamāgrahaḥ/</s></l>
<l> <s type="pada">janasaṅgaś ca laulyaṃ ca</s> <s type="pada">ṣaḍbhiyogo vinaśyati// </s></l> 
</lg>
 
<lg xml:id="hp01_016">
 <l> <s type="pada">utsāhānniścayāddhairyā</s><s type="pada">ttattvajñānāca sāhasāt/</s></l>
<l> <s type="pada">janasaṅgaparityāgāt</s> <s type="pada">ṣaḍbhiyogaḥ prasidhyati//</s></l> 
</lg>
 

 
<lg xml:id="hp01_017">
 <l> <s type="pada">haṭhasya prathamāṅgatvād</s><s type="pada">āsanaṃ pūrvam ucyate/</s></l>
<l> <s type="pada">kuryāt tadāsanaṃ sthairya</s><s type="pada">mārogyaṃ cāṅgalāghavaṃ//</s>
</l> 
</lg>
 
<lg xml:id="hp01_018">
 <l> <s type="pada">vasiṣṭhādyaiśca munibhir</s><s type="pada">matsyendrādyaiśca yogibhiḥ/</s></l>
<l> <s type="pada">aṅgīkṛtānyāsanāni</s> <s type="pada">vakṣyante kānicin mayā//</s><anchor xml:id="v18d"/></l> 
</lg>
 
<lg xml:id="hp01_019">
 <l> <s type="pada">jānavorrantare samya</s><s type="pada">kkṛtvā pādatale ubhe/</s></l>
<l> <s type="pada">ṛjukāya samāsīnaḥ</s> <s type="pada">svastikaṃ tatpracakṣate//</s></l> 
</lg>
 
<lg xml:id="hp01_020">
 <l> <s type="pada">savye dakṣaṇagulphaṃ tu</s> <s type="pada">pṛṣṭhapārśve niyojayet/</s></l>
<l> <s type="pada">dakṣiṇe’pi tathā savyaṃ</s> <s type="pada">gomukhaṃ gomukhaṃ tathā//</s></l> 
</lg>
 
<lg xml:id="hp01_021">
 <l> <s type="pada">ekaṃ pādatathaikasmin</s><s type="pada">vinyased ūru saṃsthitam/</s></l>
<l> <s type="pada">itarasmiṃstathā coktaṃ</s> <s type="pada">vīrāsanam itīritam//</s></l> 
</lg>
 
<lg xml:id="hp01_022">
 <l> <s type="pada">gudaṃ niṣpīḍya gulphābhyāṃ</s> <s type="pada">vyutkrameṇa samāhitaḥ/</s></l>
<l> <s type="pada">kūrmāsanaṃ bhaved etad</s> <s type="pada">iti yogavido viduḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_023">
 <l> <s type="pada">padmāsanaṃ  saṃsthāpya</s> <s type="pada">jānūrvor antare karau/</s></l>
<l> <s type="pada">niveśya bhūmau saṃsthāpya</s> <s type="pada">vyomasthaḥ kurkuṭāsanam//</s></l> 
</lg>
 
<lg xml:id="hp01_024">
 <l> <s type="pada">kurkuṭāsanamadhyastho</s> <s type="pada">dorbhyāṃ saṃbadhya kandharām/</s></l>
<l> <s type="pada">śete kūrmavaduttānam</s><s type="pada">etad uttānakūrmakam//</s></l> 
</lg>
 
<lg xml:id="hp01_025">
 <l> <s type="pada">pādāṅguṣṭhau ca bāhubhyāṃ</s> <s type="pada">gṛhītvā śravaṇāvayi/</s></l>
<l> <s type="pada">dhanurākarṣaṇaṃ kuryād</s><s type="pada">dhanurāsanamucyate//</s></l> 
</lg>
 
<lg xml:id="hp01_026">
 <l> <s type="pada">vāmorumūlārpitadakṣapādaṃ</s> <s type="pada">jānvorr bahirveṣṭitavāmapādam/</s></l>
<l> <s type="pada">pragṛhya tiṣṭhet parivartitāṅgaḥ</s> <s type="pada">śrīmatsyanāthoditamāsanaṃ syāt//</s></l> 
</lg>
 
<lg xml:id="hp01_027">
 <l> <s type="pada">matsyendrapīṭhaṃ jvalanapradīptaṃ</s> <s type="pada">pracaṇḍarugmaṇḍanakhaṇḍanākhyaṃ/</s></l>
<l> <s type="pada">abhyāsataḥ kuṇḍalinīprabodhaṃ</s> <s type="pada">daṇḍasthiratvaṃ pradadāti puṃsām//</s></l> 
</lg>
 
<lg xml:id="hp01_028">
 <l> <s type="pada">prasārya pādau bhuvi daṇḍarūpau</s> <s type="pada">dvābhyāṃ karābhyāṃdvitayaṃ gṛhītvā/</s></l>
<l> <s type="pada">jānūpari nyastalalāṭadeśe</s> <s type="pada">vaśedd idaṃ paścimatānamāhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_029">
 <l> <s type="pada">iti paścimatānamāsanāgryaṃ</s> <s type="pada">pavanaṃ paścimavāhinaṃ karoti/</s></l>
<l> <s type="pada">udayaṃ jaṭharānalasya kuryād</s><s type="pada">udare kārśyaarogināṃ ca puṃsām//</s></l> 
</lg>
 
<lg xml:id="hp01_030">
 <l> <s type="pada">dharām avaṣṭabhya karadvayena</s> <s type="pada">takurparasthāpitanābhipārśve/</s></l>
<l> <s type="pada">uccāsano daṇḍavauthitasya</s> <s type="pada">mayūramm etat pravadanti pīṭham//</s></l> 
</lg>
 
<lg xml:id="hp01_031">
 <l> <s type="pada">harati sakaladoṣān āśu gulphodarādī</s> </l>
<l> <s type="pada">nabhibhavati ca doṣānāsanaṃ śrīmayūram/</s></l>
<l> <s type="pada">bahu kadaśanabhuktaṃ bhasma kuryādaśeṣaṃ</s></l>
<l> <s type="pada">janayati jaṭharāgniṃ jvālayettkālakūṭam//</s></l> 
</lg>
 
<lg xml:id="hp01_032">
 <l> <s type="pada">uttānaṃ śavavad bhūmau</s> <s type="pada">śayanaṃ ca śavāsanam/</s></l>
<l> <s type="pada">śavāsanaṃśrāntiharaṃ</s> <s type="pada">cittaviśrāntikārakam//</s></l> 
</lg>
 
<lg xml:id="hp01_033">
 <l> <s type="pada">caturāśītyāsanāni</s> <s type="pada">śivena kathitāni tu /</s></l>
<l> <s type="pada">tebhyaś catuṣkamādāya</s> <s type="pada">sārabhūtaṃ bravīmy aham//</s></l> 
</lg>
 
<lg xml:id="hp01_034">
 <l> <s type="pada">siddhaṃ padmaṃ tathā siṃhaṃ</s> <s type="pada">bhadraṃ ceti catuṣṭayam/</s></l>
<l> <s type="pada">śreṣṭhaṃ tatrāpi ca padmaṃ</s> <s type="pada">tiṣṭhetsiddhāsane sadā//</s></l> 
</lg>
 
<p xml:id="hp01_035ava">
  
</p>
 
<lg xml:id="hp01_035">
 <l> <s type="pada">yonisthānakam aṅghrimūlaghaṭitaṃ kṛtvā dṛḍhaṃ vinyase</s>  </l>
<l> <s type="pada">nmeḍhre pādam athaikaasya hṛdaye dhṛtvā samaṃ vigraham/</s></l>
<l> <s type="pada">sthāṇuḥ saṃyamitendriyo’caladṛśā paśyan bhruvor antaraṃ</s> </l>
<l> <s type="pada">etanmokṣakapāṭabhedajanakaṃ siddhāsanaṃ procyate//</s></l> 
</lg>
 
 
<lg xml:id="hp01_036">
 <l> <s type="pada">meḍhrād upari vinyasya</s> <s type="pada">savyagulphaṃ tathopari /</s></l>
<l> <s type="pada">gulphāntaraṃ ca nikṣipya</s> <s type="pada">siddhāsanam idaṃ bhavet//</s></l> 
</lg>
 
<lg xml:id="hp01_037">
 <l> <s type="pada">etat siddhāsanaṃ prāhur</s> <s type="pada">anye vajrāsanaṃ viduḥ/</s></l>
<l> <s type="pada">muktāsanaṃ vadaanye</s> <s type="pada">prāhur guptāsanaṃ pare//</s></l> 
</lg>
 
<lg xml:id="hp01_038">
 <l> <s type="pada">yame thavā mitāhāra</s><s type="pada">mahiṃsāṃ niyameṣv iva/</s></l>
<l> <s type="pada">mukhyaṃ sarvāsaneṣvekaṃ</s> <s type="pada">siddhaṃ siddhāsanaṃ viduḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_039">
 <l> <s type="pada">caturāśītipīṭheṣu</s> <s type="pada">siddham eva sadābhyaset/</s></l>
<l> <s type="pada">dvāsaptatisahasreṣu</s> <s type="pada">nāḍīnāṃ malaśodhane//</s></l> 
</lg>
 
<lg xml:id="hp01_040">
 <l> <s type="pada">ātmadhyāyī mitāhāro</s> <s type="pada">yāvad dvādaśavatsaraḥ/</s></l>
<l> <s type="pada">sadā siddhāsanābhyāsād</s> <s type="pada">yogī niṣpattimāpnuyāt/</s></l>
<l> <s type="pada">kim ādyair bahubhiḥ pīṭhaiḥ</s> <s type="pada">sadāt siddhāsane sati//</s></l> 
</lg>
 
<lg xml:id="hp01_041">
 <l> <s type="pada">prāṇānile sāvadhānaṃ</s> <s type="pada">baddha kevalakumbhake/</s></l>
<l> <s type="pada">utpadyate nirāyāsāt</s> <s type="pada">svayam evonmanī yathā//</s></l> 
</lg>
 
<lg xml:id="hp01_042">
 <l> <s type="pada">tathaikasminn eva dṛḍhe</s> <s type="pada">baddhe siddhāsane sadā/</s> </l>
<l> <s type="pada">bandhatrayam anāyāsāt</s><s type="pada">svaya mevopajāyate//</s></l> 
</lg>
 
<lg xml:id="hp01_043">
 <l> <s type="pada">na cāsanaṃ siddhasamaṃ</s> <s type="pada">na kumbhasadṛśo’nilaḥ/</s></l>
<l> <s type="pada">na khecarīsamā mudrā</s> <s type="pada">na nādasadṛśo layaḥ//</s> 

</l> 
</lg>
 
 
<lg xml:id="hp01_044">
 <l> <s type="pada">vāmorūpari dakṣiṇaṃ ca caraṇaṃ saṃsthāpya vāmaṃ tathā</s></l>
<l> <s type="pada">dakṣorūpari paścimena vidhinā dhṛtvā karābhyāṃ dṛḍham/</s></l>
<l> <s type="pada">aṅguṣṭhau hṛdaye nidhāya cibukaṃ nāsāgramālokaye </s></l>
<l> <s type="pada">detad vyādhivināśakāri yamināṃ padmāsanaṃ procyate//</s></l> 
</lg>
 
 
<lg xml:id="hp01_045">
 <l> <s type="pada">uttānau caraṇau kṛtvā</s> <s type="pada">ūrusaṃsthau prayatnataḥ/</s></l>
<l> <s type="pada">ūrumadhye tathottānau</s> <s type="pada">pāṇī kṛtvā tu tā //</s></l> 
</lg>
 
<lg xml:id="hp01_046">
 <l> <s type="pada">nāsāgre vinyasedṛṣṭī</s><s type="pada">dantamūlaṃ tu jihvayā/</s></l>
<l> <s type="pada">uttabhya cibukaṃ vakṣa</s><s type="pada">syāsthāpya pavanaṃ śanaiḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp01_047">
 <l> <s type="pada">idaṃ padmāsanaṃ proktaṃ</s> <s type="pada">sarvavyādhivināśanam/</s></l>
<l> <s type="pada">durlabhaṃ yena kenāpi</s> <s type="pada">dhīmatā labhyate bhuvī//</s></l> 
</lg>
 
 
<lg xml:id="hp01_048">
 <l> <s type="pada">kṛtvā saṃpuṭitau karau dṛḍhatarau baddhvā tu padmāsanaṃ</s></l>
<l> <s type="pada">gāḍhaṃ vakṣasi sannidhāya cibukaṃ dhyānaṃ ca taccetasi/</s></l>
<l> <s type="pada">vāraṃ vāram apānamūrdhvam anilaṃ prollāpayan pūrayan</s></l>
<l> <s type="pada">muñcat prāṇam upaiti bodham atulaṃ śaktiprabhāvād ataḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_049">
 <l> <s type="pada">padmāsanasthito yogī</s> <s type="pada">nāḍīdvāreṣu pūrayet/</s></l>
<l> <s type="pada">mārutaṃ yas tu pibati</s> <s type="pada">sa mukto nātra saṃśayaḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp01_050">
 <l> <s type="pada">gulphau ca vṛṣaṇasyādhaḥ</s> <s type="pada">sīmanyaḥ pārśvayoḥ kṣipet/</s><anchor xml:id="VuI50"/></l>
<l> <s type="pada">dakṣiṇe savyagulphaṃ tu</s> <s type="pada">dakṣagulphaṃ tu savyake//</s></l> 
</lg>
 
<lg xml:id="hp01_051">
 <l> <s type="pada">hastau tu jānunoḥ sthāpya</s> <s type="pada">svāṅgulī saṃprasārya ca/</s></l>
<l> <s type="pada">vyālavaktro nirīkṣeta</s> <s type="pada">nāsāgre nyastalocanaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_052">
 <l> <s type="pada">siṃhāsanaṃ bhaved eta</s><s type="pada">tpūjitaṃ yogibhiḥ sadā/</s></l>
<l> <s type="pada">bandhatritayasandhānaṃ</s> <s type="pada">kurute cāsanottamam//</s></l> 
</lg>
 
 
<lg xml:id="hp01_053">
 <l> <s type="pada">gulphau ca vṛṣaṇasyādhaḥ</s> <s type="pada">sevanyā pārśvayoḥ kṣipet/</s>
</l>
<l> <s type="pada">pārśvapādau ca pāṇibhyāṃ</s> <s type="pada">dṛḍhaṃ baddhvā suniścalam//</s></l> 
</lg>
 
<lg xml:id="hp01_054">
 <l> <s type="pada">bhadrāsanaṃ bhaved etat</s> <s type="pada">sarvavyādhiviṣāpaham/</s> </l>
<l> <s type="pada">gorakṣāsanam ityāhur</s> <s type="pada">idaṃ vai siddhayoginaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_055">
 <l> <s type="pada">evamāsanabandheṣu</s> <s type="pada">yogīndro vigataśramaḥ/</s></l>
<l> <s type="pada">atha nyasennāḍiśuddhiṃ</s> <s type="pada">mudrādipavanakriyām//</s></l> 
</lg>
 

<lg xml:id="hp01_056">
 <l> <s type="pada">āsanaṃ kumbhakaṃcitraṃ</s> <s type="pada">mudrādikaraṇāni ca/</s></l>
<l> <s type="pada">atha nādānusandhāna</s><s type="pada">syābhyāso nukramo haṭhe//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_057">
 <l> <s type="pada">brahmacārī mitāhārī</s> <s type="pada">tyāgī yogaparāyaṇaḥ/</s></l>
<l> <s type="pada">abdādūrdhvaṃ bhavesiddhir</s> <s type="pada">nātra kāryā vicāraṇā//</s></l> 
</lg>
 
<lg xml:id="hp01_058">
 <l> <s type="pada">susnigdhamadhurāhāra</s><s type="pada">caturthāśavivarjitaḥ/</s></l>
<l> <s type="pada">bhujyate śivasaṃprītyai</s> <s type="pada">mitāhāraḥ sa ucyate//</s></l> 
</lg>
 
<lg xml:id="hp01_059">
 <l> <s type="pada">kaṭvaṃmlatīkṣṇalavaṇoṣṇaharītaśākaṃ</s></l>
<l> <s type="pada">sauvīra
tailatilasarṣapamatsyamadhyaṃ/</s></l>
<l> <s type="pada">ajāvimāṃsadadhitakrakulatthakola
 </s></l>
<l> <s type="pada">piṇyāka
hiṅgulaśunādyamapathyamāhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_060">
 <l> <s type="pada">bhojanam ahitaṃ vidyāpunaḥkaṣṇībhūtaṃ apramitaṃ/</s></l>
<l> <s type="pada">atilavaṇā savapalala kadaśanaśākotkaṭaṃ varjjaṃ//</s></l> 
</lg>
 
 
<lg xml:id="hp01_061">
 <l> 
<s type="pada">varjayeddurjanaprīti</s> <s type="pada">vahnistrīmadyasevanam/</s></l>
<l> <s type="pada">prātaḥsnānopavāsādi</s> <s type="pada">kāyakleśādikaṃ tathā//</s></l> 
</lg>
 
<lg xml:id="hp01_062">
 <l> <s type="pada">godhūmaśāliyavaṣaṣṭikaśobhanānnaṃ</s></l>
<l> <s type="pada">kṣīrājyakhaṇḍanavanītasitāmadhūni/</s></l>
<l> <s type="pada">śuṇṭhīpaṭola
phalakādi ca pañcaśākaṃ</s> </l>
<l> <s type="pada">mudgādi divyamudakaṃ ca yamīndrapathyam//</s></l> 
</lg>
 

<lg xml:id="hp01_063">
 <l> <s type="pada">uṣṇaṃ ca madhuraṃ snigdhaṃ gavyaṃ dhātuprapoṣaṇam/</s></l>
<l> <s type="pada">mano’bhilaṣitaṃ yogyaṃ yogī bhojanamācaret//</s></l> 
</lg>
 
<lg xml:id="hp01_064">
 <l> <s type="pada">yuvā vṛddho’tivṛddho vā</s> <s type="pada">vyādhito durbalas tathā/</s></l>
<l> <s type="pada">abhyāsāt siddhimāpnoti</s> <s type="pada">sarvayogeṣv atandritaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_065">
 <l> <s type="pada">pīṭhādi kumbhakaścitrā</s> <s type="pada">mudrādikaraṇāni ca/</s></l>
<l> <s type="pada">sarvāṇy api haṭhābhyāse</s> <s type="pada">rājayogaphalāvadhi//</s></l> 
</lg>
 <div type="colophon" xml:id="hp01_col"><p> ity ātmārāmayogīndraviracitāyāṃ haṭhapradīpikāyāṃ prathamopadeśaḥ// </p></div> 
