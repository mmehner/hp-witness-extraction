      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājayogam āroḍhum icchor adhirohaṇāya// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīgurū nātha svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumatadhvāntaiḥ rajayogam ajānatā/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāma kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l> 
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>ādināthāś camatsyendraśācarānandabhairavaḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī siddho buddhaś ca kanthaḍī/</l> 
	<l>pauraṇḍakaḥ surānandaḥ siddhapādaś ca carppaṭī//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kanerī pūrvapādaś ca dhvaninātho nirañjanaḥ/</l> 
	<l>kapālī bindunāthaś ca kākacaṇḍīśvarādayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>allasaḥ prabhudevaś ca ghoḍācolī ca tiṇṭaṇi /</l> 
	<l>bhāluko vānabodhaś ca khaṇḍakāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānām āśrayo yaṃ haṭho mataḥ/</l> 
	<l>aśeṣayogayuktānāmādhāraika haṭho maṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yogināṃ siddhim icchatām/</l> 
	<l>bhaved vīryavatī guptā nirvīryā su prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānte maṭhikā madhye sthātavyaṃhaṭha yogināṃ// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragarttapiṭharaṃ nātyuccanīcāpittaṃ/</l> 
	<l>samyag gomayasāndraliptamamalaṃ nirdoṣavātaṃ jitaṃ/</l> 
	<l>bāhye maṇḍapavedikūparacitaṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>yoktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhāsāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃ bhave maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam evaṃ samabhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāra prayāsaś ca malalpo niyamagrahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogaś ca naśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhān niścayādhairyāttattvajñānāc ca darśanāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogas tu sidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>ahiṃsā satyam asteyaṃ brahmacaryaṃ kṣamā dhṛtiḥ/</l> 
	<l>dayārjjavamitāhāra śaucaṃ caiva imā daśā//</l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l>tapaḥ santoṣa āstikyaṃ dānam iśvarapūjanaṃ/</l> 
	<l>siddhāntaśravaṇaṃ caiva </l> 
	<l>iti daśa niyamāḥ prakīrtitāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>kuryāt tad āsanaṃ tasmād ārogyaṃ cāṅgalāghavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhimatsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūr vorantare samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇakaṃ gulphaṃ pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇena tathā savyaṃ gomukhaṃ gomukhākṛtiḥ//</l> 
      </lg> 
