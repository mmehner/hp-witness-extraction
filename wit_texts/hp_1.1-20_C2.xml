  <text>
    <body>
      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu  tasmai yenopadiṣṭā haṭhayogavidyā</l>
	<l>virājate pronnatarājayogammāroḍhumicchoradhi</l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ  yoginā</l>
	<l>kevalaṃ  haṭhavidyopadiśyate</l>
      </lg>
      <lg xml:id="hp1-3">
	<l>bhrāntyā matadhvānte rāja prajānatāṃ</l>
	<l>haṭha dhatte  </l>
      </lg>
      <lg xml:id="hp1-4">
	<l>haṭhavidyāṃ hi gorakṣādyā vijānate</l>
	<l>svātmārāmo'thavā yogī jānīte tatprasādataḥ</l>
      </lg>
      <lg xml:id="hp1-5">
	<l>ādināthādimatsyendraśābarānanda</l>
	<l>cauraṅgīmīnavirūpākṣavileśayā</l>
      </lg>
      <lg xml:id="hp1-6">
	<l>manthānabhairavo yogī śuddhabuddhaśca kanthaḍiḥ</l>
	<l>pauraṇṭakaḥ surānandaḥ pādaśca carpaṭiḥ</l>
      </lg>
      <lg xml:id="hp1-7">
	<l>kānerī pūrvapādaśca dhvaninātho </l>
	<l>kāpālībindunāthaśca kākacaṇḍīśvaādayaḥ</l>
      </lg>
      <lg xml:id="hp1-8">
	<l>agastyaḥ prabhudevaśca ghojacolī ca ṭiṇṭiṇīḥ</l>
	<l>bhālukī  khaṇḍakāpālikastathā</l>
      </lg>
      <lg xml:id="hp1-9">
	<l>ityādayo mahāsiddhā prabhāvataḥ</l>
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍaṃ vicaranti te</l>
      </lg>
      <lg xml:id="hp1-10">
	<l>saṃsāratāpataptānām āśrayo yaṃ haṭho mataḥ</l>
	<l>aśeṣayogajagatāādhāraḥkamaṭho haraḥ</l>
      </lg>
      <lg xml:id="hp1-11">
	<l>haṭhavidyā paraṃ gopyā yogināṃ siddhiidhutā</l>
	<l>bhavedvīryavatī guptā nirvīryā tu prakāśitā</l>
      </lg>
      <lg xml:id="hp1-12">
	<l>  subhikṣe nirupadrave</l>
	<l> madhye sthātavyaṃ haṭha</l>
      </lg>
      <lg xml:id="hp1-13">
	<l>marandhra </l>
	<l> </l>
	<l>  prākāra</l>
	<l>proktaṃ yoga  rhaṭhā</l>
      </lg>
      <lg xml:id="hp1-14">
	<l> maṭhe sthitvā sarvacintāvivarjitaḥ</l>
	<l>gurūpa  </l>
      </lg>
      <lg xml:id="hp1-15">
	<l>   </l>
	<l>  ca  </l>
      </lg>
      <lg xml:id="hp1-16">
	<l/>
	<l>janasaṅgaparityāgāt ṣaḍbhi</l>
      </lg>
      <lg xml:id="hp1-17">
	<l>haṭhasya prathamāṅgatvā pūrvamucyate</l>
	<l> mārogyaṃ cāṅga</l>
      </lg>
      <lg xml:id="hp1-18">
	<l>vasiṣṭhādyaiśca dyaiśca yogibhiḥ</l>
	<l> nyāsanāni  kānicinmayā</l>
      </lg>
      <lg xml:id="hp1-19">
	<l> samyakkṛtvā </l>
	<l> svastikaṃ </l>
      </lg>
      <lg xml:id="hp1-20">
	<l> dakṣiṇa tu pārśve niyojayet</l>
	<l> tathā   </l>
      </lg>
    </body>
