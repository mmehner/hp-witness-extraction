      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājayogam āroḍhum icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhayogaḥ pradṛśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumatadhvānte rajayogam ajānatām/</l> 
	<l>haṭhapradīpikāṃ dhatve svātmārāmaḥ kṣamākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ hi matsyendragorakṣyādyā vijānateḥ/</l> 
	<l>svātmārāmo 'thavā yogī jānīmat tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>ādināthādimatsyendraśābarānandabhairavāḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī śuddhabuddhaś ca kandalī/</l> 
	<l>pauraṇḍakaṃ surānandaḥ siddhapādaś ca carpaṭaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kālerī pūrvapādaś ca ninātho nirañjanaḥ/</l> 
	<l>kapālī bindunāthaś ca kākacaṇṭīdayākaraḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>allasaḥ prabhudevaś ca ghorācola la tiṇṭinī /</l> 
	<l>bhālukā nāgabodhaś ca khaṇḍakīpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaḥprasādataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāraśramacintānām āśrayo yaṃ haṭho mataḥ/</l> 
	<l>aśeṣayogajagatām ādhāraḥkamaṭho haṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yoginā siddhim icchito/</l> 
	<l>bhaved vīryavatī guptā nirbījī tu prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānte maṭhika madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>svalpadvāraarandhragartapuṭitaṃ nātyuccanīcāyataṃ/</l> 
	<l>samyakgomayasaddhiliptamamalaṃ niḥśeṣavātojjhitaṃ/</l> 
	<l>bāhye maṇḍapavedikūparacite prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthītvā sarvacintā vivarjitāḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam evaṃ samabhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāraḥ prayāsaś ca prajalpo niyamāgrahaḥ/</l> 
	<l>janasaṃgaṃ ca laulyaṃ ca ṣaḍbhir yogaḥ na sidhyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhāt niścayātdhairyyāttattvajñānāś ca darśanāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaś ca sidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>   </l> 
	<l>   </l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l> </l> 
	<l>  </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>kuryāt tad āśanaṃ tasmāt ārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhimatsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūr vorantaraṃ samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjukāyasamāsīnaḥ svastikaṃ tat pracakṣyate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savyaṃ dakṣiṇagulphaṃ tu pṛṣṭhapārśve nijojayet /</l>
	<l>dakṣiṇe'pi tathā savyaṃ gomukhaṃ gomukhaṃ tathā//</l> 
      </lg> 
