      <lg xml:id="hp1-1">
	<l>śrī oṃ ādināthāya namo'stu tasmai yonopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājasaudham āroḍham icchor adhirohaṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa dhīmatā/</l>
	<l>kaivalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntvā bahumatadhvānte rajayogam ajānataḥ/</l> 
	<l>haṭhapradīpikāṃ cakre svātmārāmaḥ kṛpāparaḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ matsyendragorakṣāyā vijānate/</l> 
	<l>ātmārāmo'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthāyamatsyendraśāradaḥ nandabhairavaḥ/</l> 
	<l>caurāṅgīmīnagorakṣavirūpākṣavileśayā//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthārabhairavo yogī siddhabuddhaś ca kaṃtharī/</l> 
	<l>pauraṃṭhakaḥ surānandaḥ siddhapādaś ca carpaṭīḥ//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>karaṇī pūjyapādaś ca bilvanātho nirantanaḥ/</l> 
	<l>kapālī bindunāthaś ca kākacaṇḍisu ādayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>sukṣamaḥ prabhudevaś ca vaḍācolī gha ṭiṇṭiṇīḥ /</l> 
	<l>vālakir nāgabodhaś ca caṇḍikāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaḥprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānāṃ samāśraya maṭho haṭhaḥ/</l> 
	<l>aśeṣayogajagatām ādhārakamaṭho haṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyaṃ yogināṃ siddhim icchatām/</l> 
	<l>bhaved vīryavatī guptā nirvīryā ti prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānta maṭhikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragataṃ piṭhiraṃ nātyuccanīcāryataṃ/</l> 
	<l>samyag gomayasāndraliptavimalaṃ niḥśeṣajantūhritaṃ/</l> 
	<l>bāhye maṇḍapavedikūparacitaṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsabhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadeśamātreṇa yogam eva sadābhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāra prayāsaś ca jalpato niyamo grahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogaḥ vinaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhāt sāhasāddhairyāttattvajñānād viniścayāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>ahiṃsā satyam asteyaṃ brahmacarya kṣamā dhṛtiḥ/</l> 
	<l>dayorjava mitāhārā śaucaṃ caiva yamā daśāḥ//</l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l>tapaḥ saṃtoṣam āstikyaṃ dānam iśvarapūjanaṃ/</l> 
	<l>siddhāntaśravaṇaṃ caiva vedāṃtaśrāvaṇas tathā//</l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>tatkuryād āsanaṃ sthairyam ārogyaṃ cāṅgalāghavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni vakṣyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānur voraṃtare samyak kṛtvā pādatale ubhe/</l> 
	<l>daṇḍakāyasamāsīnaḥ svastikaṃ tat pracakṣate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇetu tathā savyaṃ gomukhaṃ gomukhaṃ yathā//</l> 
      </lg> 
