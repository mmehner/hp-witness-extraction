      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājasaudham āroḍhum icchor adhirohanena// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumatadhvānte rājamārgamajānatām/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l> 
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendraśāradānandabhairavāḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī siddhabuddhaś ca kanthaḍī/</l> 
	<l>kauraṃṭakasarānandasiddhapādaś ca carpaṭiḥ//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>karauṭī pūjyapādaś ca nityanātho nirañjanaḥ/</l> 
	<l>kapālī bindunāthaś ca kākacaṇḍīśvaromayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>akleśaḥ prabhudevaś ca ghoḍācolī ca ciṃciṇī /</l> 
	<l>bhālukī nāgavādhiś ca khaṇḍakāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprasādataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānāṃ samāśraya maṭho haṭhaḥ/</l> 
	<l>aśeṣayogavijñānaḥsarvasiddhi pradāyakaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yogināṃ siddhim icchatā/</l> 
	<l>bhaved vīryavatī guptā nirvīryā tu prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surāṣṭre dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānte maṭhikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragartapuṭitaṃ nātyuccanīcāyataṃ/</l> 
	<l>samyag gomayasāndralepavimalaṃ niḥśeṣavodhotsitaṃ/</l> 
	<l>bāhye maṇḍapavedikūparuciraṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam eva sadābhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāraḥ prayāsaś ca prajalpe niyamagrahaḥ/</l> 
	<l>janasaṃgaṃ ca laulyaṃ ca ṣaḍbhir yogaḥ vinaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhān niścayād dhairyāt tattvajñānāc ca darśanāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l>atha yamaniyamāḥ//</l> 
	<l>ahiṃsā satyam asteyaṃ brahmacaryaṃ kṣamā dhṛtiḥ/</l> 
	<l>dayārjjavamitāhāraḥ śaucaṃ caiva yamā daśāḥ//</l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l>tapaḥ saṃtoṣam āstikyaṃ dānam iśvarapūjanaṃ/</l> 
	<l>siddhāntaśravaṇaṃ caiva hrī matiś ca japo hutaṃ//</l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>tatkuryād āsanaṃ sthairyam ārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūr vorantare samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣyate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇetu tathā savyaṃ gomukhaṃ gomukhākṛtiḥ//</l> 
      </lg> 
