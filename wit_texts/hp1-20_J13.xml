      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājayogam āroḍhum icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhayogopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntvā bahumatadhvānte rajayogam ajānatām/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyā hi matsyeṃdugorakṣādyā vijānate/</l> 
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendraśābarānandabhairavāḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī śuddhabuddhaś ca kanthaḍiḥ/</l> 
	<l>pauraṇṭakaḥ surānandaḥ siddhapādaś ca carpaṭiḥ//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kānerī pūjyapādaś ca dhvaninātho nirañjanaḥ/</l> 
	<l>kāpilī bindunāthaś ca kākacaṇḍīśvarādayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>sukṣamaḥ prabhudevaś ca ghorācolī ca ṭiṇṭiṇī /</l> 
	<l>bhālukīr nāgabodhaś ca caṇḍakāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānām āśrayo yaṃ haṭho mataḥ/</l> 
	<l>aśeṣayogajagatām ādhārakamaṭho haṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yoginā siddhim icchatā/</l> 
	<l>bhaved vīryavatī guptā nirvīryā tu prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l>dhanupramāṇaparyantaṃ </l> 
	<l>ekānte maṭhikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragartapiṭharaṃ nātyuccanīcāyitaṃ/</l> 
	<l>samyakgomayasāndraliptavimalaṃ niśeṣajantūjjhitam/</l> 
	<l>bāhye maṇḍapavedikūparacitaṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam evaṃ sadābhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāra prayāsaś ca prajalpo niyamāgrahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogo vinaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhān niścayād dhairyāt tattvajñānāc ca niścayāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaś ca sidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>ahiṃsā satyam asteyaṃ brahmacaryaṃ kṣamā dhṛtiḥ/</l> 
	<l>dayārjavaṃ mitāhāraḥ śaucaṃ caiva yamā daśāḥ//</l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l>tapaḥ saṃtoṣam āstikyaṃ dānam iśvarapūjanaṃ/</l> 
	<l>siddhāntaśravaṇaṃ caiva matiś caryā japo hutaṃ//</l> 
	<l>iti daśa niyamā prakīrttitāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>kuryāt tad āsanaṃ tasmād ārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūr vorantare samyak kṛtvā pādatalāv ubhau/</l> 
	<l>ṛjukāyasamāsīnaḥ svastikaṃ tat pracakṣate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇe'pi tathā savyaṃ gomukhaṃ gomukhā kṛti//</l> 
      </lg> 
