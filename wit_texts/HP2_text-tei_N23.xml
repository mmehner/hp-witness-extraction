<lg xml:id="hp02_001">
 <l> <s type="pada">athāsāna dṛḍha yogī</s> <s type="pada">vaśī hitasikāśanaḥ/</s></l>
<l> <s type="pada">gurūpadiṣṭamārgeṇa</s> <s type="pada">prāṇāyāmī samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_002">
 <l> <s type="pada">cale vāte calaṃ </s> <s type="pada">niścale /</s></l>
<l> <s type="pada">yogī sthānutvam āpnoti</s> <s type="pada">tato nirūdhayet//</s></l> 
</lg>
 
<lg xml:id="hp02_003">
 <l> <s type="pada">yāvavāyu sthito dehe</s> <s type="pada">tāvajīvanamm ucyate/</s></l>
<l> <s type="pada">maraṇaṃ tasya niṣkrānti</s><s type="pada">s tato vāyuṃ nirundhayet//</s></l> 
</lg>
 
<lg xml:id="hp02_004">
 <l> <s type="pada">malākulāsu nāḍīṣu</s> <s type="pada">māruto naiva madhyagaḥ/</s></l>
<l> <s type="pada">kathaṃ syād unmanībhāvaḥ</s> <s type="pada"> kathaṃ bhavet//</s></l> 
</lg>
 
<lg xml:id="hp02_005">
 <l> <s type="pada">śuddhimati yadā sarvaṃ</s> <s type="pada">nāḍīcakra malākulam/</s></l>
<l> <s type="pada">tadaiva jāyate yogī</s> <s type="pada">prāṇasaṃgrahaṇe kṣamaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_006">
 <l> <s type="pada">prāṇābhyāsaṃ tataḥ kuryān</s> <s type="pada">nityaṃ sāttvikayā dhiyā/</s></l>
<l> <s type="pada">yathā </s> <s type="pada"> prayānti ca//</s></l> 
</lg>
 
<lg xml:id="hp02_007">
 <l> <s type="pada">baddhapadmāsanā yogī</s> <s type="pada">prāṇaṃ candreṇa pūrayet/</s></l>
<l> <s type="pada">dhārayitvā yathāśaktiḥ</s> <s type="pada"> sūryeṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_008">
 <l> <s type="pada">prāṇaṃ sūryeṇa vāṣṭhavya</s> <s type="pada">pūrayed udaraṃ śanaiḥ/</s></l>
<l> <s type="pada">vidhivat kumbhakaṃ kṛtvā</s> <s type="pada">punaś candreṇa recayet//</s></l> 
</lg>
 
<lg xml:id="hp02_009">
 <l> <s type="pada">yena yetayet</s> <s type="pada">dhārayed aanirodhanataḥ/</s></l>
<l> <s type="pada">recayec ca tato’nyena</s> <s type="pada">śanairacavanegataṃ//</s></l> 
</lg>
 
<lg xml:id="hp02_010">
 <l> <s type="pada">prāṇaṃ caṇḍiyā pibenimitaṃ bhūyonyathā _ yet</s></l>
<l> <s type="pada">pītvā piṅgalayā samīraṇam atho baddhvā tyajed vāmayā/</s></l>
<l> <s type="pada">sūryācandramasor aane vidhinā </s></l>
<l> <s type="pada">śuddhā nāḍigaṇā bhavanti yamināṃ māsatrayād ūrdhvataḥ//</s><anchor xml:id="II10"/></l> 
</lg>
 
<lg xml:id="hp02_011">
 <l> <s type="pada">prātar madhyandine soyamadhya</s><s type="pada">rātra ca kumbhakāt/</s></l>
<l> <s type="pada">śanair aśītiparyantaṃ</s> <s type="pada">caturvāraṃ samabhyaset//</s>
</l> 
</lg>
 
<lg xml:id="hp02_012">
 <l> <s type="pada">t svedaḥ</s> <s type="pada">kampo bhavati madhyame/</s></l>
<l> <s type="pada">uttiṣṭhaty uttame </s><s type="pada">rāvai  //</s></l> 
</lg>
 
<lg xml:id="hp02_013">
 <l> <s type="pada">jalena śramajātena</s> <s type="pada">gātramardanam ācaret/</s></l>
<l> <s type="pada">dṛḍhatā laghutā vāpi</s> <s type="pada">tena gātrasya jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_014">
 <l> <s type="pada">abhyāsakāle prathame</s> <s type="pada">śastaṃ kṣīrājyabhojanam/</s></l>
<l> <s type="pada">tato’bhyāse </s> <s type="pada">na tādṛ’niyamagrahaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_015">
 <l><s type="pada">yathā siṃho gajo vyāghro</s> <s type="pada">bhaved vaśyaḥ śanaiḥ śanaiḥ/</s></l>
<l> <s type="pada">tathaiva sevito vāyur</s> <s type="pada">anyathā hṛdi sādhakam//</s></l> 
</lg>
 
<lg xml:id="hp02_016">
 <l> <s type="pada">prāṇāyāmena yuktena</s> <s type="pada">sarvarogakṣayo bhavet/</s></l>
<l> <s type="pada">ayuktābhyāsayogena</s> <s type="pada">sarvarogasamudbhavaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_017">
 <l> <s type="pada">hikkā śvāsaś ca kāsaś ca</s> <s type="pada">śiraḥkarṇākṣivedanāḥ/</s></l>
<l> <s type="pada">bhavanti vividhā </s> <s type="pada">pavanasya vyatikramāt//</s></l> 
</lg>
 
<lg xml:id="hp02_018">
 <l> <s type="pada">yuktaṃ yuktaṃ tyajed vāyuṃ</s> <s type="pada">yuktaṃ yuktaṃ ca pūrayet/</s></l>
<l> <s type="pada">yuktaṃ yuktaṃ ca badhnīyād</s> <s type="pada">evaṃ siddhim avāpnuyāt//</s></l> 
</lg>
 
<lg xml:id="hp02_019">
 <l> <s type="pada">yadā tu nāḍīśuddhiḥ syāt</s> <s type="pada">tadā cihnāni bāhyataḥ/</s></l>
<l> <s type="pada">kāyasya kṛśatā kānti</s><s type="pada">s tathā jāyeta niścitam//</s></l> 
</lg>
 
<lg xml:id="hp02_020">
 <l> <s type="pada">yatheṣṭaṃ dhāraṇo vāyor</s> <s type="pada">analasya pradīpanam/</s></l>
<l> <s type="pada">nādābhivyaktir ārogyaṃ</s> <s type="pada">jāyate nāḍiśoṣanāt</s> 
</l> 
</lg>
 
<lg xml:id="hp02_021">
 <l> <s type="pada">medā</s> <s type="pada">ṣaṭ karmāṇi samācaret/</s></l>
<l> <s type="pada">abhyastā nācaret tāni</s> <s type="pada">doṣāṇāṃ samabhāgataḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_022">
 <l> <s type="pada"/><s type="pada">troṭakaṃ  tathā/</s></l>
<l> <s type="pada">kapālabhātiś caitāni</s> <s type="pada">ṣaṭ karmāṇi pracakṣate//</s></l> 
</lg>
 
<lg xml:id="hp02_023">
 <l> <s type="pada">karmaṣaṭkam idaṃ gopyaṃ</s> <s type="pada">ghaṭaśodhanakārakam/</s></l>
<l> <s type="pada">vicitraguṇasandhāyī</s> <s type="pada">pūjyate yogipuṅgavaiḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp02_024">
 <l> <s type="pada">caturaṅgulavistāraṃ</s>
 <s type="pada">siktaṃ vastraṃ śanair graset/</s></l>
<l> <s type="pada">tataḥ pratyāharec caita</s><s type="pada"> dhautikarma //</s></l> 
</lg>
 
<lg xml:id="hp02_025">
 <l> <s type="pada">kāsaśvāsaplīha</s> <s type="pada">kapharogāṃś ca viṃśatiḥ/</s></l>
<l> <s type="pada">dhautikarmaprabhāvena</s> <s type="pada"> na saṃśayaḥ//</s><anchor xml:id="VuII25"/></l> 
</lg>
 
 
<lg xml:id="hp02_026">
 <l> <s type="pada">nābhi jale </s><s type="pada">nyastanālotkaṭāsanaḥ/</s></l>
<l> <s type="pada">ādhārākuñcanaṃ kuryāt</s> <s type="pada">prakṣālaṃ bastikarma tat//</s></l> 
</lg>
 
<lg xml:id="hp02_027">
 <l> <s type="pada">gulmaplīhodaraṃ cāpi</s> <s type="pada">vātapittakaphodbhavāḥ/</s></l>
<l> <s type="pada">bastikarmaprabhāvena</s> <s type="pada"> sakalāmayāḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_028">
 <l> <s type="pada">dhātvindriyāntaḥkaraṇaṃprasādaṃ</s></l>
<l> <s type="pada">dadyāc ca kābhiṃ dahanapradīptim/</s></l>
<l> <s type="pada">aśeṣadoṣopacayaṃ nihanyā</s>-</l>
<l> <s type="pada">d abhyasyamānaṃ jalabastikarma//</s></l> 
</lg>
 
<lg xml:id="hp02_029">
 <l><s type="pada">udaragatapadārtha</s></l>
<l> <s type="pada">pavanam apānam udīrya kaṇṭhanāle/</s></l>
<l> <s type="pada">mārga-</s></l>
<l> <s type="pada">gajakaraṇī _ nigadyate haṭhajñaiḥ//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_030">
 <l> <s type="pada">sūtraṃ vitastisusnigdhaṃ</s> <s type="pada">nāsānāle praveśayet/</s></l>
<l> <s type="pada">mukhaś ca nirgamec caiṣā</s> <s type="pada">neti siddhirr nigadyate//</s></l> 
</lg>
 
<lg xml:id="hp02_031">
 <l> <s type="pada">kapālaśodhanī </s> <s type="pada">divyadṛṣṭipradāyanī/</s></l>
<l> <s type="pada">ja {_} ddhajāta</s> <s type="pada">jayabhyāśca satī natī//</s></l> 
</lg>
 
 
<lg xml:id="hp02_032">
 <l> <s type="pada">nirīkṣeniścalādṛśā</s> <s type="pada">sūkṣma samāhitaḥ/</s></l>
<l> <s type="pada">aśrusaṃpātaparyanta</s><s type="pada">m ācāryai//</s></l> 
</lg>
 
<lg xml:id="hp02_033">
 <l> <s type="pada"> netrarogāṇāṃ</s> <s type="pada">tandrādināṃ kapāṭakam/</s></l>
<l> <s type="pada"/><s type="pada">s trāṭakaṃ gopyaṃ yathā hāṭakapeṭakam//</s></l> 
</lg>
 
 
<lg xml:id="hp02_034">
 <l> <s type="pada">amandāvartavegena</s> <s type="pada">tunduṃ savyāpasavyataḥ/</s></l>
<l> <s type="pada">naśnātso bhāmayad eṣā</s> <s type="pada">naulī gauḍīḥ //</s></l> 
</lg>
 
<lg xml:id="hp02_035">
 <l> <s type="pada">saṃdīpanapāvanādi</s>-</l>
<l><s type="pada">nandakarī sadaiva/</s></l>
<l> <s type="pada">aśeṣadoṣāmayaśodhaṇī yā</s></l>
<l> <s type="pada">haṭhakriyā naulī//</s></l> 
</lg>
 
 
<lg xml:id="hp02_036">
 <l> <s type="pada">bhastrāhaval lohakārasya</s> <s type="pada">recapūrau /</s></l>
<l> <s type="pada">kapālabhāti vikhyātā</s> <s type="pada">//</s> 
</l> 
</lg>
 
<lg xml:id="hp02_037">
 <l> <s type="pada">ṣaṭkarmasthaulya</s><s type="pada">kaphamedomalodgitaḥ/</s></l>
<l> <s type="pada">prāṇāyāmaṃ tataḥ kuryād</s> <s type="pada">anāyāsena sidhyati//</s></l> 
</lg>
 
<lg xml:id="hp02_038">
 <l> <s type="pada"> sarve</s> <s type="pada">praśuṣyanti /</s></l>
<l> <s type="pada">ācāryāṇāṃ tu keṣāṃci</s><s type="pada">anyakarma na saṃmatam//</s></l> 
</lg>
 
<lg xml:id="hp02_039">
 <l> <s type="pada">brahmādayo’pi tridaśāḥ</s> <s type="pada">pavanābhyāsatatparāḥ/</s> 

</l>
<l> <s type="pada">abhavan taṃtakat</s> <s type="pada">tasmām abhyaset//</s> 

<anchor xml:id="III39"/></l> 
</lg>
 
<lg xml:id="hp02_040">
 <l> <s type="pada">yāvad baddho marud dehe</s> <s type="pada">yāvac cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">yāvaicched bhruvor madhye</s> <s type="pada">tāvat kālabhayaṃ kutaḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp02_041">
 <l> <s type="pada">vidhivat prāṇasaṃyāmai</s><s type="pada">r nāḍīkrīva viśodhite/</s></l>
<l> <s type="pada">suṣumṇāvadanaṃ bhittvā</s> <s type="pada">sukhād viśati mārutaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_042">
 <l> <s type="pada">mārute madhyasaṃcāre</s> <s type="pada">manaḥsthairyaṃ prajāyate/</s></l>
<l> <s type="pada">yo manaḥsusthitā bhāvaḥ</s> <s type="pada">saivāvasthā manonmanī//</s></l> 
</lg>
 
<lg xml:id="hp02_043">
 <l> <s type="pada">tatsiddhaye </s><s type="pada">ś citrākurvati kumbhakān/</s></l>
<l> <s type="pada">kumbhakābhyāsāvvicitrāṃ</s><s type="pada">yogisiddhim avāpnuyāt//</s></l> 
</lg>
 
 
<lg xml:id="hp02_044">
 <l> <s type="pada">sūryabhedanam ujjāyī</s> <s type="pada">tathā śītkāraśītalī/</s></l>
<l><s type="pada">bhastrikā bhrāmarī mūrchā</s> <s type="pada">prāvatī kumbhakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_045">
 <l> <s type="pada">pūrakānte tu kartavyo</s> <s type="pada">bandho jālandharābhidhaḥ/</s></l>
<l> <s type="pada">kumbhakānte recakādau</s> <s type="pada">kartavyatahiyānakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_046">
 <l> <s type="pada">adhasta kuñcanenāśu</s> <s type="pada">kaṇṭhasaṃkocane kṛte/</s></l>
<l> <s type="pada">madhya paścimatānena</s> <s type="pada">syāt prāṇo brahmanābhirāt//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp02_047">
 <l> <s type="pada">apānam ūrdhvam utthāpya</s> <s type="pada">prāṇaṃ kaṇṭhād adho nayat/</s></l>
<l> <s type="pada">yogī jarāviyuktaḥ san</s> <s type="pada">ṣoḍaśo vayasā
 bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp02_048">
 <l> <s type="pada">āsane sukhade yogī</s> <s type="pada">baddhvā vajrāsanaṃ tataḥ/</s></l>
<l> <s type="pada">dakṣanāḍyāḥ samākṛṣya</s> <s type="pada">bahiḥsthaṃ pavanaṃ śanaiḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_049">
 <l> <s type="pada"/> <s type="pada">nirodhāvadhi kumbhayet/</s></l>
<l> <s type="pada"> śanaiḥ savyanāḍyā</s> <s type="pada">recayet pavanaṃ //</s></l> 
</lg>
 
<lg xml:id="hp02_050">
 <l> <s type="pada">kapālaśodhanaṃ vāta</s><s type="pada">doṣaghnaṃ kṛmi/</s></l>
<l> <s type="pada">punaḥ punar idaṃ </s> <s type="pada">// </s></l> 
</lg>
 
 
<lg xml:id="hp02_051">
 <l> <s type="pada">mukhaṃ saṃyamya m</s> <s type="pada">ākṛṣya pavanaṃ śanaiḥ/</s></l>
<l> <s type="pada">yathā ragati </s> <s type="pada">hṛdayāvadhi sasvanam//</s></l> 
</lg>
 
<lg xml:id="hp02_052">
 <l> <s type="pada">pūrve ca kumbhaye</s> <s type="pada">recayed iḍayā tataḥ/</s></l>
<l> <s type="pada">śreṣmādoṣaharaṃ kaṇṭhe</s> <s type="pada">dehānalavivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_053">
 <l> <s type="pada">nāḍījalodaraṃ dhātu</s><s type="pada">gatadoṣāvināśanam/</s></l>
<l> <s type="pada"> kāryaṃ</s> <s type="pada">ujjāyaḥravya kumbhakam</s>//</l> 
</lg>
 
 
<lg xml:id="hp02_054">
 <l> <s type="pada">dhitkāṃ (?)  dakre</s> <s type="pada">prāṇenaiva vijṛmbhikaṃ/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">kāmadevo dvitīyakaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_055">
 <l> <s type="pada">yoginī</s> <s type="pada">sṛṣṭisaṃhārakārakaḥ/</s></l>
<l> <s type="pada">na kṣudhā na tṛṣā nidrā</s> <s type="pada">naivālasyaṃ //</s></l> 
</lg>
 
<lg xml:id="hp02_056">
 <l> <s type="pada">bhavet svacchanda</s> <s type="pada">sarvopadravavarjitaḥ/</s></l>
<l> <s type="pada">anena vidhinā </s> <s type="pada">yogīndro munimaṇḍale//</s></l> 
</lg>
 
 
<lg xml:id="hp02_057">
 <l> <s type="pada">rasanātālumūlena</s> <s type="pada">yaḥ prāṇāḥ satataṃ pibet/</s></l>
<l> <s type="pada">abdārdhena bhavet tasya</s> <s type="pada">sarvarogaparikṣayaḥ//</s><anchor xml:id="II57"/> 
</l> 
</lg>
 
 
<lg xml:id="hp02_058">
 <l> <s type="pada">jihvayā vāyum ākṛṣya</s> <s type="pada">pūrvavakumbhakādane/</s></l>
<l> <s type="pada">śanais tu ghrāṇarandhrābhyāṃ</s> <s type="pada">recayed anilaṃ //</s></l> 
</lg>
 
<lg xml:id="hp02_059">
 <l> <s type="pada">gulma</s> <s type="pada">jvalaṃ   tṛṣāṃ/</s></l>
<l> <s type="pada"> śītalī nāma</s> <s type="pada">kumbhako’yaṃ nihanti //</s></l> 
</lg>
 
 
<lg xml:id="hp02_060">
 <l> <s type="pada">ūrvor upari </s> <s type="pada">ubhe pādatale tathā/</s></l>
<l> <s type="pada">padmāsanaṃ bhavet samyak</s> <s type="pada">sarvapāpapraṇāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_061">
 <l> <s type="pada">samyak padmāsanaṃ baddhvā</s> <s type="pada">samagrīvodaraḥ sudhīḥ/</s></l>
<l> <s type="pada">sukhaṃ saṃyamya yatnena</s> <s type="pada">prāṇaṃ ghrāṇena recayet//</s>
</l> 
</lg>
 
<lg xml:id="hp02_062">
 <l> <s type="pada">yathā lagati hṛkaṃṭhaṃ</s> <s type="pada">kapāla /</s></l>
<l> <s type="pada">vegena pūrayet kiṃcit</s> <s type="pada">hṛtpadmāvadhi mārutam//</s></l> 
</lg>
 
<lg xml:id="hp02_063">
 <l> <s type="pada">punar virecayet tadva</s><s type="pada"> punaḥ punaḥ/</s></l>
<l> <s type="pada">yathaiva lohakārāṇāṃ</s> <s type="pada">bhastrā vegena cālyate//</s></l> 
</lg>
 
<lg xml:id="hp02_064">
 <l> <s type="pada">tathaiva svaśarīrasthaṃ</s> <s type="pada">t pavanaṃ dhiyā/</s><anchor xml:id="II64"/></l>
<l> <s type="pada">yadā śramo bhaved dehe</s> <s type="pada">tadā sūryeṇa pūrayet//</s></l> 
</lg>

<lg xml:id="hp02_065">
 <l> <s type="pada"> bhavet pūrṇaṃ</s> <s type="pada">pavanena tathā laghu/</s></l>
<l> <s type="pada">dhārayannāsikā madhye</s><s type="pada">tarjanabhyāṃ vinā dṛḍham//</s></l> 
</lg>
 
<lg xml:id="hp02_066">
 <l> <s type="pada">kumbhakaṃ pūrvavat kṛtvā</s> <s type="pada">recayeidayānikaṃ/</s></l>
<l> <s type="pada">vātapittaśleṣmaharaṃ</s> <s type="pada">śarīrāgnivivardhanam//</s></l> 
</lg>
 
<lg xml:id="hp02_067">
 <l> <s type="pada">kuṇḍalī </s> <s type="pada">pāpapuṃ sukhadaṃ śubham/</s></l>
<l> <s type="pada">brahmanāḍīmukhaṃtastha</s><s type="pada">kaphādyargalanāśanam//</s></l> 
</lg>
 
<lg xml:id="hp02_068">
 <l> <s type="pada">samyaggātrasamudbhūta</s><s type="pada">granthitrayavibhedakam//</s></l>
<l> <s type="pada">viśeṣeṇaiva kartavyaṃ</s> <s type="pada">bhastrākhyaṃ kumbhakaṃ svidaṃ//</s> 
 </l> 
</lg>
 
 
<lg xml:id="hp02_069">
 <l> <s type="pada">vegāgho pūrakaṃ </s></l>
<l> <s type="pada">bhṛṅgīnādaṃ recakaṃ mandamandam/</s></l>
<l> <s type="pada">yogīndrāṇānityabhyāsayogā-</s></l>
<l> <s type="pada">c citte jātā kācid ānanda//</s></l>
</lg>
 
 
<lg xml:id="hp02_070">
 <l> <s type="pada">pūrakānte </s> <s type="pada">baddhvā jālandhare śanaiḥ/</s></l>
<l> <s type="pada">recayen mūrchanā</s> <s type="pada">manomūrchāsukhaprajā//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp02_071">
 <l> <s type="pada">antaḥpravartitādgāra</s><s type="pada">mārutīpūritodaraḥ/</s></l>
<l> <s type="pada">yadyasyagādhe pi sukhaṃ</s> <s type="pada"> yapapatravat</s>// 
</l> 
</lg>
 
 
 
<lg xml:id="hp02_072">
 <l> <s type="pada">prāṇāyāmāss tridhā proktā</s> <s type="pada">recapūrakakumbhakaiḥ/</s></l>
<l> <s type="pada">sahitaḥ kevalaś ceti</s> <s type="pada">kumbhako dvividho mataḥ/</s> 
</l> 
</lg>
 
<lg xml:id="hp02_073">
 <l> <s type="pada"/> <s type="pada"> sahitakumbhakaḥ/</s> 
</l>
<l> <s type="pada">yāvat kevalasiddhiḥ syāt</s> <s type="pada">m abhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_074">
 <l> <s type="pada">recakaṃ pūrakaṃ </s> <s type="pada">mukhaṃ yad vāyudhāraṇam/</s></l>
<l> <s type="pada">prāṇāyāmo’yam ity uktaḥ</s> <s type="pada">sa vai kevalakumbhataḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_075">
 <l> <s type="pada">kevale kumbhake siddhe</s> <s type="pada">reca/</s></l>
<l> <s type="pada">na tasya durlabhaṃ kiṃcit</s> <s type="pada">triṣu lokeṣu vidyate//</s></l> 
</lg>
 
<lg xml:id="hp02_076">
 <l> <s type="pada"> kevale kumbhake</s> <s type="pada">yatheṣṭaṃ vāyudhāraṇam/</s></l>
<l> <s type="pada">rājayogapadaṃ </s> <s type="pada">labhate nātra saṃśayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp02_077">
 <l> <s type="pada">haṭhaṃ vinā rājayogo</s> <s type="pada">rājayogaṃ vinā haṭhaḥ/</s></l>
<l> <s type="pada">na sidhyati tato yugma</s><s type="pada">m ā niṣpatteḥ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp02_078">
 <l> <s type="pada">kumbhitaḥprāṇarecānte</s> <s type="pada">kuryāc cittaṃ nirāśrayam/</s></l>
<l> <s type="pada">evam abhyāsayogena</s> <s type="pada">rājayogapadaṃ //</s> 
</l> 
</lg>
 

<lg xml:id="hp02_079">
 <l><s type="pada">kumbhakāt kuṇḍalībodhau</s> <s type="pada">kuṇḍalībodhato bhavet/</s></l>
<l> <s type="pada">anargalā suṣumṇā ca</s> <s type="pada">viśed vāyus tato balāt haṭhasiddhiś ca jāyate//</s></l> 
</lg>
 
<lg xml:id="hp02_080">
 <l> <s type="pada">vapuḥkṛśatvaṃ vadane prasannatā</s></l>
<l> <s type="pada">nādasphuṭatvaṃ ca nayane /</s></l>
<l> <s type="pada">arogitā bindujayo’gnidīpanaṃ</s> </l>
<l> <s type="pada">r haṭhasiddhilakṣaṇam//</s></l> 
</lg>
 <div type="colophon" xml:id="hp02_col"><p> iti śrīsvātmārāmayogīndraviracitāyāṃ haṭhapradīpikāyāṃ // </p></div> 
