      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājayogam āroḍhum icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa dhīmatā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumatadhvānte rajayogam ajānatam/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāma kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyā hi matsyendragorakṣādyo vijānate/</l> 
	<l>ātmārāmo'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendraśābarānandabhairavā/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣavileśayā//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī siddhibuddhiś ca kanthaviḥ/</l> 
	<l>pauraṇṭakaḥ surānandaḥ siddhipādaś ca carpaṭi//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kāṇarī pūjyapāṇaś ca nityanātho nirañjana/</l> 
	<l>kapālī bindunāthaś ca kākacaṇḍīśvarādayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>adhvamaḥ prabhudevaś ca ghoḍācolī ca ṭiṇṭiṇiḥ /</l> 
	<l>bhālukā nālabodhaś ca khaṇḍakāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhāḥ haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratapitaptānāṃ samāśraya maho haṭhaḥ/</l> 
	<l>aśeṣayogajagatām ādhārakamaṭho haṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yogināṃ siddhim icchatām/</l> 
	<l>bhaved vīryavatī goptā nivīryā nu prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānte bhuvikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragartaviṭapaṃ nātyuccanīcāyitaṃ/</l> 
	<l>samyag gomayasāndra{} {}{}/</l> 
	<l>{} {}{} {}{}/</l> 
	<l>proktaṃ yoga{} {} {}{}{}// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam evaṃ sadābhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>abhyāhāraḥ prayāsaś ca prajalpo niyamāgrahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogo vinaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhāt sāhasādvairyāttattvajñānādiniścayāt/</l> 
	<l>janāsaṅgāttathā samyak ṣaḍbhir yogaḥ prasidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>   </l> 
	<l>   </l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l> </l> 
	<l>  </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>tatkuryād āsanaṃ sthairyam ārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūr vorantare samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjukāyasamāsīnaḥ svastikaṃ tat pravakṣyate//</l> 
      </lg> 
