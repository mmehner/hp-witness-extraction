<lg xml:id="hp04_049">
<l><texteng>[Alt1]</texteng> <s type="pada">anāhatadhvaner antar</s> <s type="pada">jñeyaṃ yat sūkṣmasūkṣmakam/</s></l>
<l> <s type="pada">manas tatra layaṃ yāti</s> <s type="pada">tad viṣṇoḥ paramaṃ padam//</s> <anchor xml:id="anahata2"/>
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_049_1">
<l><texteng>[Alt2]</texteng> <s type="pada"/> <s type="pada"> /</s></l>
<l> <s type="pada">r antargataṃ </s> <s type="pada">rgataṃ manaḥ/</s></l>
<l> <s type="pada"> </s> <s type="pada">tad viṣṇoḥ paramaṃ padam//</s> 
<anchor xml:id="anahata"/></l> 
</lg>
</div> 
<lg xml:id="hp04_050">
<l> <s type="pada">tāvad ākāśasaṃkalpo</s> <s type="pada">yāvad vādhaḥ pravartate/</s></l>
<l> <s type="pada">niḥśabdaṃ tat paraṃ brahma</s> <s type="pada">paramātmā °numīyate//</s></l> 
</lg>
 
<lg xml:id="hp04_051">
<l> <s type="pada">t kiṃcirūpeṇa</s> <s type="pada">śrūyate śaktir eva sā/</s></l>
<l> <s type="pada"> nirākāraḥ</s> <s type="pada">sa eva parameśvaraḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_052">
<l> <s type="pada">śravaṇamukhanayananāsānirodhanaṃ naiva kartavyaṃ/</s></l>
<l> <s type="pada">śuddhasuṣumṇāśaraṇe vimalaḥ śrūyate nādaḥ//</s><anchor xml:id="sravanaputa"/></l>
<l> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_052_1">
<l> <s type="pada">nāda śaktir iti kṣāto</s> <s type="pada">nādajñānaṃ sadāśivaḥ/</s></l>
<l> <s type="pada">nādajñāne ca naṣṭe ta</s><s type="pada">unmadhyedhāvaśiṣyate//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_052_2">
<l> <s type="pada">nādo yāvan manas tāva</s><s type="pada">n nādānte tu manonmanī/</s></l>
<l> <s type="pada">saśabdaṃ kathitaṃ vyoma</s> <s type="pada">niḥśabdaṃ brahma kathyate//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_052_3">
<l> <s type="pada">sadā nādānusaṃdhānāt</s> <s type="pada">saṃkṣīṇe vāsanākṣaye/</s></l>
<l> <s type="pada">nirañjane ca līyeta</s> <s type="pada">niścitta manamārutau//</s> 
<anchor xml:id="sadanada"/></l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_052_4">
<l> <s type="pada">nādakoṭisahasrāṇi</s> <s type="pada">bindukoṭiśatāni ca/</s></l>
<l> <s type="pada">sarve tatra layaṃ yānti</s> <s type="pada">yatra deva nirañjanaḥ//</s> <anchor xml:id="nadakoti"/> 
</l>
<l> 
</l> 
</lg>
</div> 
 
 <div type="altrec">
<lg xml:id="hp04_052_5">
<l> <s type="pada">sarve </s> <s type="pada">rājayoga/</s></l>
<l> <s type="pada">rājayogapadaṃ prāpya</s> <s type="pada">jāyate nirañjanaḥ//</s> 
 
</l> 
</lg>
</div> 
 
<lg xml:id="hp04_053">
<l> <s type="pada"/> <s type="pada">/</s></l>
<l> <s type="pada">purā matsyendra</s><s type="pada"> vacaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_054">
<l> <s type="pada">yāvan naiva praviśati caran māruto madhyamārge</s></l>
<l> <s type="pada">yāvabandhaṃr na bhavati dṛḍhaḥ prāṇavātaṃna bandhanaḥ/</s></l>
<l> <s type="pada">yāvad vyomnā sahajasadṛśaṃ jāyate naiva tattvaṃ</s></l>
<l> <s type="pada">tāvat sarvaṃ vadati yad idaṃ ḍaṃbhamithyāpralāpaḥ//</s> 
<anchor xml:id="yavan"/></l> 
</lg>
 
 
<lg xml:id="hp04_055">
<l> <s type="pada">jñātvā suṣumṇāṃ saśvedaṃ</s> <s type="pada">kṛtvā vāyuṃ ca madhyagam/</s></l>
<l> <s type="pada">sthitvāsāṃcaiṃdave sthāne</s> <s type="pada">ghrāṇarandhraṃ nirodhayet//</s><anchor xml:id="jnatva"/></l> 
</lg>
 
 
<lg xml:id="hp04_056">
<l> <s type="pada">iḍāyāṃ </s> <s type="pada">carataś candrabhāskarau/</s></l>
<l> <s type="pada">candras tāmasa ity uktaḥ</s> <s type="pada">sūryo  ucyate//</s>
 
</l> 
</lg>
 
<lg xml:id="hp04_057">
<l> <s type="pada">sūryacandrau sadā dhatte</s> <s type="pada">kālāṃ °śa tridivātmakaṃ/</s></l>
<l> <s type="pada">bhoktī suṣumṇā kālasya</s> <s type="pada">guhyam etad udāhṛtam//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp04_058">
<l> <s type="pada">ṣaṭcakraṃ ṣoḍaśādhāraṃ</s> <s type="pada"> guṇatrayam/</s></l>
<l> <s type="pada"> </s> <s type="pada"> paramaṃ padam//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_059">
<l> <s type="pada">kuṇḍalī kuṭilākārā</s> <s type="pada">sarpavat parikīrtitā/</s></l>
<l> <s type="pada">sā śaktiḥ  yena</s> <s type="pada">sa  nātra saṃśayaḥ//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp04_060">
<l> <s type="pada">yadā kūṭaṃ trikūṭasthaṃ</s> <s type="pada">cittaṃ  /</s></l>
<l> <s type="pada">kuṇḍalyās tu </s> <s type="pada">sa mukto nātra saṃśayaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_061">
<l> <s type="pada">dvisaptatisahasrāṇi</s> <s type="pada">nāḍīdvāre capañjare/</s></l>
<l> <s type="pada">suṣumṇā śāṃbhavī śaktiḥ</s> <s type="pada">śeṣās tv eva nivarttakāḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp04_062">
<l> <s type="pada">vāyuḥ paricito yatnā</s><s type="pada">d agninā saha kuṇḍalī/</s></l>
<l> <s type="pada">bodhayitvā suṣumṇāyāṃ</s> <s type="pada">praviśeatirodhataḥ//</s><anchor xml:id="bodhayitva"/> 
</l> 
</lg>
 
<lg xml:id="hp04_063">
<l> <s type="pada">suṣumṇāvāhinī prāṇe</s> <s type="pada">sidhyaty eva manonmanī/</s> 
</l>
<l> <s type="pada">anyathā tv itarebhyāsāt</s> <s type="pada">prayāsā eka yoginī//</s></l> 
</lg>
 
<lg xml:id="hp04_064">
<l> <s type="pada">pavano badhyate yena</s> <s type="pada">manas tenaiva badhyate/</s></l>
<l> <s type="pada">manaś ca badhyate yena</s> <s type="pada">pavanas tena badhyate//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_065">
<l> <s type="pada">hetudvayasya cittasya</s> <s type="pada">vāsanā ca samīraṇaḥ/</s></l>
<l> <s type="pada">tayor vinaṣṭa ekasmi</s><s type="pada">tau dvāv api vinaśyataḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp04_066">
<l> <s type="pada">mano yatra vilīyeta</s> <s type="pada">mārutass tatra līyate/</s></l>
<l> <s type="pada"></s> <s type="pada">mana//</s>
 
</l> 
</lg>
 
<lg xml:id="hp04_067">
<l> <s type="pada">dugdhāmbuvat saṃmilitau sadaiva</s></l>
<l> <s type="pada">tulyakriyau mānasamārutau hi/</s></l>
<l> <s type="pada">yāvan manas tatra marupravṛddhitti-</s></l>
<l> <s type="pada"> //</s><anchor xml:id="dugdha"/></l> 
</lg>
 
<lg xml:id="hp04_068">
<l> <s type="pada">atraikanāśād aparasya nāśaḥ</s></l>
<l> <s type="pada">ekapravṛtter aparapravṛttiḥ/</s>
</l>
<l> <s type="pada">addhastayoś cendriyavargavṛttiḥ-</s></l>
<l> <s type="pada">addhvastayor mokṣapadasya siddhiḥ//</s><anchor xml:id="tatraika"/></l> 
</lg>
 
<lg xml:id="hp04_069">
<l> <s type="pada">vāyumārge tha saṃcāre</s> <s type="pada">sakalaṃ labhyatemahaḥ/</s></l>
<l> <s type="pada">tato’ṣṭaguṇam aiśvaryaṃ</s> <s type="pada">satyaṃ ity āha śaṃkaraḥ//</s> 
<anchor xml:id="vayumargena"/> 
</l> 
</lg>
 
 
<lg xml:id="hp04_070">
<l> <s type="pada">yadā  prāṇo</s> <s type="pada">mānasaṃ /</s></l>
<l> <s type="pada">tadā samarasatvaṃ </s><s type="pada">//</s><anchor xml:id="visvarupa"/> 
 
</l> 
</lg>
 
<lg xml:id="hp04_071">
<l> <s type="pada">manasthairye sthiro vāyus</s> <s type="pada">tato bindu sthiro bhavet/</s></l>
<l> <s type="pada">bindusthairyodayāsatyaṃ</s> <s type="pada">piṇḍasthairyaṃ prajāyate//</s> 
<anchor xml:id="manahsthairye"/> 
</l> 
</lg>
 
<lg xml:id="hp04_072">
<l> <s type="pada">dṛṣṭiḥ sthirā yasya  -</s></l>
<l> <s type="pada">d vāyuḥ sthiro yasya vinā prayatnāt/</s></l>
<l> <s type="pada">cittaṃ sthiraṃ yasya </s></l>
<l> <s type="pada">sa eva yogī sa guruḥ sa sevyaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp04_073">
<l> <s type="pada">praveśe nirgame </s> <s type="pada">dakṣiṇe /</s></l>
<l> <s type="pada"> </s> <s type="pada">sa mukto nātra saṃśayaḥ//</s> 
<anchor xml:id="pravese"/> 
</l> 
</lg>
 
<lg xml:id="hp04_074">
<l> <s type="pada">sarve haṭhalayoyāgā</s> <s type="pada">rājayogāya kevalaṃ/</s></l>
<l> <s type="pada">rājayogasamārūḍhaḥ</s> <s type="pada">puruṣaḥ kālavañcakaḥ//</s><anchor xml:id="kalavancaka"/> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_074_1">
<l> <s type="pada">iḍā bhagavatī gaṅgā</s> <s type="pada">piṅgalā  nadī/</s></l>
<l> <s type="pada"> taddvayor madhye</s> <s type="pada">suṣumṇā  sarasvatī//</s> 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp04_074_2">
<l> <s type="pada">triveṇīsaṃgamo yatra</s> <s type="pada">tīrtharājaḥ sa ucyate/</s></l>
<l> <s type="pada"/> <s type="pada">sarvapāpaiḥ pramucyate//</s> 
</l> 
</lg>
</div> 
<lg xml:id="hp04_075">
<l> <s type="pada">iti tu sakalayogaśāstra</s></l>
<l> <s type="pada">bhūtam/</s></l>
<l> <s type="pada"> haṭhāmṛtaṃ </s></l>
<l> <s type="pada">yadi bhavatā//</s> 
</l> 
</lg>
 <div type="altrec">
<lg xml:id="hp04_075_1">
<l><s type="pada">vidyātīrthe  vibudhāḥ sādhavaḥ satyatīrthe</s></l>
<l><s type="pada">gaṅgātīrthe malinamanaso yogino jñānatīrthe/</s></l>
<l><s type="pada">dhārātīrthe dharaṇipatayo dānatīrthe dhanāḍhyāḥ</s></l>
<l><s type="pada">lajjātīrthe kulayuvatayaḥ pātakaṃ kṣālayanti//</s> 
</l> 
</lg>
