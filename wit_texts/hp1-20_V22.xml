      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>vibhrājate pronnatarājayogam āroḍhum icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumatedhyāna rajayogam ajānatām/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l> 
	<l>svātmārāmaḥ'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendraśābarānandabhairavāḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthāno bhairavo yogī śuddhabuddhaś ca kanthaḍiḥ/</l> 
	<l>koraṃṭakaḥ surānandaḥ siddhapādaś ca carpaṭiḥ//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kānerī pūjyapādaś ca nityanātho nirañjanaḥ/</l> 
	<l>kapālir bindunāthaś ca kākacaṇḍīśvarā .. ..ḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>allāmaḥ prabhudevaś ca gho .. co .ī ca ṭiṇṭiṇiḥ /</l> 
	<l>bhālukī nāgadevaś ca khaṇḍakāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayā mahāsiddhā haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>aśeṣatāpataptānāṃ samāśraya maṭhā haṭaḥ/</l> 
	<l>aśeṣayoga.. .. .. .ādhārakamaṭho haṭaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭavidyā paraṃ gopyā yogi .. siddhim icchatā/</l> 
	<l>bhaved vīryavatī guptā nirvīryā .. prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekā.. .. .. kā madhye sthātavyaṃhaṭha yo.. ..// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpā.. ..marandhraṃgartavivaraṃ .. yuccanīcā.. .ṃ/</l> 
	<l>samyag gomayasāṃ ..liptamamalaṃ niś. ..jaṃtū .. .. ta[ṃ]/</l> 
	<l>bāhye maṇḍapavedikūparuciraṃ prākārasaṃ .. ṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ .. dhyaihaṭābhyāsibhiḥ// </l> 
      </lg> 
