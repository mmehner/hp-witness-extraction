      <lg xml:id="hp1-1">
	<l>śrīādināthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājasaudham āroḍhum icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumatadhvāntai rajayogam ajānatām/</l> 
	<l>haṭhapradīkāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l> 
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthamatsyendraśāradānandabhairavāḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣābileśayāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthānabhairavo yogī siddhabuddhiś ca kanthaḍiḥ/</l> 
	<l>kauraṃḍīkaḥ surānandasiddhapādaś ca carpaṭī//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kanerī pūjyapādaś ca nityanātho nirañjanaḥ/</l> 
	<l>kāpālī bindunāthaś ca kākacaṇḍīśvarādayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>alasaḥ prabhudevaś ca ghoḍācolī ca ṭiṇṭiṇī /</l> 
	<l>bhālukī nāgabodhaś ca caṇḍakapālakās tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍaṃ vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānāṃ samāśrayaṃ maṭho haṭhaḥ/</l> 
	<l>aśeṣaṃ yogajagatām ādhāraḥkamaṭho yathā//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yoginā siddhim icchatā/</l> 
	<l>bhaved vīryavatī guptā nirvīryā tu prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l>dhanuḥpramāṇaparyaṃtaṃ śilāgnijalavarjjite</l> 
	<l>ekānte maṭhikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragarttaghaṭitaṃ nātyuccanīcāsānaṃ/</l> 
	<l>samyag gomayasāndraliptavimalaṃ niśeṣabādhojjhitam/</l> 
	<l>bāhye maṇḍapavedikūparuciraṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam eva sadābhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāraḥ prayāsaś ca prajalpo niyamāgrahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogo vinaśyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhān niścayād dhairyāt tattvajñānāya darśanāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>   </l> 
	<l>   </l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l> </l> 
	<l>  </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>tatkuryādāsana sthairyam ārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vaśiṣṭhadyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni kathyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūr vorantare samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l>jaṅghorvor adhare pādayugalaṃ viniveśayet/ </l> 
	<l>sukhāsanam idaṃ proktaṃ sādhakānāṃ sukhāvahaṃ//</l> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye ca dakṣiṇaṃ pādirmaṃ pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇe'pi tathā savyaṃ gomukhaṃ gomukhaṃ yathā//</l> 
      </lg> 
