      <lg xml:id="hp1-1">
	<l>ādīśanāthāya namo'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājayogam āroḍhum icchor adhirohiṇīva// </l>
      </lg>
      <lg xml:id="hp1-2">
	<l>praṇamya śrīguruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> 
      </lg> 
      <lg xml:id="hp1-3"> 
	<l>bhrāntyā bahumataṃbhrāntaṃ rajayogam ajānatām/</l> 
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg> 
      <lg xml:id="hp1-4"> 
	<l>haṭhavidyā hi matsyendragorakṣādyā vijānate/</l> 
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ// </l> 
      </lg> 
      <lg xml:id="hp1-5"> 
	<l>śrīādināthādimatsyendraśābarānandabhairavāḥ/</l> 
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayāḥ//</l> 
      </lg> 
      <lg xml:id="hp1-6"> 
	<l>manthāno bhairavo yogī suddhabuddhaś ca kanthalī/</l> 
	<l>pauraṇṭakaḥ surānandaḥ siddhipādaś ca carpaṭī//</l> 
      </lg> 
      <lg xml:id="hp1-7"> 
	<l>kaṇerī pūryapādaś ca nityanātho nirañjanaḥ/</l> 
	<l>kapālī bindunādaś ca kākacaṇḍīśvarāhvayaḥ //</l> 
      </lg> 
      <lg xml:id="hp1-8"> 
	<l>allāmaḥ prabhudevaś ca ghorācolī ca ṭiṇṭiṇī /</l> 
	<l>bhālukī nāgabodhaś ca khaṇḍaṃkāpālikas tathā//</l> 
      </lg> 
      <lg xml:id="hp1-9"> 
	<l>ity ādayo mahāsiddhā haṭhayogaprabhāvataḥ /</l> 
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l> 
      </lg> 
      <lg xml:id="hp1-10"> 
	<l>saṃsāratāpataptānāṃ samāśrayo haṭho maṭhaḥ/</l> 
	<l>aśeṣayogajagatīm ādhāreka haṭho maṭhaḥ//</l> 
      </lg> 
      <lg xml:id="hp1-11"> 
	<l>haṭhavidyā paraṃ gopyā yogināṃ siddhim icchatām/</l> 
	<l>bhaved vīryavatī guptā nirvīryā tu prakāśitā//</l> 
      </lg> 
      <lg xml:id="hp1-12"> 
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l> 
	<l/> 
	<l/> 
	<l/> 
	<l/> 
	<l> </l> 
	<l>ekānte maṭhikā madhye sthātavyaṃhaṭha yoginā// </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-13"> 
	<l>alpadvāram arandhragartasahitaṃ nātyuccanīcāyutaṃ/</l> 
	<l>samyakgomayasāndraliptam abijaṃ niḥśeṣabāndhojjhitam/</l> 
	<l>bāhye maṇḍapavedikūparucitaṃ prākārasaṃveṣṭitaṃ/</l> 
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> 
      </lg> 
      <lg xml:id="hp1-14"> 
	<l>evaṃvidhe maṭhe sthitvā sarvacintā vivarjitaḥ/</l> 
	<l>gurūpadiṣṭamārgeṇa yogam evaṃ samabhyaset//</l> 
      </lg> 
      <lg xml:id="hp1-15"> 
	<l>atyāhāraḥ prayāsaś ca prajalpo niyamagrahaḥ/</l> 
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogaḥ \em prahāsyati//</l> 
      </lg> 
      <lg xml:id="hp1-16"> 
	<l>utsāhān niścayadhairyāttattvajñānāc ca darśanāt/</l> 
	<l>janasaṅgaparityāgāt ṣaḍbhir yogas tu sidhyati//</l> 
      </lg> 
      <lg xml:id="hpyamainsertion"> 
	<l/> 
	<l>   </l> 
	<l>   </l> 
      </lg> 
      <lg xml:id="hpniyamainsertion"> 
	<l> </l> 
	<l>  </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-17"> 
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l> 
	<l>tatkuryād āsanaṃ sthairyam ārogyaṃ cāṅgapāṭavaṃ// </l> 
      </lg> 
      <lg xml:id="hp1-18"> 
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> 
	<l>aṅgīkṛtānyāsanāni likhyante kānicinmayā//</l> 
      </lg> 
      <lg xml:id="hp1-19"> 
	<l>jānūr vorantare samyak kṛtvā pādatale ubhe/</l> 
	<l>ṛjukāyasamāsīnaḥ svastikaṃ tat pracakṣate//</l> 
      </lg> 
      <lg xml:id="vuextrafter19"> 
	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇe'pi tathā savye gomukhaṃ gomukhaṃ yathā//</l> 
      </lg> 
