<body>

<lg xml:id="hp01_001">
 <l> <s type="pada">anādināthāya namo’stu tasmai</s></l>
<l> <s type="pada">yenopadiṣṭā haṭhayogavidyā/</s></l>
<l> <s type="pada">virājate pronnatarājasaudha</s>-</l>
<l> <s type="pada">ārūḍhamm icchor adhirohiṇīva//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_002">
 <l> <s type="pada">praṇamya śrīguruṃ nāthaṃ</s> <s type="pada">svātmārāmeṇa yoginā/</s></l>
<l> <s type="pada">kevalaṃ rājayogāya</s> <s type="pada">haṭhavidyopadiśyate//</s></l> 
</lg>
 
<lg xml:id="hp01_003">
 <l> <s type="pada">bhrāntā bahumatadhvānte</s> <s type="pada">rājayogam ajānatām/</s></l>
<l> <s type="pada">haṭhapradīpikāṃ dhatte</s> <s type="pada">svātmārāmaḥ kṛpākaraḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_004">
 <l> <s type="pada">haṭhavidyāṃ hi matsyendra</s><s type="pada">gorakṣādyā vijānate/</s></l>
<l> <s type="pada">ātmārāmo</s><s type="pada">mahā yogī jānīte tatprasādataḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_005">
 <l> <s type="pada">śrīādināthamatsyendra</s><s type="pada">sāgarānandabhairavāḥ/</s></l>
<l> <s type="pada">coraṃgīmenagorakṣa</s><s type="pada">virūpākṣabileśayāḥ//</s></l>
</lg>
 
<lg xml:id="hp01_006">
 <l> <s type="pada">manthānabhairavo yogī</s> <s type="pada">siddhabuddhaś ca kanthaliḥ/</s></l>
<l> <s type="pada">koraṇṭakaḥ surānandaḥ</s> <s type="pada">siddhapādaś ca karpaṭiḥ//</s> 

</l> 
</lg>
 
<lg xml:id="hp01_007">
 <l> <s type="pada">kaṇeriḥ pūrvapādaś ca</s> <s type="pada">nityanātho nirañjanaḥ/</s></l>
<l> <s type="pada">kapālī bindunāthaś ca</s> <s type="pada">kākacaṇḍīśvarāhvayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_008">
 <l> <s type="pada">allamaḥprabhudevaś ca</s> <s type="pada">_ gacolī ca caṃcaṇiḥ/</s></l>
<l> <s type="pada">vāsukir nāgabodhiś ca</s> <s type="pada">kaṃṭhaḥkāpālikas tathā//</s></l> 
</lg>
 
<lg xml:id="hp01_009">
 <l> <s type="pada">ityādayo mahāsiddhā</s> <s type="pada">haṭhayogaprabhāvataḥ/</s></l>
<l> <s type="pada">khaṇḍayitvā kāladaṇḍaṃ</s> <s type="pada">brahmāṇḍaṃ vicaranti te//</s></l> 
</lg>
 
<lg xml:id="hp01_010">
 <l> <s type="pada">saṃsāratāpataptānāṃ</s> <s type="pada">samāśrayamaṭho haṭhaḥ/</s></l>
<l> <s type="pada">samastayogajagatā</s><s type="pada">m ādhārakamaṭho haṭhaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_011">
 <l> <s type="pada">haṭhavidyā paraṃ gopyā yoginā</s> <s type="pada">siddhiicchatā/</s></l>
<l> <s type="pada">bhaved vīryavatī guptā</s> <s type="pada">nirvīryā sā prakāśitā//</s></l> 
</lg>
 
<lg xml:id="hp01_012">
 <l> <s type="pada">surājye dhārmike deśe</s> <s type="pada">subhikṣe kṣemabhadrade/</s>
</l>
<l> <s type="pada">ekāntamaṭhikāmadhye</s> <s type="pada">sthātavyaṃ haṭhayoginā//</s></l> 
</lg>
 
<lg xml:id="hp01_013">
 <l> <s type="pada">alpadvāram aruṃ&lt;&lt;dha&gt;&gt;gartapiṭ(h)akaṃ nīcāyataṃ</s></l>
<l> <s type="pada">samyaggomayaliptasāndravimalaṃ niḥśeṣabādhojjhitam/</s></l>
<l> <s type="pada">bāhye maṇḍapavedikūparacitaṃ prākārasaṃveṣṭitaṃ</s></l>
<l> <s type="pada">proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_014">
 <l> <s type="pada">evaṃvidhe maṭhe sthitvā</s> <s type="pada">sarvacintāvivarjite/</s></l>
<l> <s type="pada">gurūpadiṣṭamārgeṇa</s> <s type="pada">yogam evaṃ samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp01_015">
 <l> <s type="pada">natyāhāsaḥ prayāsaś ca</s> <s type="pada">prajalponamagrahaḥ/</s></l>
<l> <s type="pada">janasaṃkara laulyaṃ ca</s> <s type="pada">ṣaḍbhir yogo vinaśyati//</s></l> 
</lg>
 
<lg xml:id="hp01_016">
 <l> <s type="pada">utsāhāniścayād dhairyāt</s> <s type="pada">tatvajñānāc ca darśanāt/</s></l>
<l> <s type="pada">janasaṅgaparityāgāt</s><s type="pada">ṣaḍbhir yogaḥ prasidhyati//</s></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp01_016_1">
 <l> <s type="pada">ahiṃsā satyam asteyaṃ</s> <s type="pada">brahmacaryaṃ kṣamā dhṛtiḥ/</s> </l>
<l> <s type="pada"> mitāhāraḥ</s> <s type="pada">śaucaṃ caiva yamā daśa//</s> 
 </l>
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_016_2">
 <l> <s type="pada">tapaḥ saṃtoṣam āstikyaṃ</s> <s type="pada">dānam īśvarapūjanam/</s> </l>
<l> <s type="pada">śravaṇaṃ caiva</s> <s type="pada">hrī matiś ca japo hutam//</s> 
 </l>
</lg>
</div> <div type="altrec">
</div> 
<lg xml:id="hp01_017">
 <l> <s type="pada">haṭhasya prathamāṅgatvād</s> <s type="pada">āsanaṃ pūrvam ucyate/</s></l>
<l> <s type="pada">tat kuryāāsanasthairyam</s><s type="pada">m ārogyaṃ cāṅgapāṭavam//</s>
<anchor xml:id="I17"/></l> 
</lg>
 
<lg xml:id="hp01_018">
 <l> <s type="pada">vasiṣṭhādyaiś ca munibhi</s><s type="pada">r matsyendrādyaiś ca yogibhiḥ/</s></l>
<l> <s type="pada">aṅgīkṛtāny āsanāni</s> <s type="pada">kathyante kānicin mayā//</s><anchor xml:id="v18d"/> 
</l> 
</lg>
 
<lg xml:id="hp01_019">
 <l> <s type="pada">jānūrvoantaraṃ samyak</s><s type="pada">kṛtvā pādatale ubhe/</s></l>
<l> <s type="pada">ṛjukāyaḥ samāsīnaḥ</s> <s type="pada">svastikaṃ tat pracakṣate//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_020">
 <l> <s type="pada">savye dakṣiṇagulphaṃ tu</s> <s type="pada">pṛṣṭhapārśve niyojayet/</s></l>
<l> <s type="pada">dakṣiṇe’pi tathā savyaṃ</s> <s type="pada">gomukhaṃ //</s> 
</l> 
</lg>
 
<lg xml:id="hp01_021">
 <l> <s type="pada">ekaṃ pādatathaikasmin</s><s type="pada">vinasyorasi saṃsthitaḥ/</s></l>
<l> <s type="pada">itarasmiṃs tathā coruṃ</s> <s type="pada">vīrāsanam itīritam//</s></l> 
</lg>
 
<lg xml:id="hp01_022">
 <l> <s type="pada">gudaṃ nabadhya gulphābhyāṃ</s> <s type="pada">vyutkrameṇa samāhitaḥ/</s></l>
<l> <s type="pada">kūrmāsanaṃ bhaved eta</s><s type="pada">d iti yogavido viduḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_023">
 <l> <s type="pada">padmāsanaṃ tusaṃsthāpya</s> <s type="pada">jānūrvor antare karau/</s></l>
<l> <s type="pada">niveśya bhūmau saṃsthāpya</s> <s type="pada">vyomasthaḥ kukkuṭāsanam//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_024">
 <l> <s type="pada">kukkuṭāsanabandhastho</s><s type="pada">dorbhyāṃ saṃbadhya kandaraṃ/</s></l>
<l> <s type="pada">śete kūrmavauttānam</s> <s type="pada">etad uttānapūrvakaṃ//</s></l> 
</lg>
 
<lg xml:id="hp01_025">
 <l> <s type="pada">pādāṅguṣṭhau tu pāṇibhyāṃ</s> <s type="pada">gṛhītvā śravaṇāvadhi/</s></l>
<l> <s type="pada">dhanurākarṣaṇākṛṣṭaṃ</s> <s type="pada">dhanurāsanaīritam//</s></l> 
</lg>
 
<lg xml:id="hp01_026">
 <l> <s type="pada">vāmorumūlārpitadakṣapādaṃ</s></l>
<l> <s type="pada">jānvor bahirveṣṭitavāmadoṣṇi/</s></l>
<l> <s type="pada">pragṛhya tiṣṭhet parivartitāṅgaḥ</s></l>
<l> <s type="pada">śrīmatsyanāthoditam āsanaṃ syāt//</s></l> 
</lg>
 
<lg xml:id="hp01_027">
 <l> <s type="pada">matsyendravīra vīrapracaṇḍaṃ</s>-</l>
<l> <s type="pada">picaṇḍaruk(!)māṃḍanakhaṇḍanāstram/</s></l>
<l> <s type="pada">abhyāsataḥ kuṇḍalinīprabodhaṃ</s></l>
<l> <s type="pada">daṇḍasthiratvaṃ ca dadāti puṃsām//</s></l> 
</lg>
 
<lg xml:id="hp01_028">
 <l> <s type="pada">prasārya pādau bhuvi daṇḍarūpau</s></l>
<l> <s type="pada">dorbhyāṃ padāgradvitayaṃgṛhītvā/</s></l>
<l> <s type="pada">jānūparinyastalalāṭadeśo</s></l>
<l> <s type="pada">vased idaṃ paścimatānabaṃdhaṃ//</s></l> 
</lg>
 
<lg xml:id="hp01_029">
 <l> <s type="pada">iti paścimatānaāsanākhyaṃ</s></l>
<l> <s type="pada">pavanaṃ paścimavāhanaṃ karoti/</s></l>
<l> <s type="pada">udayaṃ jaṭharānalasya kuryā-</s></l>
<l> <s type="pada">d udare kārśyam arogatāṃ ca puṃsām//</s></l> 
</lg>
 
<lg xml:id="hp01_030">
 <l> <s type="pada">dharām avaṣṭabhya karasthalābhyāṃ</s></l>
<l> <s type="pada">tat kūrparasthāpitanābhipārśvaḥ/</s></l>
<l> <s type="pada">uccāsano daṇḍavautthitaḥ khaṃ</s></l>
<l> <s type="pada">māyūram etat pravadanti pīṭham//</s></l> 
</lg>
 
<lg xml:id="hp01_031">
 <l> <s type="pada">harati sakalarogān śvāsa gulmodarādī</s>-</l>
<l> <s type="pada">n abhibhavati ca doṣān āsanaṃ śrīmayūram/</s></l>
<l> <s type="pada">bahukadaśanabhuktaṃ bhasma kuryāiśutraṃ</s></l>
<l> <s type="pada">janayati jaṭharāgraṃ jārayet kālakūṭam//</s></l> 
</lg>
 
<lg xml:id="hp01_032">
 <l> <s type="pada">uttānaṃ śavavad bhūmau</s> <s type="pada">śayanaṃ tu śavāsanam/</s></l>
<l> <s type="pada">sarvāsanaśrāntiharaṃ</s> <s type="pada">cittaviśrāntisādhanam//</s></l> 
</lg>
 
<lg xml:id="hp01_033">
 <l> <s type="pada">caturāśītyāsanāni</s> <s type="pada">sarvāṇi kathitāni tu/</s></l>
<l> <s type="pada">tebhyaś catuṣkam ādāya</s> <s type="pada">sārabhūtaṃ bravīmy aham//</s></l> 
</lg>
 
<lg xml:id="hp01_034">
 <l> <s type="pada">siddhaṃ padmaṃ tathā saiṃhaṃ</s> <s type="pada">bhadraṃ caitac catuṣṭayam/</s></l>
<l> <s type="pada">śreṣṭhaṃ tatra viśeṣeṇa</s> <s type="pada">śreṣṭhaṃ padmāsanaṃ sadā//</s> </l> 
</lg>
 
 
<lg xml:id="hp01_035">
 <l> <s type="pada">yonisthānaka°m aṅghrimūlapuṭakaṃ kṛtvā dhruvaṃ vinyase</s>- </l>
<l> <s type="pada">n meḍhre pādam athaikaekahṛdayedhṛtvā samaṃ vigraham/</s></l>
<l> <s type="pada">sthāṇuḥ saṃyamitendriyo’caladṛśā paśyed bhruvor antaraṃ</s> </l>
<l> <s type="pada">etanmokṣakapāṭabhedajananaṃ siddhāsanaṃ procyate//</s></l> 
</lg>
 
 
<lg xml:id="hp01_036">
 <l> <s type="pada">meḍhrād upari vinyasya</s> <s type="pada">savyagulphaṃ tathopari/</s></l>
<l> <s type="pada">gulphāntaraṃ ca nikṣipya</s> <s type="pada">siddhāsanam idaṃ bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp01_037">
 <l> <s type="pada">etat siddhāsanaṃ prāhu</s><s type="pada">r anye vajrāsanaṃ viduḥ/</s></l>
<l> <s type="pada">muktāsanaṃvadanty eke</s> <s type="pada">prāhur guptāsanaṃ pare//</s></l>
</lg>
 
<lg xml:id="hp01_038">
 <l> <s type="pada">yameṣv iva mitāhāra</s><s type="pada">ahiṃsāniyameṣv iva/</s></l>
<l> <s type="pada">mukhyaṃ sarvāsaneṣv ekaṃ</s> <s type="pada">siddhāḥ siddhāsanaṃ viduḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_039">
 <l> <s type="pada">caturāśītipīṭheṣu</s> <s type="pada">siddham eva sadābhyaset/</s></l>
<l> <s type="pada">dvāsaptatisahasreṣu</s> <s type="pada">suṣumṇā iva nāḍiṣu//</s></l> 
</lg>
 
<lg xml:id="hp01_040">
 <l> <s type="pada">ātmadhyāyī mitāhāro</s> <s type="pada">yāvad dvādaśavatsaram/</s></l>
<l> <s type="pada">sadā siddhāsanā°bhyāsā</s><s type="pada"> yogī niṣpattim āpnuyāt/</s></l>
<l> <s type="pada">samastair bahubhiḥ pīṭhaiḥ</s> <s type="pada">yadāt siddhāsane sati//</s></l> 
</lg>
 
<lg xml:id="hp01_041">
 <l> <s type="pada">prāṇānile sāvadhānaṃ</s> <s type="pada">baṃdhaḥ kevalakumbhakaḥ/</s></l>
<l> <s type="pada">utpadyate nirāyāsā</s><s type="pada">t svayam evonmanī yathā//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_042">
 <l> <s type="pada">sminn eva </s> <s type="pada">baddhe siddhāsane sadā/</s> 
</l>
<l> <s type="pada">bandhatrayam anāyāsāt</s> <s type="pada">svayam evopajāyate//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_043">
 <l> <s type="pada">nāsanaṃ siddhasadanaṃ</s> <s type="pada">na kumbhaḥ kevalopamaḥ/</s></l>
<l> <s type="pada">na khecarīsamā mudrā</s> <s type="pada">na nādasadṛśo layaḥ//</s> 

</l> 
</lg>
 
 
<lg xml:id="hp01_044">
 <l> <s type="pada">vāmorūpari dakṣiṇaṃ ca caraṇaṃ saṃsthāpya vāmaṃ tathā</s></l>
<l> <s type="pada">yāmyorūpari paścimena vidhinā dhṛtvā karābhyāṃ dṛḍham/</s></l>
<l> <s type="pada">aṅguṣṭhau hṛdaye nidhāya cibukaṃ nāsāgram ālokaye-</s></l>
<l> <s type="pada">d etad vyādhivināśakāri yamināṃ padmāsanaṃ procyate//</s></l> 
</lg>
 
 
<lg xml:id="hp01_045">
 <l> <s type="pada">uttānau caraṇau kṛtvā</s> <s type="pada">ūrusaṃsthau prayatnataḥ/</s></l>
<l> <s type="pada">ūrumadhye tathottānau</s> <s type="pada">pāṇī kṛtvā tato dṛśau//</s></l> 
</lg>
 
<lg xml:id="hp01_046">
 <l> <s type="pada">nāsāgre vinyaserājā</s><s type="pada">dantamūlaṃ tu jihvayā/</s></l>
<l> <s type="pada">uttabhya cibukaṃ vakṣa</s><s type="pada">utthāyotpavanaṃ śanaiḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp01_047">
 <l> <s type="pada">idaṃ padmāsanaṃ proktaṃ</s> <s type="pada">sarvavyādhivināśanam/</s></l>
<l> <s type="pada">durlabhaṃ yena kenāpi</s> <s type="pada">labhyate dhīmatā bhuvi//</s></l> 
</lg>
 
 
<lg xml:id="hp01_048">
 <l> <s type="pada">kṛtvā saṃpuṭitau karau dṛḍhataraṃ baddhvā tu padmāsanaṃ</s></l>
<l> <s type="pada">gāḍhaṃ vakṣasi saṃnidhāya cibukaṃ dhyānaṃ ca tac cetasi/</s></l>
<l> <s type="pada">vāraṃ vāram apānam ūrdhvam anilaṃ protsārayan pūritaṃ</s></l>
<l> <s type="pada">muñcan prāṇam upaiti bodham atulaṃ śaktiprabhāvān naraḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_049">
 <l> <s type="pada">padmāsanasthito yogī</s> <s type="pada">nāḍīdvāreṣu pūrayet/</s></l>
<l> <s type="pada">māruto mriyate yas tu</s><s type="pada">sa mukto nātra saṃśayaḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp01_050">
 <l> <s type="pada">gulphau ca vṛṣaṇasyādhaḥ</s> <s type="pada">sīvinyāḥ pārśvayoḥ kṣipet/</s><anchor xml:id="VuI50"/></l>
<l> <s type="pada">dakṣiṇe savyagulphaṃ tu</s> <s type="pada">dakṣagulphaṃ tu savyake//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp01_051">
 <l> <s type="pada">hastau tu jānvoḥ saṃsthāpya</s> <s type="pada">svāṅgulī saṃprasārya ca/</s></l>
<l> <s type="pada">vyāttavaktrau nirīkṣeta</s> <s type="pada">nāsāgraṃ susamāhitaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_052">
 <l> <s type="pada">siṃhāsanaṃ bhaved eta</s><s type="pada">t pūjitaṃ yogibhiḥ sadā/</s></l>
<l> <s type="pada">bandhatritayasaṃdhāyi</s> <s type="pada">sevate cāsanottamam//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp01_053">
 <l> <s type="pada">gulphau ca vṛṣaṇasyādhaḥ</s> <s type="pada"> pārśvayoḥ kṣipet/</s> 
 
</l>
<l> <hi rend="grey"><s type="pada">savyagulphaṃ tathā savye</s> <s type="pada">gulphaṃ  dakṣiṇe/</s> 
 
</hi></l>
<l> <s type="pada">pārśvaupādau ca pāṇibhyāṃ</s> <s type="pada">dṛḍhaṃ baddhvā tu niścalaṃ//</s></l> 
</lg>
 
<lg xml:id="hp01_054">
 <l> <s type="pada">bhadrāsanaṃ bhaved etat</s> <s type="pada">sarvavyādhivināśanam/</s> </l>
<l> <s type="pada">gorakṣāsanam ity āhu</s><s type="pada">r idaṃ vai siddhayoginaḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp01_055">
 <l> <s type="pada">pavanāsanabandheṣu</s> <s type="pada">yogeṃdro vijitaśramaḥ/</s></l>
<l> <s type="pada">athābhyasenāḍi/ḍī°ṣu</s> <s type="pada">mudrādipavanakriyāḥ//</s></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp01_055_1">
 <l> <s type="pada">kriyāyuktasya siddhiḥ syād</s><s type="pada">akriyasya kathaṃ bhavet/</s>  </l>
<l> <s type="pada">na śāstrapāṭhamātreṇa</s> <s type="pada">yogasiddhiḥ prajāyate//</s> 

 
 </l>
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_055_2">
 <l> <s type="pada">na  </s> <s type="pada">kāraṇaṃ  /</s> </l>
<l> <s type="pada">kriyaiva kāraṇaṃ </s> <s type="pada">satyan na saṃśayaḥ/</s> </l>
<l> <s type="pada"/> <s type="pada">  //</s> 
 
 </l>
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_055_3">
 <l> <s type="pada">  svacche</s> <s type="pada"> viśvabudbudaḥ/</s> </l>
<l> <s type="pada">pralīna udito veti</s> <s type="pada">vikalpapaṭalaḥ kutaḥ//</s> 
 </l>
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_055_4">
 <l> <s type="pada">śruti svagurupratītiḥ</s> </l>
<l> <s type="pada">svātmapratītir manaso/</s> </l>
<l> <s type="pada">etāni sarvāṇi </s> </l>
<l> <s type="pada">matāni dhīrair iha sādhanāni//</s> 
 </l>
</lg>
</div> 
<lg xml:id="hp01_056">
 <l> <s type="pada">āsanaṃ kumbhakaṃ citra</s><s type="pada">mudrākhyaṃ karaṇaṃ tathā/</s></l>
<l> <s type="pada">atha nādānusandhāna</s><s type="pada">m abhyāsānukramo haṭho//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_057">
 <l> <s type="pada">brahmacārī mitāhārī</s> <s type="pada">yogī yogaparāyaṇaḥ/</s></l>
<l> <s type="pada">abdād ūrdhvaṃ bhavet siddho</s> <s type="pada">nātra kāryā vicāraṇā//</s></l> 
</lg>
 
<lg xml:id="hp01_058">
 <l> <s type="pada">susnigdhamadhurāhāra</s><s type="pada">ś caturthāṃśavivarjitaḥ/</s></l>
<l> <s type="pada">bhujyate śivasaṃprītyai</s> <s type="pada">mitāhāraḥ sa ucyate//</s></l> 
</lg>
 
<lg xml:id="hp01_059">
 <l> <s type="pada">kaṭvamlatīkṣṇalavaṇoṣṇaharītaśāka</s>-</l>
<l> <s type="pada">sauvīratailatilasarṣapamatsyamadyāḥ/</s></l>
<l> <s type="pada">ājādimāṃsadadhitakrakulatthakela-</s></l>
<l> <s type="pada">piṇyākahiṅgulaśanādyam apathyam āhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_060">
 <l> <s type="pada">bhojanam ahitaṃ vidyāpunary uṣṇīkṛtaṃ rūkṣam/</s></l>
<l> <s type="pada">atilavaṇādiprayuktaṃkadaśanaśākotkaṭaṃ duṣṭam//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp01_061">
 <l> 
<s type="pada">varjayed durjanaprāntaṃ</s> <s type="pada">vahnistrīpathasevanam/</s></l>
<l> <s type="pada">prātaḥsnānopavāsādi</s> <s type="pada">kāyakleśavidhiṃ tathā//</s></l> 
</lg>
 
<lg xml:id="hp01_062">
 <l> <s type="pada">godhūmaśāliyavapiṣṭakaśobhanānnaṃ</s></l>
<l> <s type="pada">kṣīrājyakhaṇḍanavanītasudhāmadhūni/</s></l>
<l> <s type="pada">śuṇṭhīpaṭolikaphalādika pañcaśākaṃ</s> </l>
<l> <s type="pada">mudgādi divyam udakaṃhri (?) yamīndrapathyam//</s></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp01_062_1">
 <l><s type="pada">sarvaśākamacākṣuṣyaṃ</s> <s type="pada"> śākapañcakaṃ</s>/</l>
<l> <s type="pada">jīvantī vāstu matsyākṣī</s> <s type="pada">meghanādaḥ punarnavā</s>// 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_062_2">
 <l> <s type="pada"> ca </s> <s type="pada"> ca punarnavā</s>/</l>
<l> <s type="pada"/> pañcaite <s type="pada"> <texteng>small (sic)</texteng>//</s> 
</l>
</lg>
</div> 
<lg xml:id="hp01_063">
 <l> <s type="pada">miṣṭaṃsumadhuraṃ snigdhaṃ gavyaṃ dhātuprapoṣaṇam/</s></l>
<l> <s type="pada">mano’bhilaṣitaṃ bhojyaṃ yogī bhojanam ācaret//</s></l> 
</lg>
 
<lg xml:id="hp01_064">
 <l> <s type="pada">yuvā vṛddho’tivṛddho vā</s> <s type="pada">vyādhito durbalo’pi vā/</s></l>
<l> <s type="pada">abhyāsāt siddhim āpnoti</s> <s type="pada">sarvayogeṣv atandritaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_065">
 <l> <s type="pada">pīṭhāni kumbhakāś citrā</s> <s type="pada">divyāni karaṇāni ca/</s></l>
<l> <s type="pada">sarvo’pi ca haṭhābhyā</s> <s type="pada">rājayogaphalāvadhi//</s></l> 
</lg>
 <div type="colophon" xml:id="hp01_col"><p> iti svātmārāmayogīndraviracitāyāṃ haṭhapradīpikāyāṃ  prathamopadeśaḥ// </p></div> 
