	<l> </l> 
	<l> </l> 
      </lg> 
      <lg xml:id="v2extrafter19"> 
	<l> </l> 
	<l/> 
      </lg> 
      <lg xml:id="hp1-20"> 
	<l>savye dakṣiṇagulphe tu pṛṣṭhapārśve niyojayet /</l>
	<l>dakṣiṇetu tathā savyaṃ gomukhe gomukhaṃ yathā//</l> 
      </lg> 
