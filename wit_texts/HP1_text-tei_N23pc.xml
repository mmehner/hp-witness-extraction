<lg xml:id="hp01_001">
 <l> <s type="pada">śrīādināthāya namo’stu tasmai</s></l>
<l> <s type="pada">yenopadiṣṭā haṭhayogavidyā/</s></l>
<l> <s type="pada">virājate pronnatarājasaudha</s>-</l>
<l> <s type="pada">m āroḍhum icchor adhirohiṇī ca//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_002">
 <l> <s type="pada">praṇamya śrīguruṃ nāthaṃ</s> <s type="pada">svātmārāmeṇa yoginā/</s></l>
<l> <s type="pada">kevalaṃ rājayogāya</s> <s type="pada">haṭhavidyopadiśyate//</s></l> 
</lg>
 
<lg xml:id="hp01_003">
 <l> <s type="pada">bhrāntyā bahumatadhvāntai</s> <s type="pada">rājamārgam ajānatām/</s></l>
<l> <s type="pada">haṭhapradīpikāṃ dhatte</s> <s type="pada">svātmārame kṛpākaraḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_004">
 <l> <s type="pada">haṭhavidyā hi tachaṃdra</s><s type="pada">gorakṣādyā vijānate/</s></l>
<l> <s type="pada">svātmārāmo</s><s type="pada">’thavā yogī jānīte tatprasādataḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_005">
 <l> <s type="pada">śrīādināthamatsyendra</s><s type="pada">śābarānandabhairavāḥ/</s></l>
<l> <s type="pada">cauraṅgīmīnagorakṣa</s><s type="pada">virūpākṣabileśayāḥ//</s></l>
</lg>
 
<lg xml:id="hp01_006">
 <l> <s type="pada">manthānabhairavā yogī</s> <s type="pada">siddhabuddhaś ca kanthaḍīḥ/</s></l>
<l> <s type="pada">koraṇṭakaḥ surānandaḥ</s> <s type="pada">siddhapādaś ca carpaṭiḥ//</s> 

</l> 
</lg>
 
<lg xml:id="hp01_007">
 <l> <s type="pada">kaṇerī pūjyapādaś ca</s> <s type="pada">nityanātho nirañjanaḥ/</s></l>
<l> <s type="pada">kapālī bindunāthaś ca</s> <s type="pada">kākacaṇḍīśvarāhvayaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_008">
 <l> <s type="pada">allasaḥprabhudevaś ca</s> <s type="pada">ghoḍācūlī ca tīṭiṇiḥ/</s></l>
<l> <s type="pada">bhānukin nāgabodhaś ca</s> <s type="pada">khaṃḍaṃkāpālikas tathā//</s></l> 
</lg>
 
<lg xml:id="hp01_009">
 <l> <s type="pada">ityādayo mahāsiddhā</s> <s type="pada">haṭhayogaprasādataḥ/</s></l>
<l> <s type="pada">khaṇḍayitvā kāladaṇḍaṃ</s> <s type="pada">brahmāṇḍe vicaranti te//</s></l> 
</lg>
 
<lg xml:id="hp01_010">
 <l> <s type="pada">saṃsāratāpataptānāṃ</s> <s type="pada">samāśrayamaṭho haṭhaḥ/</s></l>
<l> <s type="pada">aśeṣayogajagatā</s><s type="pada">m ādhārakamaṭho haṭhaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_011">
 <l> <s type="pada">haṭhavidyā paraṃ gopyā yogināṃ</s> <s type="pada">siddhim icchatām/</s></l>
<l> <s type="pada">bhaved vīryavatī guptā</s> <s type="pada">nirvīryā tu prakāśitā//</s></l> 
</lg>
 
<lg xml:id="hp01_012">
 <l> <s type="pada">surājye dhārmike deśe</s> <s type="pada">subhikṣe nirupadrave/</s>
</l>
<l> <s type="pada">ekāntamaṭhikāmadhye</s> <s type="pada">sthātavyaṃ haṭhayoginā//</s></l> 
</lg>
 
<lg xml:id="hp01_013">
 <l> <s type="pada">ākalpadvā&lt;&lt;ra&gt;&gt;raṃdhragartapiṭhikaṃ naṃcāyataṃ</s></l>
<l> <s type="pada">samyaggomayasāndraliptam amalaṃ niḥśeṣajaṃbhūdgitaṃ/</s></l>
<l> <s type="pada">bāhye maṇḍapavedikūparuciraṃ prākārasaṃveṣṭitaṃ</s></l>
<l> <s type="pada">proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_014">
 <l> <s type="pada">evaṃvidhe maṭhe sthitvā</s> <s type="pada">sarvacintāvivarjitaḥ/</s></l>
<l> <s type="pada">gurūpadiṣṭamārgeṇa</s> <s type="pada">yogam eva samabhyaset//</s></l> 
</lg>
 
<lg xml:id="hp01_015">
 <l> <s type="pada">atyāhāraḥ pravāsaś ca</s> <s type="pada">prajalpo’niyamagrahaḥ/</s></l>
<l> <s type="pada">janasaṅgaś ca laulyaṃ ca</s> <s type="pada">ṣaḍbhiyogā vinaśyati//</s></l> 
</lg>
 
<lg xml:id="hp01_016">
 <l> <s type="pada">utsāhāt sāhasād dhairyāt</s> <s type="pada">tatvajñānāc ca niścayāt/</s></l>
<l> <s type="pada">nijasaṅgaparityāgāt</s><s type="pada">ṣaḍbhir yogaḥ prasidhyati//</s></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp01_016_1">
 <l> <s type="pada">ahiṃsā satyam asteyaṃ</s> <s type="pada">brahmacaryaṃ kṣamā dhṛtiḥ/</s> </l>
<l> <s type="pada"> mitāhāraḥ</s> <s type="pada">śaucaṃ caiva yamā daśa//</s> 
 </l>
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_016_2">
 <l> <s type="pada">tapaḥ saṃtoṣam āstikyaṃ</s> <s type="pada">dānam īśvarapūjanam/</s> </l>
<l> <s type="pada">śravaṇaṃ caiva</s> <s type="pada">hrī matiś ca japo hutam//</s> 
 </l>
</lg>
</div> <div type="altrec">
</div> 
<lg xml:id="hp01_017">
 <l> <s type="pada">haṭhasya prathamāṅgatvād</s> <s type="pada">āsanaṃ pūrvam ucyate/</s></l>
<l> <s type="pada">tat kuryād āsanaṃ sthairya</s><s type="pada">m ārogyaṃ cāṅgalāghavaṃ//</s>
<anchor xml:id="I17"/></l> 
</lg>
 
<lg xml:id="hp01_018">
 <l> <s type="pada">vasiṣṭhādyaiś ca munibhi</s><s type="pada">r matsyendrādyaiś ca yogibhiḥ/</s></l>
<l> <s type="pada">aṅgīkṛtāny āsanāni</s> <s type="pada">kathyante kānicin mayā//</s><anchor xml:id="v18d"/> 
</l> 
</lg>
 
<lg xml:id="hp01_019">
 <l> <s type="pada">jānūrvoantaraṃ samyak</s><s type="pada">kṛtvā pādatale śubhe/</s></l>
<l> <s type="pada">ṛjukāyaḥ samāsīnaḥ</s> <s type="pada">svastikaṃ cat pracakṣate//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_020">
 <l> <s type="pada">savye dakṣiṇagulphaṃ tu</s> <s type="pada">pṛṣṭhapārśve niyojayet/</s></l>
<l> <s type="pada">dakṣiṇeca tathā savyaṃ</s> <s type="pada">gomukhaṃ gomukhākṛtiḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_021">
 <l> <s type="pada">ekaṃ pādatathaikasmin</s><s type="pada">vinyased ūru °ṇi sthitaṃ/</s></l>
<l> <s type="pada">itarasmiṃs tathā coruṃ</s> <s type="pada">vīrāsanam itīritam//</s></l> 
</lg>
 
<lg xml:id="hp01_022">
 <l> <s type="pada">gudaṃ nirudhya gulphābhyāṃ</s> <s type="pada">vyutkrameṇa samāhitaḥ/</s></l>
<l> <s type="pada">yogāsanaṃ bhaved eta</s><s type="pada">d iti yogavido viduḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_023">
 <l> <s type="pada">padmāsanaṃ susaṃsthāpya</s> <s type="pada">jānūrvor antare karau/</s></l>
<l> <s type="pada">niveśya bhūmau saṃsthāpya</s> <s type="pada">vyomasthaṃ kukkuṭāsanam//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_024">
 <l> <s type="pada">kukkuṭāsanabandhastho</s><s type="pada">dorbhyāṃ saṃveṣṭa kandharām/</s></l>
<l> <s type="pada">sthitaḥ kūrmavad uttāna</s> <s type="pada">etad uttānakūrmakam//</s></l> 
</lg>
 
<lg xml:id="hp01_025">
 <l> <s type="pada">pādāṅguṣṭhau tu pāṇibhyāṃ</s> <s type="pada">gṛhītvā śravaṇāvadhi/</s></l>
<l> <s type="pada">dhanurākarṣaṇāt kṛṣṭaṃ</s> <s type="pada">dhanurāsanam ucyate//</s></l> 
</lg>
 
<lg xml:id="hp01_026">
 <l> <s type="pada">vāmorumūlārpitadakṣapādaṃ</s></l>
<l> <s type="pada">jānobahisaṃṣṭhitadakṣadorbhyāṃ/</s></l>
<l> <s type="pada">pragṛhya tiṣṭhet parivartitāṅgaḥ</s></l>
<l> <s type="pada">śrīmatsyanāthoditam āsanaṃ syāt//</s></l> 
</lg>
 
<lg xml:id="hp01_027">
 <l> <s type="pada">matsyendrapīṭhaṃ jaṭharapravuddhaṃ</s>-</l>
<l> <s type="pada">pracaṇḍarugmaṃḍanakhaṇḍanāmaṃ/</s></l>
<l> <s type="pada">abhyāsataḥ kuṇḍalinīprabodhaṃ</s></l>
<l> <s type="pada">daṇḍasthiratvaṃ pradadāti puṃsām//</s></l> 
</lg>
 
<lg xml:id="hp01_028">
 <l> <s type="pada">prasārya pādau bhuvi daṇḍarūpau</s></l>
<l> <s type="pada">dorbhyāṃ padāgradvitayaṃgṛhītvā/</s></l>
<l> <s type="pada">jānūparinyastalalāṭadeśo</s></l>
<l> <s type="pada">vased idaṃ paścimatānam āhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_029">
 <l> <s type="pada">iti paścimatānaāyanaṃ</s></l>
<l> <s type="pada">pavanaṃ paścimavāhinaṃ karoti/</s></l>
<l> <s type="pada">udayaṃ jaṭharānalasya kuryā-</s></l>
<l> <s type="pada">d udare kāryamalogatāṃ ca puṃsām//</s></l> 
</lg>
 
<lg xml:id="hp01_030">
 <l> <s type="pada">dharām avaṣṭabhya karadvayena</s></l>
<l> <s type="pada">takurparasthāpitanābhipārśvaḥ/</s></l>
<l> <s type="pada">uccāsano daṇḍavad utthitaḥ khe</s></l>
<l> <s type="pada">māyūram etat pravadanti pīṭham//</s></l> 
</lg>
 
<lg xml:id="hp01_031">
 <l> <s type="pada">harati sakalarogān āśu gulphodarādī</s>-</l>
<l> <s type="pada">abhavati ca doṣān āsanaṃ śrīmayūram/</s></l>
<l> <s type="pada">bahukadaśanabhuktaṃ bhasma kuryād aśeṣaṃ</s></l>
<l> <s type="pada">janayati jaṭharāgniṃ jārayet kālakūṭam//</s></l> 
</lg>
 
<lg xml:id="hp01_032">
 <l> <s type="pada">uttāna śavavad bhūmau</s> <s type="pada">śayanaṃ tu śavāsanam/</s></l>
<l> <s type="pada">sarvāsanaśrāntiharaṃ</s> <s type="pada">cittaviśrāntisādhanam//</s></l> 
</lg>
 
<lg xml:id="hp01_033">
 <l> <s type="pada">caturāśītyāsanāni</s> <s type="pada">śivena kathitāni vai/</s></l>
<l> <s type="pada">tebhyaś catuṣkam ādāya</s> <s type="pada">sārabhūtaṃ bravīmy aham//</s></l> 
</lg>
 
<lg xml:id="hp01_034">
 <l> <s type="pada">siddhaṃ padmaṃ tathā siṃhaṃ</s> <s type="pada">bhadraṃ ceti catuṣṭayam/</s></l>
<l> <s type="pada">śreṣṭhaṃ tatrāpi ca sakhe</s> <s type="pada">tiṣṭha siddhāsane sadā//</s> </l> 
</lg>
 
 
<lg xml:id="hp01_035">
 <l> <s type="pada">yonidvārakam aṅghrimūlaghaṭitaṃ kṛtvā dṛḍhaṃ vinyase</s>- </l>
<l> <s type="pada">medhre pādam athaikaekahṛdayedhṛtvā samaṃ vigraham/</s></l>
<l> <s type="pada">sthāṇuḥ saṃyamitendriyo’caladṛśā paśyad bhruvor antaraṃ</s> </l>
<l> <s type="pada">caitannmokṣakapāṭabhedajanakaṃ siddhāsanaṃ procyate//</s></l> 
</lg>
 
 
<lg xml:id="hp01_036">
 <l> <s type="pada">meḍhrād upari vinyasya</s> <s type="pada">savyagulphaṃ tathopari/</s></l>
<l> <s type="pada">gulphāntaraṃ ca nikṣipya</s> <s type="pada">siddhāsanam idaṃ bhavet//</s></l> 
</lg>
 
 
<lg xml:id="hp01_037">
 <l> <s type="pada">etat siddhāsanaṃ prāhu</s><s type="pada">r anye vajrāsanaṃ viduḥ/</s></l>
<l> <s type="pada">muktāsanaṃvadanty eke</s> <s type="pada">prāhur guptāsanaṃ pare//</s></l>
</lg>
 
<lg xml:id="hp01_038">
 <l> <s type="pada">yameṣv iva mitāhāra</s><s type="pada">nahiṃsāṃniyameṣv iva/</s></l>
<l> <s type="pada">mukhyaṃ sarvāsaneṣv ekaṃ</s> <s type="pada">siddhāḥ siddhāsanaṃ viduḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_039">
 <l> <s type="pada">caturāśītipīṭheṣu</s> <s type="pada">siddham eva sadābhyaset/</s></l>
<l> <s type="pada">dvāsaptatisahasreṣu</s> <s type="pada">sukhumṇām iva nāḍiṣu//</s></l> 
</lg>
 
<lg xml:id="hp01_040">
 <l> <s type="pada">ātmadhyāyī mitāhārī</s> <s type="pada">yāvad dvādaśavatsaram/</s></l>
<l> <s type="pada">sadā siddhāsanābhyāsā</s><s type="pada">d yogī niṣpattim āpnuyāt/</s></l>
<l> <s type="pada">śramadair bahubhiḥ pīṭhaiḥ</s> <s type="pada">kiṃ syāt siddhāsane sthite//</s></l> 
</lg>
 
<lg xml:id="hp01_041">
 <l> <s type="pada">prāṇānile sāvadhānaṃ</s> <s type="pada">baddhvai kevalakumbhataḥ/</s></l>
<l> <s type="pada">utpadyate nirāyāsā</s><s type="pada">t svayam evonmanī yathā//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_042">
 <l> <s type="pada">athaikasminn eva dṛdhe</s> <s type="pada">baddha siddhāsane tadā/</s> 
</l>
<l> <s type="pada">bandhatrayam anāyāsāt</s> <s type="pada">svayam evopajāyate//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_043">
 <l> <s type="pada">nāsanaṃ siddhasadṛśaṃ</s> <s type="pada">na kumbhaḥ kevalopamaḥ/</s></l>
<l> <s type="pada">na khecarīsamā mudrā</s> <s type="pada">na nādasadṛśo layaḥ//</s> 

</l> 
</lg>
 
 
<lg xml:id="hp01_044">
 <l> <s type="pada">vāmorūpari dakṣiṇaṃ hi caraṇaṃ saṃsthāpya vāmaṃ tathā</s></l>
<l> <s type="pada">dakṣorūpari paścimena vidhinā dhṛtvā karābhyāṃ dṛḍham/</s></l>
<l> <s type="pada">aṅguṣṭhau hṛdaye nidhāya cibukaṃ nāsāgram ālokaye-</s></l>
<l> <s type="pada">d etad vyādhivināśam āśu janakaṃ padmāsanaṃ procyate//</s></l> 
</lg>
 
 
<lg xml:id="hp01_045">
 <l> <s type="pada">uttānau caraṇau kṛtvā</s> <s type="pada">ūrusaṃsthau prayatnataḥ/</s></l>
<l> <s type="pada">ūrumadhye tathottānau</s> <s type="pada">pāṇī kṛtvā tato dṛśau//</s></l> 
</lg>
 
<lg xml:id="hp01_046">
 <l> <s type="pada">nāsāgre vinyased rāja</s><s type="pada">dantamūlaṃ tu jihvayā/</s></l>
<l> <s type="pada">uttabhya cibukaṃ vakṣa</s><s type="pada">utthāpyapavanaṃ śanaiḥ//</s>
</l> 
</lg>
 
<lg xml:id="hp01_047">
 <l> <s type="pada">idaṃ padmāsanaṃ proktaṃ</s> <s type="pada">sarvavyādhivināśanam/</s></l>
<l> <s type="pada">durlabhaṃ yena kenāpi</s> <s type="pada">dhīmatā labhyate bhuvi//</s></l> 
</lg>
 
 
<lg xml:id="hp01_048">
 <l> <s type="pada">kṛtvā saṃpuṭitau  dṛḍhataraṃ baddhvā tu padmāsanaṃ</s></l>
<l> <s type="pada">gāḍhaṃ vakṣasi saṃnidhāya cibukaṃ dhyānaṃ ca tac cetasi/</s></l>
<l> <s type="pada">vāraṃ vāram apānam ūrdhvam anilaṃ proccārayet pūritaṃ</s></l>
<l> <s type="pada">muñcan prāṇam upaiti bodham atulaṃ śaktiprabhāvān naraḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_049">
 <l> <s type="pada">padmāsanasthito yogī</s> <s type="pada">nāḍīdvāreṣu pūrayet/</s></l>
<l> <s type="pada">mārutaṃ niyataṃ yas tu</s><s type="pada">sa mukto nātra saṃśayaḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp01_050">
 <l> <s type="pada">gulphau ca vṛṣaṇasyādhaḥ</s> <s type="pada">sīvanyāḥ pārśvayoḥ kṣipet/</s><anchor xml:id="VuI50"/></l>
<l> <s type="pada">dakṣiṇe savyagulphaṃ tu</s> <s type="pada">dakṣagulphaṃ tu savyake//</s> 
 
</l> 
</lg>
 
<lg xml:id="hp01_051">
 <l> <s type="pada">hastau ca jānvoḥ saṃsthāpya</s> <s type="pada">svāṅgulī yaṃ prasārmya ca/</s></l>
<l> <s type="pada">vyāttavaktro nirīkṣeya</s> <s type="pada">nāsāgra stusamāhitaḥ//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_052">
 <l> <s type="pada">siṃhāsanaṃ bhaveevaṃ</s><s type="pada"> pūjitaṃ yogibhiḥ sadā/</s></l>
<l> <s type="pada">bandhatrayasyasandhānaṃ</s> <s type="pada">kurute cāsanottamam//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp01_053">
 <l> <s type="pada">gulphau ca vṛṣaṇasyādhaḥ</s> <s type="pada">sīvanyāḥ pārśvayoḥ kṣipet/</s> 
 
</l>
<l> <hi rend="grey"><s type="pada">savyagulphaṃ tathā savye</s> <s type="pada">dakṣagulphaṃ tu dakṣiṇe/</s> 
 
</hi></l>
<l> <s type="pada">pārśvapādau ca pāṇibhyāṃ</s> <s type="pada">dṛḍhaṃ baddhvā stu niścalaṃ//</s></l> 
</lg>
 
<lg xml:id="hp01_054">
 <l> <s type="pada">bhadrāsanaṃ bhaved etat</s> <s type="pada">sarvavyādhivināśanam/</s> </l>
<l> <s type="pada">gorakṣāsanam ity āhu</s><s type="pada">r ievaṃ vai siddhayoginaḥ//</s></l> 
</lg>
 
 
<lg xml:id="hp01_055">
 <l> <s type="pada">evam āsanabandheṣu</s> <s type="pada">yogīndro vijitaḥ śramaḥ/</s></l>
<l> <s type="pada">athābhyasen nāḍiśuddhi</s> <s type="pada">mudrādipavanakriyā//</s></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp01_055_1">
 <l> <s type="pada">kriyāyuktasya siddhiḥ syād</s><s type="pada">akriyasya kathaṃ bhavet/</s>  </l>
<l> <s type="pada">na śāstrapāṭhamātreṇa</s> <s type="pada">yogasiddhiḥ prajāyate//</s> 

 
 </l>
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_055_2">
 <l> <s type="pada">na  </s> <s type="pada">kāraṇaṃ  /</s> </l>
<l> <s type="pada">kriyaiva kāraṇaṃ </s> <s type="pada">satyan na saṃśayaḥ/</s> </l>
<l> <s type="pada"/> <s type="pada">  //</s> 
 
 </l>
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_055_3">
 <l> <s type="pada">  svacche</s> <s type="pada"> viśvabudbudaḥ/</s> </l>
<l> <s type="pada">pralīna udito veti</s> <s type="pada">vikalpapaṭalaḥ kutaḥ//</s> 
 </l>
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_055_4">
 <l> <s type="pada">śruti svagurupratītiḥ</s> </l>
<l> <s type="pada">svātmapratītir manaso/</s> </l>
<l> <s type="pada">etāni sarvāṇi </s> </l>
<l> <s type="pada">matāni dhīrair iha sādhanāni//</s> 
 </l>
</lg>
</div> 
<lg xml:id="hp01_056">
 <l> <s type="pada">āsanaṃ kumbhakaṃ citra</s><s type="pada">mudrāśyaṃ karaṇaṃ tathā/</s></l>
<l> <s type="pada">atha nādānusandhāna</s><s type="pada">m abhyāsānukramo haṭhe//</s> 
</l> 
</lg>
 
<lg xml:id="hp01_057">
 <l> <s type="pada">brahmacārī mitāhārī</s> <s type="pada">tyāgī yogaparāyaṇaḥ/</s></l>
<l> <s type="pada">abdād ūrdhvaṃ bhavet siddho</s> <s type="pada">nātra kāryā vicāraṇā//</s></l> 
</lg>
 
<lg xml:id="hp01_058">
 <l> <s type="pada">susnigdhamadhurāhāra</s><s type="pada">caturthāśāvivarjitaḥ/</s></l>
<l> <s type="pada">bhujyate śivasaṃprītyai</s> <s type="pada">mitāhārī sa ucyate//</s></l> 
</lg>
 
<lg xml:id="hp01_059">
 <l> <s type="pada">kaṭvamlatīkṣṇalavaṇoṣṇaharitaśāka</s>-</l>
<l> <s type="pada">sauvīratailasarṣapamadyamatsyān/</s></l>
<l> <s type="pada">ajādimāṃsadadhitakrakulatthakāla-</s></l>
<l> <s type="pada">hiṅgulaśunādyam apathyam āhuḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_060">
 <l> <s type="pada">bhojanam ahitaṃ vidyāt punar apy uṣṇīkṛtaṃ rūkṣam/</s></l>
<l> <s type="pada">atīlavaṇāmlapṛktaṃkadaśanaśākokṣadaṃ duṣṭam//</s> 
</l> 
</lg>
 
 
<lg xml:id="hp01_061">
 <l> 
<s type="pada">varjaye durjanaprītiṃ</s> <s type="pada">vahnistrīpathasevanam/</s></l>
<l> <s type="pada">prātaḥsnānopavāsādi</s> <s type="pada">kāyakleśavidhiṃ tathā//</s></l> 
</lg>
 
<lg xml:id="hp01_062">
 <l> <s type="pada">godhūmaśāliyavamāṣikaṃśobhanānna</s></l>
<l> <s type="pada">kṣīrājyamaṇḍanavanītasitāmadhūni/</s></l>
<l> <s type="pada">śuṇṭhīpaṭolakaphalādika pañcaśākaṃ</s> </l>
<l> <s type="pada">mudgādi divyam udakaṃca yatīndrapathyam//</s></l> 
</lg>
 <div type="altrec">
<lg xml:id="hp01_062_1">
 <l><s type="pada">sarvaśākamacākṣuṣyaṃ</s> <s type="pada">cakṣapyaṃ śākapañcakaṃ</s>/</l>
<l> <s type="pada">jīvantī vāstu matsyākṣī</s> <s type="pada">meghanādaḥ punarnavā</s>// 
</l> 
</lg>
</div> <div type="altrec">
<lg xml:id="hp01_062_2">
 <l> <s type="pada"> ca </s> <s type="pada"> ca punarnavā</s>/</l>
<l> <s type="pada"/> pañcaite <s type="pada"> <texteng>small (sic)</texteng>//</s> 
</l>
</lg>
</div> 
<lg xml:id="hp01_063">
 <l> <s type="pada">miṣṭaṃsumadhuraṃ snigdhaṃ gavyaṃ dhātuprapoṣaṇam/</s></l>
<l> <s type="pada">mano’bhilaṣitaṃ yogyaṃ yogī bhojanam ācaret//</s></l> 
</lg>
 
<lg xml:id="hp01_064">
 <l> <s type="pada">yuvā vṛddho’tivṛddho vā</s> <s type="pada">vyādhito durbalo’pi vā/</s></l>
<l> <s type="pada">abhyāsāt siddhim āpnoti</s> <s type="pada">sarvayogeṣv atandritaḥ//</s></l> 
</lg>
 
<lg xml:id="hp01_065">
 <l> <s type="pada">pīṭhāni kumbhakāś citrā</s> <s type="pada">divyāni karaṇāni ca/</s></l>
<l> <s type="pada">sarve py ayaṃ haṭhābhyāso</s> <s type="pada">rājayogaphalāvadhiḥ//</s></l> 
</lg>
 <div type="colophon" xml:id="hp01_col"><p> iti svātmārāmayogīndraviracitāyāṃ haṭhapradīpikāyāṃ  prathamopadeśaḥ// </p></div> 
